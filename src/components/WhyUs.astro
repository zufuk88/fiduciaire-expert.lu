---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle: string;
  metrics: Array<{
    value: string;
    label: string;
  }>;
  advantages: Array<{
    title: string;
    description: string;
  }>;
}

const { 
  title,
  subtitle,
  metrics,
  advantages
} = Astro.props;
---

<section class="why-us">
  <SectionTitle 
    title={title}
    subtitle={subtitle}
  />
  
  <div class="container">
    <div class="grid">
      {metrics.map((metric) => (
        <div class="card metric">
          <span class="value">{metric.value}</span>
          <span class="label">{metric.label}</span>
        </div>
      ))}
      
      {advantages.map((advantage) => (
        <div class="card">
          <h4>{advantage.title}</h4>
          <p>{advantage.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .why-us {
    padding: 120px 20px 140px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    row-gap: 40px;
  }

  .card {
    padding: 40px;
    background: #fafbfc;
    border: 1px solid #e5e7eb;
    border-radius: 2px;
    transition: all 0.2s ease;
  }

  .card:hover {
    background: #ffffff;
    border-color: #9ca3af;
  }

  .metric {
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    min-height: auto;
    border-left: 3px solid #1e3a5f;
    padding-left: 40px;
  }

  .value {
    font-family: var(--font-family-display);
    font-size: clamp(32px, 5vw, 42px);
    font-weight: 500;
    color: #1e3a5f;
    display: block;
    margin-bottom: 12px;
    line-height: 1;
  }

  .label {
    font-size: var(--font-h6);
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
  }

  h4 {
    font-size: var(--font-h3);
    font-weight: 600;
    color: #1e3a5f;
    margin: 0 0 16px 0;
    line-height: 1.3;
  }

  p {
    font-size: var(--font-body);
    line-height: 1.7;
    color: #525252;
    margin: 0;
  }

  @media (max-width: 768px) {
    .why-us {
      padding: 80px 20px 100px;
    }

    .grid {
      grid-template-columns: 1fr;
      gap: 24px;
      row-gap: 32px;
    }

    .metric {
      padding-left: 24px;
    }
  }

  @media (max-width: 480px) {
    .why-us {
      padding: 60px 16px 80px;
    }

    .card {
      padding: 28px;
    }
  }

  /* Support du mode sombre */
  @media (prefers-color-scheme: dark) {
    .why-us {
      background: #0f172a;
    }

    .card {
      background: #1e293b;
      border-color: #334155;
    }

    .card:hover {
      background: #263449;
      border-color: #475569;
    }

    .metric {
      border-left-color: #3b82f6;
    }

    .value {
      color: #f1f5f9;
    }

    .label {
      color: #94a3b8;
    }

    h4 {
      color: #f1f5f9;
    }

    p {
      color: #94a3b8;
    }
  }

  /* Support du mode sombre avec classe sur body */
  :global(body.dark) .why-us {
    background: #0f172a;
  }

  :global(body.dark) .card {
    background: #1e293b;
    border-color: #334155;
  }

  :global(body.dark) .card:hover {
    background: #263449;
    border-color: #475569;
  }

  :global(body.dark) .metric {
    border-left-color: #3b82f6;
  }

  :global(body.dark) .value {
    color: #f1f5f9;
  }

  :global(body.dark) .label {
    color: #94a3b8;
  }

  :global(body.dark) h4 {
    color: #f1f5f9;
  }

  :global(body.dark) p {
    color: #94a3b8;
  }

  /* Support du mode sombre avec attribut data-theme */
  :global([data-theme="dark"]) .why-us {
    background: #0f172a;
  }

  :global([data-theme="dark"]) .card {
    background: #1e293b;
    border-color: #334155;
  }

  :global([data-theme="dark"]) .card:hover {
    background: #263449;
    border-color: #475569;
  }

  :global([data-theme="dark"]) .metric {
    border-left-color: #3b82f6;
  }

  :global([data-theme="dark"]) .value {
    color: #f1f5f9;
  }

  :global([data-theme="dark"]) .label {
    color: #94a3b8;
  }

  :global([data-theme="dark"]) h4 {
    color: #f1f5f9;
  }

  :global([data-theme="dark"]) p {
    color: #94a3b8;
  }
</style>