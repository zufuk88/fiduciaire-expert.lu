---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle: string;
  metrics: Array<{
    value: string;
    label: string;
  }>;
  advantages: Array<{
    title: string;
    description: string;
  }>;
}

const { 
  title,
  subtitle,
  metrics,
  advantages
} = Astro.props;
---

<section class="why-us">
  <SectionTitle 
    title={title}
    subtitle={subtitle}
  />
  
  <div class="container">
    <div class="grid">
      {metrics.map((metric) => (
        <div class="card metric">
          <span class="value">{metric.value}</span>
          <span class="label">{metric.label}</span>
        </div>
      ))}
      
      {advantages.map((advantage) => (
        <div class="card">
          <h4>{advantage.title}</h4>
          <p>{advantage.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .why-us {
    padding: 120px 20px 140px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    row-gap: 40px;
  }

  .card {
    padding: 40px;
    background: #fafbfc;
    border: 1px solid #e5e7eb;
    border-radius: 2px;
    transition: all 0.2s ease;
  }

  .card:hover {
    background: #ffffff;
    border-color: #9ca3af;
  }

  .metric {
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    min-height: auto;
    border-left: 3px solid #1e3a5f;
    padding-left: 40px;
  }

  .value {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 42px;
    font-weight: 500;
    color: #1e3a5f;
    display: block;
    margin-bottom: 12px;
    line-height: 1;
  }

  .label {
    font-size: 13px;
    color: #525252;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
  }

  h4 {
    font-size: 18px;
    font-weight: 600;
    color: #1e3a5f;
    margin: 0 0 16px 0;
    line-height: 1.3;
  }

  p {
    font-size: 15px;
    line-height: 1.7;
    color: #525252;
    margin: 0;
  }

  @media (max-width: 768px) {
    .why-us {
      padding: 80px 20px 100px;
    }

    .grid {
      grid-template-columns: 1fr;
      gap: 24px;
      row-gap: 32px;
    }

    .metric {
      padding-left: 24px;
    }

    .value {
      font-size: 36px;
    }
  }

  @media (max-width: 480px) {
    .why-us {
      padding: 60px 16px 80px;
    }

    .card {
      padding: 28px;
    }

    .value {
      font-size: 32px;
    }

    h4 {
      font-size: 16px;
    }
  }
</style>