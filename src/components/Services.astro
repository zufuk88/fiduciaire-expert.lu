---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  services?: Array<{
    title: string;
    description?: string;
    href?: string;
    features?: string[];
    price?: string;
    content?: string | string[];
  }>;
  sections?: Array<{
    title: string;
    content?: string;
    items?: Array<{ label: string; value?: string }>;
    footer?: string;
  }>;
  categories?: Array<{
    badge: string;
    title: string;
    thresholds?: Array<{ label: string; value: string }>;
    requirementsTitle?: string;
    requirements: string[];
  }>;
  columns?: 2 | 3 | 4;
  variant?: 'grid' | 'cards' | 'list' | 'categories' | 'presentation' | 'highlight';
  highlightIcon?: string;
  highlightTitle?: string;
  highlightContent?: string;
  highlightNote?: string;
}

const {
  title,
  subtitle,
  services = [],
  sections = [],
  categories = [],
  columns = 3,
  variant = services.length > 0 ? 'grid' : sections.length > 0 ? 'list' : 'categories',
  highlightIcon,
  highlightTitle,
  highlightContent,
  highlightNote
} = Astro.props;
---

<section class="services">
  {(title || subtitle) && (
    <SectionTitle 
      title={title}
      subtitle={subtitle}
    />
  )}
  
  <div class="container">
    <div class={`grid grid-${columns}`}>
      {(variant === 'grid' || variant === 'cards') && services.map((service, index) => (
        service.href ? (
          <a href={service.href} class="card">
            <div class="card-icon">{index + 1}</div>
            <h3>{service.title}</h3>
            {service.description && <p>{service.description}</p>}
            {variant === 'cards' && service.features && (
              <ul class="features">
                {service.features.map(feature => (
                  <li>{feature}</li>
                ))}
              </ul>
            )}
            {variant === 'cards' && service.price && (
              <span class="price">{service.price}</span>
            )}
          </a>
        ) : (
          <div class="card">
            <div class="card-icon">{index + 1}</div>
            <h3>{service.title}</h3>
            {service.description && <p>{service.description}</p>}
            {variant === 'cards' && service.features && (
              <ul class="features">
                {service.features.map(feature => (
                  <li>{feature}</li>
                ))}
              </ul>
            )}
            {variant === 'cards' && service.price && (
              <span class="price">{service.price}</span>
            )}
          </div>
        )
      ))}
      
      {variant === 'list' && sections.map((section) => (
        <div class="card">
          <h3>{section.title}</h3>
          {section.content && <p>{section.content}</p>}
          {section.items && section.items.length > 0 && (
            <ul class="list">
              {section.items.map(item => (
                <li>
                  <span class="label">{item.label}</span>
                  {item.value && <span class="value">{item.value}</span>}
                </li>
              ))}
            </ul>
          )}
          {section.footer && (
            <div class="footer">{section.footer}</div>
          )}
        </div>
      ))}
      
      {variant === 'presentation' && services.map((service) => (
        <div class="card">
          <h3>{service.title}</h3>
          {Array.isArray(service.content) ? (
            <ul class="content-list">
              {service.content.map(item => (
                <li>{item}</li>
              ))}
            </ul>
          ) : (
            <p>{service.content || service.description}</p>
          )}
        </div>
      ))}
      
      {variant === 'highlight' && (
        <div class="highlight-box">
          <div class="highlight-content">
            {highlightTitle && <h3>{highlightTitle}</h3>}
            {highlightContent && <p>{highlightContent}</p>}
            {highlightNote && (
              <div class="highlight-note">
                <strong>Important :</strong> {highlightNote}
              </div>
            )}
          </div>
        </div>
      )}
      
      {variant === 'categories' && categories.map((category) => (
        <div class="card">
          <span class="badge">{category.badge}</span>
          <h3>{category.title}</h3>
          
          {category.thresholds && category.thresholds.length > 0 && (
            <div class="thresholds">
              {category.thresholds.map(threshold => (
                <div class="threshold">
                  <span class="label">{threshold.label}</span>
                  <span class="value">{threshold.value}</span>
                </div>
              ))}
            </div>
          )}
          
          {category.requirementsTitle && (
            <h4>{category.requirementsTitle}</h4>
          )}
          
          {category.requirements && category.requirements.length > 0 && (
            <ul class="list">
              {category.requirements.map(req => (
                <li>{req}</li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: 120px 20px 140px;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .grid {
    display: grid;
    gap: 32px;
    row-gap: 40px;
  }
  
  .grid-2 {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }
  
  .grid-3 {
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }
  
  .grid-4 {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
  
  .card {
    padding: 40px;
    background: #fafbfc;
    border: 1px solid #e5e7eb;
    border-radius: 2px;
    text-decoration: none;
    color: inherit;
    display: block;
    transition: all 0.2s ease;
  }
  
  .card:hover {
    background: #ffffff;
    border-color: #9ca3af;
    transform: translateY(-2px);
  }
  
  .card h3 {
    font-size: var(--font-h3);
    font-weight: 600;
    margin: 0 0 16px 0;
    color: #1e3a5f;
    line-height: 1.3;
  }
  
  a.card:hover h3 {
    color: #4b5563;
  }
  
  .card p {
    font-size: var(--font-body);
    line-height: 1.7;
    color: #525252;
    margin: 0;
  }
  
  .card-icon {
    width: 48px;
    height: 48px;
    background: #1e3a5f;
    color: #ffffff;
    border-radius: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-h3);
    font-weight: 600;
    margin-bottom: 20px;
  }
  
  .badge {
    display: inline-block;
    background: #f3f4f6;
    color: #374151;
    padding: 4px 8px;
    border-radius: 2px;
    font-size: var(--font-h6);
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .list {
    list-style: none;
    padding: 0;
    margin: 16px 0 0 0;
  }
  
  .list li {
    padding: 10px 0;
    border-bottom: 1px solid #f3f4f6;
    font-size: var(--font-body);
    color: #525252;
    line-height: 1.5;
  }
  
  .list li:last-child {
    border-bottom: none;
  }
  
  .label {
    font-weight: 600;
    color: #374151;
    margin-right: 8px;
  }
  
  .value {
    color: #6b7280;
  }
  
  .footer {
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid #f3f4f6;
    font-size: var(--font-h6);
    color: #9ca3af;
    line-height: 1.5;
  }
  
  .thresholds {
    background: #f9fafb;
    padding: 12px;
    margin: 16px 0;
    border-radius: 2px;
  }
  
  .threshold {
    display: flex;
    justify-content: space-between;
    padding: 6px 0;
  }
  
  .threshold:not(:last-child) {
    border-bottom: 1px solid #e5e7eb;
  }
  
  .threshold .label {
    font-size: var(--font-h6);
    color: #6b7280;
  }
  
  .threshold .value {
    font-size: var(--font-h6);
    font-weight: 600;
    color: #111827;
  }
  
  h4 {
    font-size: var(--font-h5);
    font-weight: 600;
    color: #4b5563;
    margin: 16px 0 8px 0;
  }
  
  .features {
    list-style: none;
    padding: 0;
    margin: 12px 0 16px 0;
  }
  
  .features li {
    position: relative;
    padding-left: 24px;
    margin-bottom: 10px;
    font-size: var(--font-h5);
    color: #525252;
    line-height: 1.5;
  }
  
  .features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: #10b981;
    font-weight: 600;
  }
  
  .price {
    display: inline-block;
    margin-top: 12px;
    padding: 6px 12px;
    background: #f3f4f6;
    border-radius: 2px;
    font-size: var(--font-h5);
    font-weight: 600;
    color: #374151;
  }
  
  .content-list {
    list-style: none;
    padding: 0;
    margin: 12px 0 0 0;
  }
  
  .content-list li {
    position: relative;
    padding: 12px 0 12px 28px;
    border-bottom: 1px solid #f3f4f6;
    font-size: var(--font-body);
    color: #525252;
    line-height: 1.7;
  }
  
  .content-list li:last-child {
    border-bottom: none;
  }
  
  .content-list li::before {
    content: '•';
    position: absolute;
    left: 8px;
    color: #9ca3af;
  }
  
  .highlight-box {
    grid-column: 1 / -1;
    padding: 24px;
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-left: 4px solid #3b82f6;
    border-radius: 2px;
  }
  
  .highlight-content h3 {
    font-size: var(--font-h4);
    color: #111827;
    margin: 0 0 12px 0;
  }
  
  .highlight-content p {
    font-size: var(--font-h5);
    color: #4b5563;
    line-height: 1.6;
    margin: 0 0 16px 0;
  }
  
  .highlight-note {
    padding: 12px;
    background: #fef3c7;
    border-left: 3px solid #f59e0b;
    border-radius: 2px;
    font-size: var(--font-h6);
    color: #92400e;
    line-height: 1.5;
  }
  
  .highlight-note strong {
    font-weight: 600;
    color: #78350f;
  }
  
  @media (max-width: 768px) {
    .services {
      padding: 80px 20px 100px;
    }
    
    .card {
      padding: 32px;
    }
    
    .grid {
      gap: 24px;
      row-gap: 32px;
    }
    
    .card {
      padding: 32px;
    }
    
    .card h3 {
      /* Les variables CSS clamp() gèrent déjà le responsive */
    }
    
    .card p {
      /* Les variables CSS clamp() gèrent déjà le responsive */
    }
  }
  
  @media (max-width: 480px) {
    .services {
      padding: 60px 16px 80px;
    }
    
    .card {
      padding: 28px;
    }
  }
</style>