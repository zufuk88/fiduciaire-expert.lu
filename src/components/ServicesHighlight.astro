---
export interface Props {
  sectionBadge?: string;
  title: string;
  subtitle: string;
  services: Array<{
    title: string;
    description: string;
    href: string;
  }>;
}

const { 
  sectionBadge,
  title,
  subtitle,
  services
} = Astro.props;

const sectionId = 'services';
const titleId = `${sectionId}-title`;
---

<section id={sectionId} aria-labelledby={titleId} class="services-highlight">
  <div class="container">
    <div class="section-header">
      {sectionBadge && <span class="section-badge">{sectionBadge}</span>}
      <h2 id={titleId}>{title}</h2>
      <p class="subtitle">{subtitle}</p>
    </div>
    <div class="services-grid">
      {services.map((service) => (
        <a href={service.href} class="service-card" aria-label={`En savoir plus sur ${service.title}`}>
          <article>
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </article>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .services-highlight {
    padding: 6rem 0;
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Header - EXACTEMENT comme BlogCarousel */
  .section-header {
    text-align: left;
    margin-bottom: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 2rem;
  }
  
  .section-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
    margin-bottom: 1rem;
    position: relative;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 300;
    color: #0f172a;
    margin-bottom: 1rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    position: relative;
    padding-bottom: 1.5rem;
  }
  
  h2::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    background: #3b82f6;
    margin: 1.5rem 0 0;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: none;
  }
  
  h2 strong {
    font-weight: 600;
  }

  .subtitle {
    font-size: 1.25rem;
    color: #64748b;
    line-height: 1.75;
    max-width: 600px;
    margin: 1rem 0 0 2.5rem;
    font-weight: 400;
    position: relative;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 100%;
    margin: 0;
  }
  
  /* Service Card Styles */
  .service-card {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }
  
  .service-card article {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    
    height: 100%;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }
  
  .service-card:hover article {
    
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    border-color: #3b82f6;
    background: linear-gradient(to bottom, #ffffff, #fafbfc);
  }
  
  
  .service-card h3 {
    font-size: 1.375rem;
    color: #0f172a;
    margin: 0 0 0.875rem 0;
    line-height: 1.3;
    font-weight: 600;
    transition: color 0.3s ease;
  }
  
  .service-card:hover h3 {
    color: #3b82f6;
  }
  
  .service-card p {
    color: #64748b;
    line-height: 1.7;
    flex-grow: 1;
    margin: 0;
    font-size: 1rem;
    transition: color 0.3s ease;
  }
  
  .service-card:hover p {
    color: #475569;
  }


  /* Responsive */
  @media (max-width: 768px) {
    .services-highlight {
      padding: 3rem 0;
    }
    
    .section-header {
      margin-bottom: 3rem;
      padding-left: 1rem;
    }
    
    h2 {
      font-size: 2rem;
    }
    
    .subtitle {
      font-size: 1.125rem;
      margin-left: 1.5rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .service-card article {
      padding: 1.5rem;
    }
    
    .service-card h3 {
      font-size: 1.125rem;
    }
    
    .service-card p {
      font-size: 0.9375rem;
    }
  }
  
</style>