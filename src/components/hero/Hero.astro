---
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  subtitle: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}

const { title, subtitle, ctaPrimary, ctaSecondary } = Astro.props;

// Ne garder que <strong> et <br> pour éviter l'injection HTML
function sanitizeHTML(html: string): string {
  return html.replace(/<(?!\/?strong|br\s*\/?)(?:[^>]*)>/gi, '');
}

const cleanTitle = sanitizeHTML(title);
const cleanSubtitle = sanitizeHTML(subtitle);

const actions = [
  ctaPrimary && { ...ctaPrimary, variant: 'primary' as const },
  ctaSecondary && { ...ctaSecondary, variant: 'secondary' as const },
].filter(Boolean) as Array<{ text: string; href: string; variant: 'primary' | 'secondary' }>;
---

<header class="hero">
  <div class="container">
    <div class="content">
      <h1 set:html={cleanTitle} />
      <p class="subtitle" set:html={cleanSubtitle} />
      {actions.length > 0 && (
        <div class="actions">
          {actions.map(({ href, text, variant }) => (
            <Button href={href} variant={variant} size="large">
              {text}
            </Button>
          ))}
        </div>
      )}
    </div>
  </div>
</header>

<style>
  .hero {
    min-height: calc(100vh - 80px);
    min-height: calc(100dvh - 80px);
    background: linear-gradient(135deg, #ffffff 0%, #f9f8f7 50%, #f3f2ef 100%);
    display: flex;
    align-items: center;
    padding: 80px 20px;
    margin-top: -20px;
  }

  .content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-family: var(--font-family-display);
    font-size: clamp(32px, 6vw, 64px);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 36px;
    color: #1e3a5f;
    letter-spacing: -0.01em;
  }

  .subtitle {
    margin: 0 auto 48px;
    color: #334155;
    font-size: clamp(18px, 2.5vw, 24px);
    line-height: 1.6;
  }

  .subtitle :global(strong) {
    font-weight: 600;
  }

  .subtitle :global(p:last-child) {
    margin-bottom: 0;
  }

  .actions {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 8px;
  }

  .actions > :global(*) {
    /* évite les boutons trop petits sur mobile */
    min-width: 140px;
    flex: 0 0 auto;
  }

  @media (max-width: 480px) {
    .hero {
      min-height: 70vh;
      min-height: 70dvh;
      padding: 40px 16px;
    }
    .actions > :global(*) {
      flex: 1 1 auto;
      max-width: 200px;
    }
  }

</style>