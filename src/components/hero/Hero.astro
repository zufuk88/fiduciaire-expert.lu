---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import heroImage from '../../assets/images/Fiduciaire-expert-Hero.jpg';

export interface Props {
  title: string;
  subtitle: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}
const { 
  title, 
  subtitle, 
  ctaPrimary,
  ctaSecondary
} = Astro.props;
---
<header class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-left">
        <h1 set:html={title} />
        <p class="hero-subtitle" set:html={subtitle} />
        {(ctaPrimary || ctaSecondary) && (
          <div class="hero-actions">
            {ctaPrimary && (
              <Button 
                href={ctaPrimary.href} 
                variant="primary" 
                size="large"
              >
                {ctaPrimary.text}
              </Button>
            )}
            {ctaSecondary && (
              <Button 
                href={ctaSecondary.href} 
                variant="outline" 
                size="large"
              >
                {ctaSecondary.text}
              </Button>
            )}
          </div>
        )}
      </div>
      <div class="hero-right">
        <Image 
          src={heroImage} 
          alt="Fiduciaire Expert Luxembourg - Services comptables et fiscaux"
          width={600}
          height={400}
          loading="eager"
          fetchpriority="high"
          quality="high"
          format="webp"
        />
      </div>
    </div>
  </div>
</header>
<style>
  .hero-section {
    padding: 100px 20px 140px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-content {
    display: flex;
    gap: clamp(48px, 6vw, 80px);
    align-items: center;
  }

  .hero-left {
    flex: 1;
    text-align: left;
  }

  .hero-right {
    flex: 1;
  }

  .hero-right :global(img) {
    width: 100%;
    height: auto;
    border-radius: 2px;
  }

  h1 {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 48px;
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 24px 0;
    color: #1e3a5f;
    letter-spacing: -0.01em;
  }

  .hero-subtitle {
    font-size: 18px;
    line-height: 1.65;
    margin: 0 0 36px 0;
    color: #374151;
    font-weight: 400;
  }
  
  .hero-subtitle :global(p) {
    margin: 0 0 16px 0;
  }
  
  .hero-subtitle :global(p:last-child) {
    margin-bottom: 0;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  /* Tablette paysage */
  @media (max-width: 1024px) {
    .hero-content {
      gap: 40px;
    }
    
    .hero-left {
      flex: 0 1 45%;
    }
    
    .hero-right {
      flex: 0 1 55%;
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 80px 20px 100px;
    }

    .hero-content {
      flex-direction: column;
      gap: 40px;
    }

    .hero-left {
      text-align: center;
    }

    h1 {
      font-size: 32px;
      margin: 0 0 22px 0;
    }

    .hero-subtitle {
      font-size: 16px;
      margin: 0 0 34px 0;
    }

    .hero-actions {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      padding: 60px 16px 80px;
    }

    h1 {
      font-size: 28px;
      margin: 0 0 22px 0;
    }

    .hero-subtitle {
      font-size: 15px;
    }

    .hero-actions {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .hero-actions > :global(*) {
      min-width: 140px;
      flex: 1 1 auto;
      max-width: 200px;
    }
  }
</style>