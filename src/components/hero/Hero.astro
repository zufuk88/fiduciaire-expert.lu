---
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  subtitle: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}
const { 
  title, 
  subtitle, 
  ctaPrimary,
  ctaSecondary
} = Astro.props;
---
<header class="hero-section">
  <div class="container">
    <div class="hero-content">
      <h1 set:html={title} />
      <p class="hero-subtitle" set:html={subtitle} />
      {(ctaPrimary || ctaSecondary) && (
        <div class="hero-actions">
          {ctaPrimary && (
            <Button 
              href={ctaPrimary.href} 
              variant="primary" 
              size="large"
            >
              {ctaPrimary.text}
            </Button>
          )}
          {ctaSecondary && (
            <Button 
              href={ctaSecondary.href} 
              variant="outline" 
              size="large"
            >
              {ctaSecondary.text}
            </Button>
          )}
        </div>
      )}
    </div>
  </div>
</header>
<style>
  .hero-section {
    min-height: calc(100vh - 80px); /* Compense la hauteur de la navbar */
    background: #fafbfc;
    display: flex;
    align-items: center;
    padding: 80px 20px;
    margin-top: -20px; /* Léger ajustement pour remonter le contenu */
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-family: var(--font-family-display);
    font-size: var(--font-hero);
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 28px 0;
    color: #1e3a5f;
    letter-spacing: -0.01em;
  }

  .hero-subtitle {
    font-size: var(--font-h4);
    line-height: 1.65;
    margin: 0 auto 40px;
    color: #374151;
    font-weight: 400;
    max-width: 600px;
  }
  
  .hero-subtitle :global(p) {
    margin: 0 0 16px 0;
  }
  
  .hero-subtitle :global(p:last-child) {
    margin-bottom: 0;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }


  @media (max-width: 768px) {
    .hero-section {
      min-height: 80vh;
      padding: 60px 20px;
    }

    h1 {
      /* Les variables CSS clamp() gèrent déjà le responsive */
      margin: 0 0 22px 0;
    }

    .hero-subtitle {
      /* Les variables CSS clamp() gèrent déjà le responsive */
      margin: 0 auto 34px;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      min-height: 70vh;
      padding: 40px 16px;
    }

    h1 {
      /* Les variables CSS clamp() gèrent déjà le responsive */
      margin: 0 0 22px 0;
    }

    .hero-subtitle {
      /* Les variables CSS clamp() gèrent déjà le responsive */
    }

    
    .hero-actions > :global(*) {
      min-width: 140px;
      flex: 1 1 auto;
      max-width: 200px;
    }
  }
</style>