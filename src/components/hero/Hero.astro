---
import Button from '../ui/Button.astro';
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  subtitle: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
  backgroundLogo?: ImageMetadata | string;
}

const { title, subtitle, ctaPrimary, ctaSecondary, backgroundLogo } = Astro.props;

// Ne garder que <strong> et <br> pour éviter l'injection HTML
function sanitizeHTML(html: string): string {
  return html.replace(/<(?!\/?strong|br\s*\/?)(?:[^>]*)>/gi, '');
}

const cleanTitle = sanitizeHTML(title);
const cleanSubtitle = sanitizeHTML(subtitle);

const actions = [
  ctaPrimary && { ...ctaPrimary, variant: 'primary' as const },
  ctaSecondary && { ...ctaSecondary, variant: 'secondary' as const },
].filter(Boolean) as Array<{ text: string; href: string; variant: 'primary' | 'secondary' }>;

const backgroundLogoUrl = typeof backgroundLogo === 'string' ? backgroundLogo : backgroundLogo?.src;
---

<section 
  class={`hero-section ${backgroundLogoUrl ? 'hero-section--branded' : ''}`}
  style={backgroundLogoUrl ? `--hero-logo: url("${backgroundLogoUrl}")` : undefined}
>
  <div class="container">
    <div class="hero-card">
      <h1 set:html={cleanTitle} />
      <p class="subtitle" set:html={cleanSubtitle} />
      {actions.length > 0 && (
        <div class="actions">
          {actions.map(({ href, text, variant }) => (
            <Button href={href} variant={variant} size="large">
              {text}
            </Button>
          ))}
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .hero-section {
    min-height: calc(100vh - 60px);
    min-height: calc(100dvh - 60px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--section-padding);
    margin-top: -20px;
    position: relative;
    overflow: hidden;
    background: var(--bg, #f5f7fa);
  }

  .container {
    max-width: 1000px; /* Plus large que les autres composants (800px) */
    margin: 0 auto;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  .hero-card {
    background: var(--white);
    border-radius: 16px; /* Radius plus grand pour un aspect plus imposant */
    padding: 80px; /* Padding généreux pour l'aération */
    box-shadow: 0 4px 20px var(--card-shadow-lg);
    text-align: center;
    width: 100%;
  }

  h1 {
    font-family: Arial, Helvetica, sans-serif;
    font-size: clamp(28px, 5vw, 48px); /* Réduit de 32-64px à 28-48px */
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 32px;
    color: #00695c;
    letter-spacing: -0.01em;
  }

  .subtitle {
    margin: 0 auto 40px;
    color: #333333;
    font-size: clamp(16px, 2vw, 20px); /* Réduit de 18-24px à 16-20px */
    line-height: 1.6;
  }

  .subtitle :global(strong) {
    font-weight: 600;
  }

  .subtitle :global(p:last-child) {
    margin-bottom: 0;
  }

  .actions {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 8px;
  }

  .actions > :global(*) {
    /* évite les boutons trop petits sur mobile */
    min-width: 140px;
    flex: 0 0 auto;
  }

  .hero-section--branded {
    padding: clamp(80px, 16vh, 140px) clamp(24px, 6vw, 120px);
    justify-content: flex-start;
    background: radial-gradient(circle at left top, rgba(255, 255, 255, 0.06) 0%, rgba(0, 105, 92, 0.12) 45%, rgba(0, 45, 39, 0.85) 100%);
  }

  .hero-section--branded::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, rgba(7, 79, 62, 0.92) 0%, rgba(0, 105, 92, 0.84) 40%, rgba(0, 65, 57, 0.9) 100%);
    z-index: 0;
  }

  .hero-section--branded::after {
    content: '';
    position: absolute;
    top: 50%;
    right: clamp(-120px, -10vw, -40px);
    transform: translateY(-50%) rotate(-6deg);
    width: clamp(220px, 32vw, 420px);
    aspect-ratio: 1 / 1;
    background-image: var(--hero-logo);
    background-size: 80%;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 32px;
    box-shadow:
      0 35px 70px rgba(0, 0, 0, 0.32),
      inset 0 0 0 1px rgba(255, 255, 255, 0.08);
    opacity: 0.2;
    z-index: 0;
    filter: saturate(1.1);
  }

  .hero-section--branded .container {
    max-width: 1120px;
    margin-right: auto;
    margin-left: 0;
  }

  .hero-section--branded .hero-card {
    text-align: left;
    padding: clamp(48px, 8vw, 88px);
    border: 1px solid rgba(0, 0, 0, 0.04);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
  }

  .hero-section--branded h1 {
    margin-bottom: 24px;
  }

  .hero-section--branded .subtitle {
    margin-left: 0;
    margin-right: 0;
    max-width: 640px;
  }

  .hero-section--branded .actions {
    justify-content: flex-start;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: var(--section-padding-tablet);
    }
    
    .hero-card {
      padding: 50px 40px;
    }
  }

  @media (max-width: 900px) {
    .hero-section--branded {
      padding: var(--section-padding-tablet);
    }

    .hero-section--branded::after {
      right: -140px;
      width: clamp(260px, 50vw, 340px);
      transform: translateY(-40%) rotate(-4deg);
      opacity: 0.18;
    }

    .hero-section--branded .container {
      margin: 0 auto;
    }

    .hero-section--branded .hero-card {
      text-align: center;
    }

    .hero-section--branded .actions {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      min-height: 70vh;
      min-height: 70dvh;
      padding: var(--section-padding-mobile);
    }
    
    .hero-card {
      padding: 40px 30px;
      border-radius: 12px;
    }
    .actions > :global(*) {
      flex: 1 1 auto;
      max-width: 200px;
    }

    .hero-section--branded::after {
      right: -120px;
      opacity: 0.16;
      width: clamp(220px, 60vw, 280px);
      transform: translateY(-30%) rotate(-2deg);
    }

    .hero-section--branded .hero-card {
      padding: 36px 26px;
    }
  }

</style>
