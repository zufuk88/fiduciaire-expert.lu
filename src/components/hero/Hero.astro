---
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  subtitle: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}

const { title, subtitle, ctaPrimary, ctaSecondary } = Astro.props;

// Ne garder que <strong> et <br> pour éviter l'injection HTML
function sanitizeHTML(html: string): string {
  return html.replace(/<(?!\/?strong|br\s*\/?)(?:[^>]*)>/gi, '');
}

const cleanTitle = sanitizeHTML(title);
const cleanSubtitle = sanitizeHTML(subtitle);

const actions = [
  ctaPrimary && { ...ctaPrimary, variant: 'primary' as const },
  ctaSecondary && { ...ctaSecondary, variant: 'secondary' as const },
].filter(Boolean) as Array<{ text: string; href: string; variant: 'primary' | 'secondary' }>;
---

<section class="hero-section">
  <div class="container">
    <div class="hero-card">
      <h1 set:html={cleanTitle} />
      <p class="subtitle" set:html={cleanSubtitle} />
      {actions.length > 0 && (
        <div class="actions">
          {actions.map(({ href, text, variant }) => (
            <Button href={href} variant={variant} size="large">
              {text}
            </Button>
          ))}
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .hero-section {
    min-height: calc(100vh - 60px);
    min-height: calc(100dvh - 60px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--section-padding);
    margin-top: -20px;
  }

  .container {
    max-width: 1000px; /* Plus large que les autres composants (800px) */
    margin: 0 auto;
    width: 100%;
  }

  .hero-card {
    background: var(--white);
    border-radius: 16px; /* Radius plus grand pour un aspect plus imposant */
    padding: 80px; /* Padding généreux pour l'aération */
    box-shadow: 0 4px 20px var(--card-shadow-lg);
    text-align: center;
    width: 100%;
  }

  h1 {
    font-family: Arial, Helvetica, sans-serif;
    font-size: clamp(28px, 5vw, 48px); /* Réduit de 32-64px à 28-48px */
    font-weight: 500;
    line-height: 1.2;
    margin: 0 0 32px;
    color: #00695c;
    letter-spacing: -0.01em;
  }

  .subtitle {
    margin: 0 auto 40px;
    color: #333333;
    font-size: clamp(16px, 2vw, 20px); /* Réduit de 18-24px à 16-20px */
    line-height: 1.6;
  }

  .subtitle :global(strong) {
    font-weight: 600;
  }

  .subtitle :global(p:last-child) {
    margin-bottom: 0;
  }

  .actions {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 8px;
  }

  .actions > :global(*) {
    /* évite les boutons trop petits sur mobile */
    min-width: 140px;
    flex: 0 0 auto;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: var(--section-padding-tablet);
    }
    
    .hero-card {
      padding: 50px 40px;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      min-height: 70vh;
      min-height: 70dvh;
      padding: var(--section-padding-mobile);
    }
    
    .hero-card {
      padding: 40px 30px;
      border-radius: 12px;
    }
    .actions > :global(*) {
      flex: 1 1 auto;
      max-width: 200px;
    }
  }

</style>
