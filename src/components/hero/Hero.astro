---
import { Image } from 'astro:assets';
import heroImage from '../../assets/images/Fiduciaire-expert-Hero.jpg';
import Button from '../ui/Button.astro';
export interface Props {
  badge?: string;
  title: string;
  subtitle: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
  showImageOnMobile?: boolean;
}
const { 
  badge,
  title, 
  subtitle, 
  ctaPrimary,
  ctaSecondary,
  showImageOnMobile = false
} = Astro.props;
---
<header class="hero-section" aria-labelledby="hero-title">
  <!-- Image de fond optimisée -->
  <div 
    class="hero-background" 
    role="presentation"
  >
    <Image 
      src={heroImage} 
      alt=""
      width={1920}
      height={1080}
      quality="mid"
      class="hero-bg-image"
    />
  </div>
  <div class="container">
    <div class="hero-content">
      {badge && (
        <span class="hero-badge">{badge}</span>
      )}
      <h1 id="hero-title" set:html={title} />
      <p class="hero-subtitle" set:html={subtitle} />
      {(ctaPrimary || ctaSecondary) && (
        <div class="hero-actions">
          {ctaPrimary && (
            <Button 
              href={ctaPrimary.href} 
              variant="primary" 
              size="large"
            >
              {ctaPrimary.text}
            </Button>
          )}
          {ctaSecondary && (
            <Button 
              href={ctaSecondary.href} 
              variant="outline" 
              size="large"
            >
              {ctaSecondary.text}
            </Button>
          )}
        </div>
      )}
    </div>
  </div>
</header>
<style>
  .hero-section {
    min-height: 85vh;
    display: flex;
    align-items: center;
    background: #ffffff;
    position: relative;
    overflow: hidden;
    padding: 8rem 0 6rem;
  }
  /* Image de fond subtile avec overlay */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
    opacity: 0.06; /* Subtile mais visible pour ajouter de la texture */
  }
  .hero-background::after {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(147, 197, 253, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }
  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: grayscale(100%) contrast(1.1);
  }
  .container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
  }
  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    position: relative;
  }
  /* Badge moderne avec accent */
  .hero-badge {
    font-size: 0.875rem;
    font-weight: 600;
    color: #3b82f6;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(96, 165, 250, 0.05));
    display: inline-block;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    margin-bottom: 2.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
  /* Titre principal avec impact */
  .hero-section h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.2;
    color: #0f172a;
    margin-bottom: 2rem;
    padding-bottom: 0.25rem;
    letter-spacing: -0.04em;
    background: linear-gradient(135deg, #0f172a 0%, #334155 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  /* Sous-titre élégant */
  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.7;
    color: #64748b;
    margin: 0 auto 3.5rem;
    font-weight: 400;
    max-width: 680px;
    position: relative;
  }
  
  /* Accent visuel sous le titre */
  .hero-content::before {
    content: '';
    position: absolute;
    top: -3rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #60a5fa);
    border-radius: 2px;
  }
  /* Actions CTA avec espace moderne */
  .hero-actions {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    position: relative;
  }
  /* Tablet */
  @media (max-width: 1024px) {
    .hero-section {
      min-height: 70vh;
      padding: 6rem 0 4rem;
    }
    .hero-content {
      max-width: 700px;
    }
    .hero-section h1 {
      font-size: 2.5rem;
    }
    .hero-subtitle {
      font-size: 1.125rem;
    }
  }
  /* Mobile */
  @media (max-width: 768px) {
    .hero-section {
      min-height: auto;
      padding: 3rem 0;
    }
    .container {
      padding: 0 1.5rem;
    }
    .hero-badge {
      font-size: 0.75rem;
      padding: 0.375rem 1rem;
      margin-bottom: 2rem;
    }
    .hero-section h1 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }
    .hero-subtitle {
      font-size: 1rem;
      margin-bottom: 2.5rem;
    }
    .hero-actions {
      gap: 1rem;
    }
  }
  /* Petits mobiles */
  @media (max-width: 480px) {
    .hero-section {
      padding: 2.5rem 0;
    }
    .container {
      padding: 0 1rem;
    }
    .hero-actions {
      flex-direction: column;
      width: 100%;
    }
    .hero-actions :global(.button) {
      width: 100%;
      justify-content: center;
    }
  }
  /* Mode haute résolution */
  @media (min-width: 1536px) {
    .container {
      max-width: 1400px;
    }
    .hero-section {
      min-height: 90vh;
    }
  }
</style>