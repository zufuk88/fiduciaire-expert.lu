---
export interface Props {
  title: string;
  subtitle?: string;
  services: (string | { text: string; href: string })[];
}

const { title, subtitle, services } = Astro.props;
---

<section class="services-section">
  <div class="container">
    <div class="services-card">
      <h2 class="services-title">{title}</h2>
      {subtitle && <p class="services-subtitle">{subtitle}</p>}
      <ul class="services-list">
        {services.map((service) => (
          <li class="service-item">
            {typeof service === 'string' ? (
              service
            ) : (
              <a href={service.href}>{service.text}</a>
            )}
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
  .services-section {
    padding: var(--section-padding);
    width: 100%;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .services-card {
    background: var(--white);
    border-radius: 12px;
    padding: var(--card-padding);
    box-shadow: 0 2px 8px var(--card-shadow-hover);
  }

  .services-title {
    font-family: var(--font-family);
    font-size: var(--card-title);
    font-weight: 500;
    color: var(--accent);
    text-align: center;
    margin-bottom: 16px;
  }

  .services-subtitle {
    font-family: var(--font-family);
    font-size: var(--card-subtitle);
    color: var(--fg-secondary);
    text-align: center;
    margin-bottom: 48px;
    line-height: 1.6;
  }

  .services-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-item {
    font-family: var(--font-family);
    font-size: var(--text-lg);
    color: var(--fg);
    padding: 16px 0;
    border-bottom: 1px solid var(--card-border);
    line-height: 1.6;
  }

  .service-item:last-child {
    border-bottom: none;
  }

  .service-item:hover {
    color: var(--accent);
    transition: color 0.3s ease;
  }

  .service-item a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .service-item a:hover {
    color: var(--accent);
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .services-section {
      padding: var(--section-padding-tablet);
    }

    .services-card {
      padding: var(--card-padding-tablet);
    }

    .services-title {
      font-size: var(--card-title-mobile);
    }

    .services-subtitle {
      font-size: var(--card-subtitle-mobile);
      margin-bottom: 36px;
    }

    .service-item {
      font-size: var(--text-base);
      padding: 14px 0;
    }
  }

  @media (max-width: 480px) {
    .services-section {
      padding: var(--section-padding-mobile);
    }
    
    .services-card {
      padding: var(--card-padding-mobile);
    }

    .service-item {
      font-size: var(--text-base-mobile);
      padding: 12px 0;
    }
  }
</style>