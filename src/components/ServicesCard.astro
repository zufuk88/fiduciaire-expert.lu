---
export interface Props {
  title: string;
  shortTitle?: string;
  description: string;
  icon?: string;
  features?: string[];
  price?: string;
  slug?: string;
  href?: string;
  accent?: 'blue' | 'gray' | 'gold';
}

const { 
  title,
  shortTitle,
  description, 
  icon,
  features = [],
  price,
  slug,
  href,
  accent = 'blue'
} = Astro.props;

const displayTitle = shortTitle || title;
const isEnglish = Astro.url.pathname.includes('/en/');
const ctaHref = slug ? `/${isEnglish ? 'en' : 'fr'}/contact?service=${slug}` : `/${isEnglish ? 'en' : 'fr'}/contact`;
const ctaText = isEnglish ? "Get Quote" : "Obtenir un devis";
const ctaAriaLabel = isEnglish ? `Get a quote for ${displayTitle}` : `Obtenir un devis pour ${displayTitle}`;
const iconAriaLabel = isEnglish ? `${displayTitle} service icon` : `Icône du service ${displayTitle}`;
const titleHref = href ? (isEnglish ? href.replace('/fr/', '/en/') : href) : null;
---

<article class={`service-card accent-${accent}`} itemscope itemtype="https://schema.org/Service">
  {icon && (
    <div class="card-icon" role="img" aria-label={iconAriaLabel} set:html={icon} />
  )}
  
  <div class="card-content">
    <h3 class="card-title" itemprop="name">
      {titleHref ? (
        <a href={titleHref} class="title-link">{displayTitle}</a>
      ) : (
        displayTitle
      )}
    </h3>
    <p class="card-description" itemprop="description">{description}</p>
    
    {features.length > 0 && (
      <ul class="card-features">
        {features.map((feature: string) => (
          <li itemprop="serviceType">{feature}</li>
        ))}
      </ul>
    )}
    
    {price && (
      <div class="card-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <span itemprop="price">{price}</span>
        <meta itemprop="priceCurrency" content="EUR" />
      </div>
    )}
    
    <a href={ctaHref} class="card-cta" aria-label={ctaAriaLabel} itemprop="url">
      {ctaText}
    </a>
  </div>
</article>

<style>
  .service-card {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    
    position: relative;
    overflow: hidden;
  }
  
  .service-card:hover {
    
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    border-color: #cbd5e1;
  }
  
  
  /* Icon */
  .card-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1.5rem;
    color: #64748b;
    transition: color 0.3s ease;
  }
  
  .service-card:hover .card-icon {
    color: #2c4157;
  }
  
  .card-icon :global(svg) {
    width: 32px;
    height: 32px;
  }
  
  /* Content */
  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .card-title {
    font-size: 1.25rem;
    font-weight: 500;
    color: #0f172a;
    margin: 0 0 1rem 0;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }
  
  .title-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .title-link:hover {
    color: #3b82f6;
  }
  
  .card-description {
    color: #64748b;
    line-height: 1.75;
    margin: 0 0 1.5rem 0;
    font-size: 1rem;
    font-weight: 400;
  }
  
  /* Features */
  .card-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .card-features li {
    position: relative;
    padding-left: 1.75rem;
    font-size: 0.9375rem;
    color: #475569;
    line-height: 1.5;
  }
  
  .card-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    top: 0;
    width: 20px;
    height: 20px;
    background: #dbeafe;
    color: #3b82f6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: bold;
  }
  
  /* Price */
  .card-price {
    font-size: 1rem;
    font-weight: 600;
    color: #0f172a;
    margin: auto 0 1.5rem 0;
    padding-top: 1rem;
    border-top: 1px solid #e2e8f0;
  }
  
  /* CTA */
  .card-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background: #dbeafe;
    color: #2c4157;
    border-radius: 4px;
    font-weight: 500;
    text-decoration: none;
    
    align-self: flex-start;
  }
  
  .card-cta:hover {
    background: #2c4157;
    color: white;
    
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .service-card {
      padding: 1.5rem;
    }
    
    .card-title {
      font-size: 1.25rem;
    }
    
    .card-description {
      font-size: 0.9375rem;
    }
    
    .card-features li {
      font-size: 0.875rem;
    }
  }
</style>