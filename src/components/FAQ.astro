<script>
  document.addEventListener('DOMContentLoaded', () => {
    const accordions = document.querySelectorAll('.faq-item');
    const categoryFilters = document.querySelectorAll('.category-filter');
    const helpfulBtns = document.querySelectorAll('.helpful-btn');

    // Accordion functionality with auto-close
    accordions.forEach(accordion => {
      accordion.addEventListener('toggle', () => {
        if (accordion.open) {
          accordions.forEach(otherAccordion => {
            if (otherAccordion !== accordion && otherAccordion.open) {
              otherAccordion.open = false;
            }
          });
        }
      });
    });

    // Category filtering
    categoryFilters.forEach(filter => {
      filter.addEventListener('click', () => {
        const category = filter.dataset.category;
        
        // Update active filter
        categoryFilters.forEach(f => f.classList.remove('active'));
        filter.classList.add('active');
        
        // Filter FAQ items
        accordions.forEach(accordion => {
          if (category === 'all' || accordion.dataset.category === category) {
            accordion.style.display = 'block';
            accordion.style.animation = 'fadeInUp 0.5s ease-out';
          } else {
            accordion.style.display = 'none';
          }
        });
      });
    });

    // Helpful buttons functionality
    helpfulBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const isHelpful = btn.dataset.helpful === 'yes';
        const faqItem = btn.closest('.faq-item');
        const questionId = faqItem?.querySelector('.faq-question')?.textContent?.slice(0, 50);
        
        // Visual feedback
        btn.style.background = isHelpful ? 'var(--color-success)' : 'var(--color-warning)';
        btn.style.color = 'white';
        btn.style.transform = 'scale(0.95)';
        
        setTimeout(() => {
          btn.style.transform = 'scale(1)';
        }, 150);
        
        // Analytics (could be sent to your analytics service)
        console.log(`FAQ Feedback: ${questionId} - ${isHelpful ? 'Helpful' : 'Not helpful'}`);
      });
    });

    // Search functionality (bonus)
    const searchInput = document.createElement('input');
    searchInput.type = 'search';
    searchInput.placeholder = '🔍 Rechercher dans les FAQ...';
    searchInput.className = 'faq-search';
    
    const searchStyle = document.createElement('style');
    searchStyle.textContent = `
      .faq-search {
        width: 100%;
        max-width: 400px;
        padding: 1rem 1.5rem;
        border: 2px solid var(--color-border);
        border-radius: 99px;
        font-size: 1rem;
        margin: 2rem auto;
        display: block;
        transition: var(--transition);
      }
      .faq-search:focus {
        outline: none;
        border-color: var(--color-gold);
        box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
      }
    `;
    
    document.head.appendChild(searchStyle);
    document.querySelector('.faq-categories').parentNode.insertBefore(searchInput, document.querySelector('.faq-categories'));
    
    searchInput.addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase();
      
      accordions.forEach(accordion => {
        const questionText = accordion.querySelector('.faq-question').textContent.toLowerCase();
        const answerText = accordion.querySelector('.answer-content').textContent.toLowerCase();
        
        if (questionText.includes(searchTerm) || answerText.includes(searchTerm) || searchTerm === '') {
          accordion.style.display = 'block';
        } else {
          accordion.style.display = 'none';
        }
      });
    });
  });
</script>
