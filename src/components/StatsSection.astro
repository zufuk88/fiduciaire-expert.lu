---
export interface Props {
  stats: Array<{
    number: string;
    label: string;
  }>;
  backgroundColor?: string;
}

const { stats, backgroundColor } = Astro.props;
---

<section class="stats-section" aria-label="Nos chiffres clÃ©s" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <div class="container">
    <div class="stats-grid">
      {stats.map(stat => (
        <div class="stat-item">
          <span class="stat-number">{stat.number}</span>
          <span class="stat-label">{stat.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .stat-item {
    text-align: center;
    padding: 2rem 1.5rem;
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .stat-item:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    border-color: #cbd5e1;
  }

  .stat-number {
    display: block;
    font-size: 3rem;
    font-weight: 300;
    color: #2c4157;
    line-height: 1;
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .stat-label {
    color: #64748b;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  /* Responsive - Tablette */
  @media (max-width: 768px) {
    .stats-section {
      padding: 3rem 0;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .stat-item {
      padding: 1.5rem 1rem;
    }

    .stat-number {
      font-size: 2.5rem;
    }
  }
  
  /* Responsive - Mobile */
  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .stat-item {
      padding: 1.25rem 1rem;
    }

    .stat-number {
      font-size: 2rem;
    }
    
    .stat-label {
      font-size: 0.875rem;
    }
  }
</style>