---
export interface Benefit {
  icon: string;
  title: string;
  description: string;
}

export interface Props {
  benefits: Benefit[];
  columns?: 2 | 3 | 4;
}

const { 
  benefits,
  columns = 3
} = Astro.props;
---

<section class="service-benefits">
  <div class="container">
    <div class={`benefits-grid benefits-grid--cols-${columns}`}>
      {benefits.map((benefit) => (
        <div class="benefit-card">
          <div class="benefit-icon">
            <i class={benefit.icon}></i>
          </div>
          <h3 class="benefit-title">{benefit.title}</h3>
          <p class="benefit-description">{benefit.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .service-benefits {
    padding: 4rem 0;
    background: #ffffff;
  }

  .benefits-grid {
    display: grid;
    gap: 2rem;
  }

  .benefits-grid--cols-2 {
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }

  .benefits-grid--cols-3 {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .benefits-grid--cols-4 {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .benefit-card {
    text-align: center;
    padding: 2rem;
    border-radius: 12px;
    background: #f8fafc;
    transition: all 0.3s;
  }

  .benefit-card:hover {
    transform: translateY(-4px);
    background: #f1f5f9;
  }

  .benefit-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .benefit-icon i {
    font-size: 28px;
    color: white;
  }

  .benefit-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.75rem;
  }

  .benefit-description {
    font-size: 0.95rem;
    color: #64748b;
    line-height: 1.6;
  }

  /* Dark mode */
  :global(body.dark) .service-benefits,
  :global([data-theme="dark"]) .service-benefits {
    background: #0f172a;
  }

  :global(body.dark) .benefit-card,
  :global([data-theme="dark"]) .benefit-card {
    background: #1e293b;
  }

  :global(body.dark) .benefit-card:hover,
  :global([data-theme="dark"]) .benefit-card:hover {
    background: #263449;
  }

  :global(body.dark) .benefit-title,
  :global([data-theme="dark"]) .benefit-title {
    color: #f1f5f9;
  }

  :global(body.dark) .benefit-description,
  :global([data-theme="dark"]) .benefit-description {
    color: #94a3b8;
  }

  @media (prefers-color-scheme: dark) {
    .service-benefits {
      background: #0f172a;
    }
    
    .benefit-card {
      background: #1e293b;
    }
    
    .benefit-card:hover {
      background: #263449;
    }
    
    .benefit-title {
      color: #f1f5f9;
    }
    
    .benefit-description {
      color: #94a3b8;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .service-benefits {
      padding: 3rem 0;
    }
    
    .benefits-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .benefit-card {
      padding: 1.5rem;
    }
  }
</style>