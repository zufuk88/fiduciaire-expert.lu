---
import { Image } from 'astro:assets';

export interface Props {
  title: string;
  paragraphs: string[];
  image: ImageMetadata;
  imageAlt: string;
  imagePosition?: 'left' | 'right';
  backgroundColor?: string;
}

const { 
  title, 
  paragraphs, 
  image, 
  imageAlt, 
  imagePosition = 'right',
  backgroundColor 
} = Astro.props;
---

<section class="story-section" aria-labelledby="story-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <div class="container">
    <div class={`story-grid ${imagePosition === 'left' ? 'image-left' : ''}`}>
      <div class="story-content">
        <h2 id="story-title">{title}</h2>
        <div class="story-text">
          {paragraphs.map(paragraph => (
            <p set:html={paragraph}></p>
          ))}
        </div>
      </div>
      
      <div class="story-image">
        <Image 
          src={image}
          alt={imageAlt}
          width={600}
          height={400}
          loading="lazy"
          quality="high"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .story-section {
    padding: 5rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    gap: 5rem;
    align-items: center;
  }

  .story-grid.image-left {
    grid-template-columns: 1fr 1.1fr;
  }

  .story-grid.image-left .story-image {
    order: -1;
  }

  .story-content h2 {
    font-size: 2.25rem;
    font-weight: 300;
    color: #2c4157;
    margin-bottom: 2.5rem;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .story-content h2::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    background: #3b82f6;
    margin-top: 1.5rem;
  }

  .story-text p {
    color: #64748b;
    line-height: 1.75;
    margin-bottom: 1.25rem;
    font-size: 0.9375rem;
    font-weight: 400;
  }

  .story-text p:last-child {
    margin-bottom: 0;
  }

  .story-text :global(strong) {
    color: #2c4157;
    font-weight: 600;
  }

  .story-image {
    position: relative;
  }

  .story-image::before {
    content: '';
    position: absolute;
    top: -1rem;
    left: -1rem;
    right: 1rem;
    bottom: 1rem;
    background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
    border-radius: 4px;
    z-index: -1;
  }

  .story-image img {
    width: 100%;
    height: auto;
    border-radius: 4px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .story-grid,
    .story-grid.image-left {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .story-grid.image-left .story-image {
      order: 0;
    }

    .story-image::before {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .story-section {
      padding: 3.5rem 0;
    }

    .story-content h2 {
      font-size: 1.875rem;
      margin-bottom: 2rem;
    }

    .story-content h2::after {
      margin-top: 1.25rem;
    }

    .story-text p {
      font-size: 0.875rem;
    }
  }
</style>