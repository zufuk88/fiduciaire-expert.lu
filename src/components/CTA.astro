---
import ctaImage from '../assets/images/Fiduciaire-expert-Hero.jpg';

export interface Props {
  title: string;
  subtitle: string;
  buttonText: string;
  buttonHref: string;
  trustIndicators?: Array<{
    icon: string;
    text: string;
  }>;
}

const { 
  title,
  subtitle,
  buttonText,
  buttonHref,
  trustIndicators = []
} = Astro.props;
---

<section id="cta" class="cta-section" aria-labelledby="cta-title">
  <div class="container">
    <div class="cta-content">
      <div class="cta-text">
        <h2 id="cta-title" class="cta-title">{title}</h2>
        <p class="cta-subtitle">{subtitle}</p>
        
        {trustIndicators.length > 0 && (
          <div class="trust-indicators">
            {trustIndicators.map(indicator => (
              <div class="trust-item">
                <span class="trust-icon" set:html={indicator.icon} />
                <span class="trust-text">{indicator.text}</span>
              </div>
            ))}
          </div>
        )}
      </div>
      
      <div class="cta-action">
        <a href={buttonHref} class="cta-button">
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  
  .cta-section {
    position: relative;
    padding: 2.5rem 0;
    background: linear-gradient(135deg, #1a2332 0%, #1e293b 100%);
    overflow: hidden;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  /* Subtle pattern overlay */
  .cta-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
    z-index: 1;
  }
  
  /* Container */
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }
  
  /* Content - Horizontal layout */
  .cta-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 3rem;
  }
  
  .cta-text {
    flex: 1;
    text-align: left;
  }
  
  .cta-title {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 400;
    color: #ffffff;
    margin-bottom: 0.75rem;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }
  
  .cta-subtitle {
    font-size: clamp(1.125rem, 1.25vw, 1.25rem);
    color: #cbd5e1;
    line-height: 1.65;
    margin: 0 0 1.5rem 0;
    font-weight: 400;
  }
  
  /* Trust Indicators */
  .trust-indicators {
    display: flex;
    gap: 2rem;
    margin-top: 1.5rem;
  }
  
  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #94a3b8;
    font-size: 0.875rem;
  }
  
  .trust-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .trust-icon :global(svg) {
    width: 20px;
    height: 20px;
    stroke: currentColor;
  }
  
  .trust-text {
    font-weight: 500;
  }
  
  /* CTA Action */
  .cta-action {
    flex-shrink: 0;
  }
  
  /* CTA Button */
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #ffffff;
    color: #1a2332;
    padding: 1rem 2.25rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
    letter-spacing: 0.01em;
    box-shadow: 0 2px 8px rgba(255, 255, 255, 0.15);
    white-space: nowrap;
  }
  
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 255, 255, 0.25);
    background-color: #f8fafc;
  }
  
  .cta-button:active {
    transform: translateY(0);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .cta-section {
      padding: 2rem 0;
    }
    
    .cta-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }
    
    .cta-text {
      text-align: center;
    }
    
    .cta-title {
      font-size: 1.75rem;
    }
    
    .cta-subtitle {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
    
    .trust-indicators {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }
    
    .cta-button {
      padding: 0.875rem 1.75rem;
      font-size: 0.9375rem;
    }
  }
  
  @media (max-width: 480px) {
    .trust-indicators {
      width: 100%;
    }
    
    .trust-item {
      justify-content: center;
    }
  }
</style>