---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle?: string;
  testimonials: Array<{
    content: string;
    author: string;
    role?: string;
    rating?: number;
  }>;
  backgroundColor?: string;
}
const { title, subtitle, testimonials, backgroundColor } = Astro.props;
---
<section class="testimonials-section" aria-labelledby="testimonials-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <SectionTitle 
    title={title}
    subtitle={subtitle}
    id="testimonials-title"
  />
  <div class="container">
    <div class="testimonials-grid">
      {testimonials.map(testimonial => (
        <div class="testimonial-card">
          {testimonial.rating && (
            <div class="testimonial-rating">
              {[...Array(5)].map((_, i) => (
                <svg 
                  width="16" 
                  height="16" 
                  viewBox="0 0 24 24" 
                  fill={i < (testimonial.rating || 0) ? "#fbbf24" : "none"} 
                  stroke={i < (testimonial.rating || 0) ? "#fbbf24" : "#e2e8f0"}
                  stroke-width="2"
                >
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              ))}
            </div>
          )}
          <div class="testimonial-content">
            <p>"{testimonial.content}"</p>
          </div>
          <div class="testimonial-author">
            <strong>{testimonial.author}</strong>
            {testimonial.role && <span>{testimonial.role}</span>}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
<style>
  .testimonials-section {
    padding: 120px 20px 140px;
  }
  
  @media (max-width: 768px) {
    .testimonials-section {
      padding: 80px 20px 100px;
    }
  }
  
  @media (max-width: 480px) {
    .testimonials-section {
      padding: 60px 16px 80px;
    }
  }
  
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }
  .testimonial-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 2px;
    padding: 30px;
    position: relative;
    display: flex;
    flex-direction: column;
  }
  .testimonial-card:hover {
    border-color: #9ca3af;
  }
  .testimonial-rating {
    display: flex;
    gap: 4px;
    margin-bottom: 16px;
  }
  .testimonial-rating svg {
    width: 16px;
    height: 16px;
  }
  .testimonial-content {
    flex: 1;
    margin-bottom: 20px;
  }
  .testimonial-content p {
    color: #6b7280;
    line-height: 1.6;
    font-size: 14px;
    margin: 0;
  }
  .testimonial-author {
    padding-top: 16px;
    border-top: 1px solid #e5e7eb;
    margin-top: auto;
  }
  .testimonial-author strong {
    display: block;
    color: #111827;
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 4px;
  }
  .testimonial-author span {
    font-size: 12px;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  @media (max-width: 768px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .testimonial-card {
      padding: 24px;
    }
  }
  
  @media (max-width: 480px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
    .testimonial-card {
      padding: 1.5rem 1.25rem;
    }
  }
</style>