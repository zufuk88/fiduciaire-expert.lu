---
export interface Props {
  title: string;
  subtitle?: string;
  testimonials: Array<{
    content: string;
    author: string;
    role?: string;
    rating?: number;
  }>;
  backgroundColor?: string;
}

const { title, subtitle, testimonials, backgroundColor } = Astro.props;
---

<section class="testimonials-section" aria-labelledby="testimonials-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <div class="container">
    <div class="section-header">
      <h2 id="testimonials-title">{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </div>
    
    <div class="testimonials-grid">
      {testimonials.map(testimonial => (
        <div class="testimonial-card">
          {testimonial.rating && (
            <div class="testimonial-rating">
              {[...Array(5)].map((_, i) => (
                <svg 
                  width="16" 
                  height="16" 
                  viewBox="0 0 24 24" 
                  fill={i < (testimonial.rating || 0) ? "#fbbf24" : "none"} 
                  stroke={i < (testimonial.rating || 0) ? "#fbbf24" : "#e2e8f0"}
                  stroke-width="2"
                >
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              ))}
            </div>
          )}
          <div class="testimonial-content">
            <p>"{testimonial.content}"</p>
          </div>
          <div class="testimonial-author">
            <strong>{testimonial.author}</strong>
            {testimonial.role && <span>{testimonial.role}</span>}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 5rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: left;
    margin-bottom: 3.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 2rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 300;
    color: #2c4157;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    line-height: 1.2;
    position: relative;
    padding-bottom: 1.5rem;
  }

  .section-header h2::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    background: #3b82f6;
    margin: 1.5rem 0 0;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: none;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #64748b;
    line-height: 1.75;
    max-width: 600px;
    margin: 1rem 0 0 2.5rem;
    font-weight: 400;
    position: relative;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: #ffffff;
    border: 1px solid #2c4157;
    border-radius: 4px;
    padding: 2.5rem 2rem;
    position: relative;
    
  }

  .testimonial-card::before {
    content: '"';
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    font-size: 3rem;
    line-height: 1;
    color: #3b82f6;
    opacity: 0.2;
    font-family: Georgia, serif;
  }

  .testimonial-card:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    
    border-color: #3b82f6;
  }

  .testimonial-rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1.25rem;
    padding-left: 2.5rem;
  }

  .testimonial-rating svg {
    width: 14px;
    height: 14px;
  }

  .testimonial-content {
    margin-bottom: 1.75rem;
    padding-left: 2.5rem;
  }

  .testimonial-content p {
    color: #64748b;
    line-height: 1.65;
    font-size: 0.9375rem;
    font-style: normal;
    font-weight: 400;
  }

  .testimonial-author {
    padding-left: 2.5rem;
    padding-top: 1.25rem;
    border-top: 1px solid #e2e8f0;
  }

  .testimonial-author strong {
    display: block;
    color: #2c4157;
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
    letter-spacing: -0.01em;
  }

  .testimonial-author span {
    color: #3b82f6;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .testimonials-section {
      padding: 3.5rem 0;
    }

    .section-header {
      margin-bottom: 2.5rem;
      padding-left: 1rem;
    }

    .section-header h2 {
      font-size: 2rem;
    }
    
    .section-subtitle {
      font-size: 1.125rem;
      margin-left: 1.5rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .testimonial-card {
      padding: 2rem 1.5rem;
    }

    .testimonial-card::before {
      top: 1.25rem;
      left: 1.5rem;
      font-size: 2.5rem;
    }

    .testimonial-rating,
    .testimonial-content,
    .testimonial-author {
      padding-left: 2rem;
    }
  }
</style>