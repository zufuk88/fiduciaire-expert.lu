---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle?: string;
  testimonials: Array<{
    content: string;
    author: string;
    role?: string;
    rating?: number;
  }>;
  backgroundColor?: string;
}
const { title, subtitle, testimonials, backgroundColor } = Astro.props;
---
<section class="testimonials-section" aria-labelledby="testimonials-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <SectionTitle 
    title={title}
    subtitle={subtitle}
    id="testimonials-title"
  />
  <div class="container">
    <div class="testimonials-grid">
      {testimonials.map(testimonial => (
        <div class="testimonial-card">
          {testimonial.rating && (
            <div class="testimonial-rating">
              {[...Array(5)].map((_, i) => (
                <svg 
                  width="16" 
                  height="16" 
                  viewBox="0 0 24 24" 
                  fill={i < (testimonial.rating || 0) ? "#fbbf24" : "none"} 
                  stroke={i < (testimonial.rating || 0) ? "#fbbf24" : "#e2e8f0"}
                  stroke-width="2"
                >
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              ))}
            </div>
          )}
          <div class="testimonial-content">
            <p>"{testimonial.content}"</p>
          </div>
          <div class="testimonial-author">
            <strong>{testimonial.author}</strong>
            {testimonial.role && <span>{testimonial.role}</span>}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
<style>
  .testimonials-section {
    padding: 0 0 6rem 0;
    background: linear-gradient(135deg, #fafbfc 0%, #f5f7fa 100%);
    position: relative;
    overflow: hidden;
  }
  
  /* Decoration subtile */
  .testimonials-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 40%;
    height: 200%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.03) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .testimonial-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 2rem;
    position: relative;
    box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.04);
    transition: opacity 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .testimonial-card::before {
    content: '"';
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    font-size: 3rem;
    line-height: 1;
    color: #3b82f6;
    opacity: 0.15;
    font-family: Georgia, serif;
  }
  .testimonial-card:hover {
    box-shadow: 0 8px 15px -8px rgba(0, 0, 0, 0.12);
    border-color: #cbd5e1;
    opacity: 0.98;
  }
  .testimonial-rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1.25rem;
    padding-left: 3rem;
  }
  .testimonial-rating svg {
    width: 16px;
    height: 16px;
    transition: opacity 0.2s ease;
  }
  .testimonial-content {
    flex: 1;
    margin-bottom: 1.75rem;
    padding-left: 3rem;
    padding-right: 1rem;
  }
  .testimonial-content p {
    color: #475569;
    line-height: 1.7;
    font-size: 0.9375rem;
    font-style: italic;
    font-weight: 400;
    position: relative;
  }
  .testimonial-author {
    padding-left: 3rem;
    padding-top: 1.25rem;
    border-top: 1px solid #f1f5f9;
    margin-top: auto;
  }
  .testimonial-author strong {
    display: block;
    color: #0f172a;
    font-weight: 600;
    font-size: 0.9375rem;
    margin-bottom: 0.25rem;
    letter-spacing: -0.01em;
  }
  .testimonial-author span {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.08), rgba(96, 165, 250, 0.04));
    color: #3b82f6;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 9999px;
    border: 1px solid rgba(59, 130, 246, 0.15);
  }
  /* Responsive */
  @media (max-width: 768px) {
    .testimonials-section {
      padding: 0 0 4rem 0;
    }
    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 0 1rem;
    }
    .testimonial-card {
      padding: 1.75rem 1.5rem;
    }
    .testimonial-card::before {
      top: 1.25rem;
      left: 1.5rem;
      font-size: 2.5rem;
    }
    .testimonial-rating {
      padding-left: 2.5rem;
    }
    .testimonial-content {
      padding-left: 2.5rem;
      padding-right: 0.5rem;
    }
    .testimonial-author {
      padding-left: 2.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
    .testimonial-card {
      padding: 1.5rem 1.25rem;
    }
  }
</style>