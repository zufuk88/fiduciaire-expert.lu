---
import { Image } from 'astro:assets';
import logoImage from '/src/assets/images/Logo.webp';
import { useTranslation, type Language } from '../i18n/translations';
export interface Props {
  lang: Language;
}
const { lang } = Astro.props;
const t = useTranslation(lang);
const currentYear = new Date().getFullYear();
const footerColumns = [
  [
    { href: `/${lang}`, text: t('nav.home') },
    { href: `/${lang}/services`, text: t('nav.services') },
    { href: `/${lang}/${lang === 'en' ? 'accounting' : 'comptabilite'}`, text: t('nav.accounting') },
    { href: `/${lang}/${lang === 'en' ? 'tax' : 'fiscalite'}`, text: t('nav.tax') }
  ],
  [
    { href: `/${lang}/taxpertize`, text: 'Taxpertize', isPremium: true },
    { href: `/${lang}/${lang === 'en' ? 'company-formation-luxembourg' : 'creation-societe-luxembourg'}`, text: t('nav.company-creation') },
    { href: `/${lang}/domiciliation`, text: t('nav.domiciliation') },
    { href: `/${lang}/${lang === 'en' ? 'payroll' : 'paie'}`, text: t('nav.payroll') }
  ],
  [
    { href: `/${lang}/${lang === 'en' ? 'about' : 'a-propos'}`, text: t('nav.about') },
    { href: `/${lang}/contact`, text: t('nav.contact') },
    { href: `/${lang}/articles`, text: t('nav.articles') }
  ]
];
const contactInfo = {
  phone: "+352 20 60 58 57",
  email: "contact@fiduciaire-expert.lu",
  address: "15 Avenue de la Liberté, L-1931 Luxembourg"
};
const footerSchema = {
  "@context": "https://schema.org",
  "@type": "WPFooter",
  "copyrightYear": currentYear,
  "copyrightHolder": {
    "@type": "Organization",
    "name": "Fiduciaire Expert",
    "url": "https://www.fiduciaire-expert.lu"
  }
};
---
<footer class="site-footer" role="contentinfo" itemscope itemtype="https://schema.org/WPFooter">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Logo and Description -->
      <div class="footer-brand">
        <a href={`/${lang}`} aria-label={t('common.back-to-home')} class="logo-link">
          <Image 
            src={logoImage} 
            alt="Fiduciaire Expert" 
            width="140" 
            height="40"
            loading="lazy"
            itemprop="logo"
            quality="mid"
          />
        </a>
        <p class="brand-tagline" itemprop="description">
          {t('footer.description')}
        </p>
      </div>
      <!-- Navigation Links - 4 columns including contact -->
      <nav class="footer-nav" aria-label="Footer navigation">
        {footerColumns.map((column, colIndex) => (
          <div class="footer-nav-column" key={colIndex}>
            {column.map((link) => (
              <a href={link.href} class:list={{'taxpertize-link': link.isPremium}}>{link.text}</a>
            ))}
          </div>
        ))}
        <!-- Contact as 4th column -->
        <div class="footer-nav-column footer-contact-column">
          <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="contact-link" itemprop="telephone">
            {contactInfo.phone}
          </a>
          <a href={`mailto:${contactInfo.email}`} class="contact-link" itemprop="email">
            {contactInfo.email}
          </a>
          <!-- LinkedIn Button -->
          <a 
            href="https://www.linkedin.com/company/fiduciaire-expert-luxembourg" 
            aria-label="LinkedIn Fiduciaire Expert"
            target="_blank"
            rel="noopener noreferrer"
            class="linkedin-footer-link"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="#0077B5" xmlns="http://www.w3.org/2000/svg">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </nav>
    </div>
    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <p class="copyright">&copy; {currentYear} Fiduciaire Expert. {t('footer.rights-reserved')}</p>
      <div class="legal-links">
        <a href={`/${lang}/${lang === 'en' ? 'legal-notice' : 'mentions-legales'}`}>{t('footer.legal-notices')}</a>
        <span class="separator">|</span>
        <a href={`/${lang}/${lang === 'en' ? 'privacy-policy' : 'politique-confidentialite'}`}>{t('footer.privacy-policy')}</a>
      </div>
    </div>
  </div>
  <!-- Background decoration -->
  <div class="footer-decoration"></div>
  <script type="application/ld+json" set:html={JSON.stringify(footerSchema)} is:inline />
</footer>
<style>
  .site-footer {
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
    border-top: 1px solid rgba(0, 95, 204, 0.1);
    padding: 3rem 0 1.5rem;
    position: relative;
    overflow: hidden;
  }
  /* Background decoration */
  .footer-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    background-image: 
      radial-gradient(circle at 1px 1px, rgba(0, 95, 204, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    z-index: 0;
  }
  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
    overflow-x: hidden;
  }
  /* Main Footer - Horizontal Layout */
  .footer-main {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 4rem;
    padding-bottom: 2.5rem;
    margin-bottom: 0.5rem;
    border-bottom: 1px solid rgba(0, 95, 204, 0.08);
  }
  /* Brand Section */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    position: relative;
    padding-right: 3rem;
  }
  /* Barre verticale élégante après la section brand */
  .footer-brand::after {
    content: '';
    position: absolute;
    right: 1.5rem;
    top: 0;
    bottom: 0;
    width: 1px;
    background: linear-gradient(180deg, 
      transparent 0%, 
      rgba(0, 95, 204, 0.15) 20%, 
      rgba(0, 95, 204, 0.15) 80%, 
      transparent 100%
    );
  }
  .logo-link {
    display: inline-block;
  }
  .logo-link:hover {
  }
  .footer-brand img {
    height: 42px;
    width: auto;
  }
  .brand-tagline {
    font-size: 0.9375rem;
    color: #475569;
    margin: 0;
    line-height: 1.6;
    letter-spacing: 0.01em;
  }
  /* Navigation - 4 Columns avec colonne contact plus large */
  .footer-nav {
    display: grid;
    grid-template-columns: 1fr 1fr 0.8fr 1.4fr;
    gap: 2rem;
    padding: 0 1rem;
  }
  .footer-nav-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  /* Suppression de la bordure qui crée un décalage */
  /* .footer-nav-column:first-child {
    padding-left: 2rem;
    border-left: 2px solid rgba(0, 95, 204, 0.1);
  } */
  .footer-nav a {
    color: #64748b;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 400;
    white-space: normal;
    word-break: break-word;
    position: relative;
    padding-left: 0;
  }
  .footer-nav a::before {
    content: '';
    position: absolute;
    left: -12px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: #005fcc;
    border-radius: 50%;
    opacity: 0;
  }
  .footer-nav a:hover {
    color: #3b82f6;
    padding-left: 8px;
  }
  .footer-nav a:hover::before {
    opacity: 1;
    background: #3b82f6;
  }
  /* Taxpertize - Style spécial */
  .footer-nav a.taxpertize-link {
    position: relative;
    font-weight: 500;
    letter-spacing: 0.02em;
  }
  /* Taxpertize - couleur verte vif au hover */
  .footer-nav a.taxpertize-link:hover {
    color: #4ade80 !important;
    padding-left: 8px;
  }
  .footer-nav a.taxpertize-link:hover::before {
    background: #4ade80 !important;
    opacity: 1;
  }
  /* Contact Column - Style harmonisé avec les autres colonnes */
  .footer-contact-column {
    align-items: flex-start;
  }
  .footer-contact-column .contact-link {
    color: #64748b;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 400;
    white-space: nowrap;
    position: relative;
    padding-left: 0;
  }
  .footer-contact-column .contact-link::before {
    content: '';
    position: absolute;
    left: -12px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: rgba(0, 95, 204, 0.3);
    border-radius: 50%;
    opacity: 0;
  }
  .footer-contact-column .contact-link:hover {
    color: #3b82f6;
    padding-left: 8px;
  }
  .footer-contact-column .contact-link:hover::before {
    opacity: 1;
    background: #3b82f6;
  }
  /* LinkedIn link dans la colonne contact */
  .linkedin-footer-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    position: relative;
    padding-left: 0;
    margin-top: 0.25rem;
  }
  .linkedin-footer-link svg {
    width: 24px;
    height: 24px;
  }
  .linkedin-footer-link::before {
    content: '';
    position: absolute;
    left: -12px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: rgba(0, 119, 181, 0.3);
    border-radius: 50%;
    opacity: 0;
  }
  .linkedin-footer-link:hover {
    padding-left: 8px;
  }
  .linkedin-footer-link:hover svg {
    transform: scale(1.1);
    filter: brightness(1.2);
  }
  .linkedin-footer-link:hover::before {
    opacity: 1;
    background: #0077b5;
  }
  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.5rem;
    font-size: 0.875rem;
    color: #64748b;
  }
  .copyright {
    margin: 0;
    font-weight: 300;
    letter-spacing: 0.02em;
  }
  .legal-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .legal-links a {
    color: #64748b;
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    position: relative;
  }
  .legal-links a:hover {
    color: #3b82f6;
  }
  .separator {
    color: rgba(0, 95, 204, 0.2);
    font-size: 0.75rem;
    user-select: none;
  }
  /* Responsive - Tablettes larges */
  @media (max-width: 1024px) {
    .footer-nav {
      grid-template-columns: 1fr 1.3fr;
      gap: 2.5rem;
      row-gap: 2rem;
    }
    .footer-nav-column {
      min-width: 180px;
    }
    /* Colonnes 3 et 4 sur la deuxième ligne avec plus d'espace pour contact */
    .footer-nav-column:nth-child(3) {
      grid-column: 1;
    }
    .footer-nav-column:nth-child(4) {
      grid-column: 2;
    }
  }
  /* Responsive - Tablettes et petits écrans */
  @media (max-width: 968px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }
    .footer-brand {
      align-items: center;
      padding-right: 0;
    }
    .footer-brand::after {
      display: none;  /* Masquer la barre verticale sur mobile */
    }
    .footer-nav {
      grid-template-columns: repeat(2, 1fr);
      padding: 0;
      gap: 2rem;
      row-gap: 2.5rem;
    }
    .footer-nav-column {
      align-items: center;
    }
    .footer-nav-column:first-child {
      padding-left: 0;
      border-left: none;
    }
    .footer-nav a::before,
    .footer-contact-column .contact-link::before,
    .linkedin-footer-link::before {
      display: none;
    }
    .footer-nav a:hover,
    .footer-contact-column .contact-link:hover,
    .linkedin-footer-link:hover {
      padding-left: 0;
    }
  }
  @media (max-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }
    .footer-nav {
      gap: 1.5rem;
    }
    .footer-nav-column {
      min-width: 120px;
    }
    .footer-main {
      gap: 1.5rem;
    }
    /* Augmenter la taille de police sur mobile pour une meilleure lisibilité */
    .footer-nav a,
    .footer-contact-column .contact-link {
      font-size: 1rem;  /* 16px - taille confortable sur mobile */
    }
  }
  @media (max-width: 640px) {
    .site-footer {
      padding: 2rem 0 1rem;
    }
    .container {
      padding: 0 1rem;
    }
    .footer-nav {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    /* Cacher les 3 premières colonnes (pages du site) sur mobile */
    .footer-nav-column:nth-child(1),
    .footer-nav-column:nth-child(2),
    .footer-nav-column:nth-child(3) {
      display: none;
    }
    /* Garder seulement la colonne contact */
    .footer-nav-column {
      width: 100%;
      align-items: center;
      gap: 0.5rem;
    }
    .footer-nav a,
    .footer-contact-column .contact-link {
      font-size: 1rem;  /* 16px - taille confortable et cohérente sur mobile */
    }
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    .contact-item {
      justify-content: center;
    }
  }
</style>