---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---
<footer>
  <div class="container">
    <p>&copy; {currentYear} Fiduciaire-Expert.lu. Tous droits réservés.</p>
    <a href="/mentions-legales" class="footer-link">Mentions Légales</a>
  </div>
</footer>

<style>
  footer {
    /* MODIFIÉ : Fond gris clair */
    background-color: var(--fond-clair);
    /* MODIFIÉ : Couleur de texte par défaut (pour le copyright) */
    color: var(--texte-secondaire);
    padding: 2rem;
    border-top: 1px solid #e0e0e0; /* On ajoute une fine bordure pour la séparation */
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  p {
    margin: 0;
    font-size: 0.9rem;
  }

  .footer-link {
    /* MODIFIÉ : Couleur du lien en noir doux */
    color: var(--texte-principal);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    font-size: 0.9rem;
  }

  .footer-link:hover {
    /* MODIFIÉ : Couleur dorée au survol pour garder une touche de couleur */
    color: var(--or-premium);
  }
</style>