---
import ServicesCard from './ServicesCard.astro';
export interface Props {
  title: string;
  subtitle: string;
  services: Array<{
    title: string;
    description: string;
  }>;
  backgroundColor?: string;
}
const { 
  title,
  subtitle,
  services,
  backgroundColor = 'white'
} = Astro.props;
---
<section class="services-simple" style={`background: ${backgroundColor};`}>
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      <p class="section-description">
        {subtitle}
      </p>
    </div>
    <div class="services-grid">
      {services.map((service) => (
        <ServicesCard
          title={service.title}
          description={service.description}
        />
      ))}
    </div>
  </div>
</section>
<style>
  .services-simple {
    padding: 5rem 0;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .section-header {
    text-align: left;
    max-width: 800px;
    margin: 0 auto 4rem;
    position: relative;
    padding-left: 2rem;
  }
  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-dark, #0f172a);
    font-weight: 300;
    line-height: 1.2;
    letter-spacing: -0.02em;
    position: relative;
    padding-bottom: 1.5rem;
  }
  .section-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    background: var(--color-primary, #3b82f6);
    margin: 1.5rem 0 0;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: none;
  }
  .section-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary, #64748b);
    line-height: 1.75;
    max-width: 600px;
    margin: 1rem 0 0 2.5rem;
    font-weight: 400;
    position: relative;
  }
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }
  /* Responsive */
  @media (max-width: 768px) {
    .services-simple {
      padding: 3rem 0;
    }
    .section-header {
      margin-bottom: 3rem;
      padding-left: 1rem;
    }
    .section-title {
      font-size: 2rem;
    }
    .section-description {
      font-size: 1.125rem;
      margin-left: 1.5rem;
    }
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>