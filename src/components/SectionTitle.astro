---
export interface Props {
  badge?: string;
  title: string;
  subtitle?: string;
  id?: string;
}

const { 
  badge,
  title,
  subtitle,
  id
} = Astro.props;
---

<div class="section-header">
  {badge && (
    <span class="badge">{badge}</span>
  )}
  <h2 id={id}>{title}</h2>
  {subtitle && (
    <p>{subtitle}</p>
  )}
</div>

<style>
  .section-header {
    text-align: center;
    max-width: 900px;
    margin: 0 auto 64px;
    padding: 0 20px;
  }

  .badge {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #6b7280;
    background: #f3f4f6;
    padding: 4px 12px;
    border-radius: 2px;
    margin-bottom: 12px;
  }

  h2 {
    font-family: var(--font-family-display);
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 500;
    color: #1e3a5f;
    margin: 0 0 20px 0;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  p {
    font-size: clamp(16px, 2.5vw, 18px);
    font-weight: 400;
    color: #6b7280;
    line-height: 1.7;
    margin: 0;
    max-width: 700px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .section-header {
      margin-bottom: 48px;
    }
    /* Les variables clamp() gèrent déjà le responsive */
  }

  @media (max-width: 480px) {
    .section-header {
      margin-bottom: 40px;
      padding: 0 16px;
    }
    /* Les variables clamp() gèrent déjà le responsive */
    
    .badge {
      font-size: 10px;
      padding: 3px 8px;
    }
  }

  /* Support du mode sombre */
  @media (prefers-color-scheme: dark) {
    .badge {
      background: #334155;
      color: #cbd5e1;
    }

    h2 {
      color: #f1f5f9;
    }

    p {
      color: #94a3b8;
    }
  }

  /* Support du mode sombre avec classe sur body */
  :global(body.dark) .badge {
    background: #334155;
    color: #cbd5e1;
  }

  :global(body.dark) h2 {
    color: #f1f5f9;
  }

  :global(body.dark) p {
    color: #94a3b8;
  }

  /* Support du mode sombre avec attribut data-theme */
  :global([data-theme="dark"]) .badge {
    background: #334155;
    color: #cbd5e1;
  }

  :global([data-theme="dark"]) h2 {
    color: #f1f5f9;
  }

  :global([data-theme="dark"]) p {
    color: #94a3b8;
  }
</style>