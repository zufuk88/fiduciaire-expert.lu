---
export interface Props {
  badge?: string;
  title: string;
  subtitle?: string;
  id?: string;
}

const { 
  badge,
  title,
  subtitle,
  id
} = Astro.props;
---

<div class="section-header">
  {badge && (
    <span class="badge">{badge}</span>
  )}
  <h2 id={id}>{title}</h2>
  {subtitle && (
    <p>{subtitle}</p>
  )}
</div>

<style>
  .section-header {
    text-align: center;
    max-width: 900px;
    margin: 0 auto 48px;
    padding: 0 20px;
  }

  .badge {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #6b7280;
    background: #f3f4f6;
    padding: 4px 12px;
    border-radius: 2px;
    margin-bottom: 12px;
  }

  h2 {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 32px;
    font-weight: 500;
    color: #1e3a5f;
    margin: 0 0 12px 0;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }

  p {
    font-size: 16px;
    font-weight: 400;
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .section-header {
      margin-bottom: 36px;
    }

    h2 {
      font-size: 26px;
    }

    p {
      font-size: 15px;
    }
  }

  @media (max-width: 480px) {
    .section-header {
      margin-bottom: 32px;
      padding: 0 16px;
    }

    h2 {
      font-size: 22px;
    }

    p {
      font-size: 14px;
    }

    .badge {
      font-size: 10px;
      padding: 3px 8px;
    }
  }
</style>