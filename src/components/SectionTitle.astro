---
// SectionHeader.astro
export interface Props {
  badge?: string;
  title: string;
  subtitle?: string;
  id?: string;
}

const { badge, title, subtitle, id } = Astro.props;
---

<div class="section-header">
  {badge && <span class="badge">{badge}</span>}
  <h2 id={id}>{title}</h2>
  {subtitle && <p>{subtitle}</p>}
</div>

<style>
  .section-header {
    text-align: center;
    max-width: 900px;
    margin: 0 auto 80px;
    padding: 0 20px;
  }

  .badge {
    display: inline-block;
    font: 600 12px/1 system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--badge-fg);
    background: var(--badge-bg);
    padding: 6px 16px;
    border-radius: 6px;
    margin-bottom: 20px;
    border: 1px solid var(--card-border);
  }

  h2 {
    font-family: var(--font-family-display, system-ui, -apple-system, Segoe UI, Roboto, sans-serif);
    font-size: var(--font-hero);
    font-weight: 500;
    color: var(--accent);
    margin: 0 0 28px;
    line-height: 1.2;
    letter-spacing: -0.02em;
    transition: color .2s ease;
  }

  p {
    font-size: var(--font-h3);
    font-weight: 400;
    color: var(--fg-secondary);
    line-height: 1.6;
    margin: 0 auto;
    max-width: 750px;
  }

  /* Texte plus clair en dark mode */
  }



  @media (max-width: 768px) {
    .section-header { margin-bottom: 60px; }
    
    h2 {
      margin: 0 0 24px;
    }
  }

  @media (max-width: 480px) {
    .section-header { margin-bottom: 48px; padding: 0 16px; }
    .badge { font-size: 11px; padding: 5px 12px; }
    
    h2 {
      margin: 0 0 20px;
    }
  }
</style>