---
export interface Props {
  badge?: string;
  title: string;
  subtitle?: string;
  id?: string;
}

const { 
  badge,
  title,
  subtitle,
  id
} = Astro.props;
---

<div class="section-title-wrapper">
  <div class="section-title-content">
    {badge && (
      <span class="section-badge">{badge}</span>
    )}
    <h2 id={id} class="section-title">{title}</h2>
    {subtitle && (
      <p class="section-subtitle">{subtitle}</p>
    )}
  </div>
</div>

<style>
  .section-title-wrapper {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    padding: 1.5rem 0;
    margin-bottom: 2.5rem;
    width: 100%;
    position: relative;
    box-shadow: 0 10px 30px -10px rgba(59, 130, 246, 0.3);
    overflow: hidden;
  }
  
  /* Motif géométrique subtil */
  .section-title-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    right: -20%;
    width: 40%;
    height: 100%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .section-title-wrapper::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: -10%;
    width: 30%;
    height: 100%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.03) 0%, transparent 60%);
    pointer-events: none;
  }

  .section-title-content {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .section-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #ffffff;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.375rem 0.875rem;
    border-radius: 9999px;
    margin-bottom: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.5rem 0;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.0625rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
    max-width: 750px;
    margin: 0 auto;
    font-weight: 400;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .section-title {
      font-size: 1.5rem;
    }
    .section-subtitle {
      font-size: 0.9375rem;
    }
  }
  @media (max-width: 768px) {
    .section-title-wrapper {
      padding: 1.25rem 0;
      margin-bottom: 2rem;
    }

    .section-title-content {
      padding: 0 1.5rem;
    }

    .section-badge {
      font-size: 0.6875rem;
      padding: 0.25rem 0.625rem;
      margin-bottom: 0.375rem;
    }

    .section-title {
      font-size: 1.25rem;
      margin-bottom: 0.375rem;
    }

    .section-subtitle {
      font-size: 0.875rem;
      line-height: 1.4;
      color: rgba(255, 255, 255, 0.85);
      max-width: 90%;
    }
  }

  @media (max-width: 480px) {
    .section-title-wrapper {
      padding: 1.125rem 0;
      margin-bottom: 1.75rem;
    }

    .section-title-content {
      padding: 0 1rem;
    }

    .section-title {
      font-size: 1.125rem;
      margin-bottom: 0.375rem;
    }

    .section-subtitle {
      font-size: 0.8125rem;
      line-height: 1.4;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }
</style>