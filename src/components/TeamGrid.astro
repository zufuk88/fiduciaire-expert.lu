---
import { Image } from 'astro:assets';

export interface Props {
  title: string;
  subtitle?: string;
  members: Array<{
    name: string;
    role: string;
    imageUrl: ImageMetadata;
    imageAlt: string;
    bio: string;
    linkedin?: string;
  }>;
  backgroundColor?: string;
}

const { title, subtitle, members, backgroundColor } = Astro.props;
---

<section class="team-section" aria-labelledby="team-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <div class="container">
    <div class="section-header">
      <h2 id="team-title">{title}</h2>
      {subtitle && <p class="section-subtitle">{subtitle}</p>}
    </div>
    
    <div class="team-grid">
      {members.map(member => (
        <div class="team-card">
          <div class="member-image">
            <Image 
              src={member.imageUrl}
              alt={member.imageAlt}
              width={300}
              height={300}
              loading="lazy"
              quality="high"
            />
          </div>
          <div class="member-info">
            <h3>{member.name}</h3>
            <p class="member-role">{member.role}</p>
            <p class="member-bio">{member.bio}</p>
            {member.linkedin && (
              <a href={member.linkedin} class="linkedin-link" target="_blank" rel="noopener noreferrer" aria-label={`LinkedIn profile of ${member.name}`}>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" fill="currentColor"/>
                </svg>
                <span>LinkedIn</span>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-section {
    padding: 5rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: left;
    margin-bottom: 3.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 2rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 300;
    color: #2c4157;
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
    line-height: 1.2;
    position: relative;
    padding-bottom: 1.5rem;
  }

  .section-header h2::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    background: #3b82f6;
    margin: 1.5rem 0 0;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: none;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #64748b;
    line-height: 1.65;
    max-width: 600px;
    margin: 1rem 0 0 2.5rem;
    font-weight: 400;
    position: relative;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .team-card {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    padding: 2.5rem 2rem;
    text-align: center;
    transition: all 0.2s ease;
    position: relative;
  }

  .team-card:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transform: translateY(-1px);
    border-color: #cbd5e1;
  }

  .member-image {
    margin-bottom: 1.75rem;
    position: relative;
  }

  .member-image img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
    border: 3px solid #f1f5f9;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .member-info h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2c4157;
    margin: 0 0 0.375rem 0;
    letter-spacing: -0.01em;
  }

  .member-role {
    color: #3b82f6;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  .member-bio {
    color: #64748b;
    line-height: 1.6;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    font-weight: 400;
  }

  .linkedin-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #2c4157;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .linkedin-link:hover {
    background: #f8fafc;
    border-color: #3b82f6;
    color: #3b82f6;
  }

  .linkedin-link svg {
    width: 16px;
    height: 16px;
  }

  .linkedin-link span {
    letter-spacing: 0.02em;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .team-card {
      padding: 2rem 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .team-section {
      padding: 3.5rem 0;
    }

    .section-header {
      margin-bottom: 2.5rem;
      padding-left: 1rem;
    }

    .section-header h2 {
      font-size: 2rem;
    }
    
    .section-subtitle {
      font-size: 1.125rem;
      margin-left: 1.5rem;
    }

    .team-grid {
      grid-template-columns: 1fr;
    }

    .member-image img {
      width: 80px;
      height: 80px;
    }
  }
</style>