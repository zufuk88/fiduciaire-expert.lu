---
import { Image } from 'astro:assets';
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle?: string;
  members: Array<{
    name: string;
    role: string;
    imageUrl: ImageMetadata;
    imageAlt: string;
    bio: string;
    linkedin?: string;
  }>;
  backgroundColor?: string;
}
const { title, subtitle, members, backgroundColor } = Astro.props;
---
<section class="team-section" aria-labelledby="team-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <SectionTitle 
    title={title}
    subtitle={subtitle}
    id="team-title"
  />
  <div class="container">
    <div class="team-grid">
      {members.map(member => (
        <div class="team-card">
          <div class="member-image">
            <Image 
              src={member.imageUrl}
              alt={member.imageAlt}
              width={300}
              height={300}
              loading="lazy"
              quality="high"
            />
          </div>
          <div class="member-info">
            <h3>{member.name}</h3>
            <p class="member-role">{member.role}</p>
            <p class="member-bio">{member.bio}</p>
            {member.linkedin && (
              <a href={member.linkedin} class="linkedin-link" target="_blank" rel="noopener noreferrer" aria-label={`LinkedIn profile of ${member.name}`}>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" fill="currentColor"/>
                </svg>
                <span>LinkedIn</span>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
<style>
  .team-section {
    padding: 0 0 6rem 0;
    background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
    position: relative;
    overflow: hidden;
  }
  
  /* Decoration subtile */
  .team-section::before {
    content: '';
    position: absolute;
    top: -30%;
    left: -10%;
    width: 50%;
    height: 150%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.02) 0%, transparent 60%);
    pointer-events: none;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .team-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 2.5rem 2rem;
    text-align: center;
    position: relative;
    box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.04);
    transition: opacity 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .team-card:hover {
    box-shadow: 0 8px 15px -8px rgba(0, 0, 0, 0.12);
    border-color: #cbd5e1;
    opacity: 0.98;
  }
  .member-image {
    margin-bottom: 1.75rem;
    position: relative;
    width: 120px;
    height: 120px;
  }
  .member-image img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
    border: 4px solid white;
    box-shadow: 0 4px 12px -4px rgba(0, 0, 0, 0.1);
  }
  .member-info h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }
  .member-role {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.08), rgba(96, 165, 250, 0.04));
    color: #3b82f6;
    font-size: 0.75rem;
    font-weight: 500;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 9999px;
    border: 1px solid rgba(59, 130, 246, 0.15);
  }
  .member-bio {
    color: #475569;
    line-height: 1.65;
    font-size: 0.9375rem;
    margin-bottom: 1.5rem;
    font-weight: 400;
    flex: 1;
  }
  .linkedin-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: #3b82f6;
    color: white;
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 500;
    border-radius: 9999px;
    transition: opacity 0.2s ease, box-shadow 0.2s ease;
    margin-top: auto;
  }
  .linkedin-link:hover {
    background: #2563eb;
    box-shadow: 0 4px 12px -4px rgba(59, 130, 246, 0.3);
    opacity: 0.95;
  }
  .linkedin-link svg {
    width: 16px;
    height: 16px;
  }
  .linkedin-link span {
    letter-spacing: 0.02em;
  }
  /* Responsive */
  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }
    .team-card {
      padding: 2rem 1.5rem;
    }
  }
  @media (max-width: 768px) {
    .team-section {
      padding: 0 0 4rem 0;
    }
    .container {
      padding: 0 1rem;
    }
    .team-grid {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }
    .member-image,
    .member-image img {
      width: 100px;
      height: 100px;
    }
    .team-card {
      padding: 2rem 1.5rem;
    }
  }
  @media (max-width: 480px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
    .member-image,
    .member-image img {
      width: 80px;
      height: 80px;
    }
  }
</style>