---
import { Image } from 'astro:assets';
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle?: string;
  members: Array<{
    name: string;
    role: string;
    imageUrl: ImageMetadata;
    imageAlt: string;
    bio: string;
    linkedin?: string;
  }>;
  backgroundColor?: string;
}
const { title, subtitle, members, backgroundColor } = Astro.props;
---
<section class="team-section" aria-labelledby="team-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <SectionTitle 
    title={title}
    subtitle={subtitle}
    id="team-title"
  />
  <div class="container">
    <div class="team-grid">
      {members.map(member => (
        <div class="team-card">
          <div class="member-image">
            <Image 
              src={member.imageUrl}
              alt={member.imageAlt}
              width={300}
              height={300}
              loading="lazy"
              quality="high"
            />
          </div>
          <div class="member-info">
            <h3>{member.name}</h3>
            <p class="member-role">{member.role}</p>
            <p class="member-bio">{member.bio}</p>
            {member.linkedin && (
              <a href={member.linkedin} class="linkedin-link" target="_blank" rel="noopener noreferrer" aria-label={`LinkedIn profile of ${member.name}`}>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" fill="currentColor"/>
                </svg>
                <span>LinkedIn</span>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
<style>
  .team-section {
    padding: 120px 20px 140px;
  }
  
  @media (max-width: 768px) {
    .team-section {
      padding: 80px 20px 100px;
    }
  }
  
  @media (max-width: 480px) {
    .team-section {
      padding: 60px 16px 80px;
    }
  }
  
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }
  .team-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 2px;
    padding: 30px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .team-card:hover {
    border-color: #9ca3af;
  }
  .member-image {
    margin-bottom: 24px;
    width: 120px;
    height: 120px;
  }
  .member-image img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
    border: 2px solid #e5e7eb;
  }
  .member-info h3 {
    font-size: 18px;
    font-weight: 700;
    color: #111827;
    margin: 0 0 8px 0;
  }
  .member-role {
    font-size: 12px;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 16px;
  }
  .member-bio {
    color: #6b7280;
    line-height: 1.6;
    font-size: 14px;
    margin-bottom: 20px;
    flex: 1;
  }
  .linkedin-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: #111827;
    color: #ffffff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 600;
    border-radius: 2px;
    margin-top: auto;
  }
  .linkedin-link:hover {
    background: #374151;
  }
  .linkedin-link svg {
    width: 16px;
    height: 16px;
  }
  @media (max-width: 1024px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .member-image,
    .member-image img {
      width: 100px;
      height: 100px;
    }
    .team-card {
      padding: 24px;
    }
  }
  @media (max-width: 480px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
    .member-image,
    .member-image img {
      width: 80px;
      height: 80px;
    }
  }
</style>