---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle?: string;
  values: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
  backgroundColor?: string;
}
const { title, subtitle, values, backgroundColor } = Astro.props;
---
<section class="values-section" aria-labelledby="values-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <SectionTitle 
    title={title}
    subtitle={subtitle}
    id="values-title"
  />
  <div class="container">
    <div class="values-grid">
      {values.map((value, index) => (
        <article class="value-card">
          <span class="value-number">{String(index + 1).padStart(2, '0')}</span>
          <h3 class="value-title">{value.title}</h3>
          <p class="value-description">{value.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
<style>
  .values-section {
    padding: 120px 20px 140px;
  }
  
  @media (max-width: 768px) {
    .values-section {
      padding: 80px 20px 100px;
    }
  }
  
  @media (max-width: 480px) {
    .values-section {
      padding: 60px 16px 80px;
    }
  }
  
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    row-gap: 40px;
  }
  /* Value Cards */
  .value-card {
    background: #fafbfc;
    border: 1px solid #e5e7eb;
    border-radius: 2px;
    padding: 40px;
    position: relative;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
  }
  .value-card:hover {
    background: #ffffff;
    border-color: #9ca3af;
    transform: translateY(-2px);
  }
  /* Number */
  .value-number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 36px;
    font-weight: 500;
    color: #1e3a5f;
    margin-bottom: 24px;
    line-height: 1;
  }
  /* Title */
  .value-title {
    font-size: 18px;
    font-weight: 600;
    color: #1e3a5f;
    margin: 0 0 16px 0;
    line-height: 1.4;
  }
  /* Description */
  .value-description {
    color: #525252;
    line-height: 1.7;
    margin: 0;
    font-size: 15px;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 768px) {
    .values-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      row-gap: 32px;
    }
    .value-card {
      padding: 32px;
    }
    .value-number {
      font-size: 32px;
      margin-bottom: 20px;
    }
    .value-title {
      font-size: 17px;
    }
    .value-description {
      font-size: 14px;
    }
  }
  @media (max-width: 480px) {
    .value-card {
      padding: 28px;
    }
    .value-number {
      font-size: 28px;
    }
  }
</style>