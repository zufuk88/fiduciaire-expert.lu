---
import SectionTitle from './SectionTitle.astro';

export interface Props {
  title: string;
  subtitle?: string;
  values: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
  backgroundColor?: string;
}
const { title, subtitle, values, backgroundColor } = Astro.props;
---
<section class="values-section" aria-labelledby="values-title" style={backgroundColor ? `background-color: ${backgroundColor};` : ''}>
  <SectionTitle 
    title={title}
    subtitle={subtitle}
    id="values-title"
  />
  <div class="container">
    <div class="values-grid">
      {values.map(value => (
        <article class="value-card">
          <div class="value-icon" set:html={value.icon} />
          <h3 class="value-title">{value.title}</h3>
          <p class="value-description">{value.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
<style>
  .values-section {
    padding: 0 0 6rem 0;
    background: linear-gradient(135deg, #fafbfc 0%, #ffffff 100%);
    position: relative;
    overflow: hidden;
  }
  
  /* Decoration subtile */
  .values-section::before {
    content: '';
    position: absolute;
    top: 20%;
    right: -15%;
    width: 40%;
    height: 60%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.025) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
  }
  /* Value Cards */
  .value-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 2.5rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.04);
    transition: opacity 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .value-card:hover {
    box-shadow: 0 8px 15px -8px rgba(0, 0, 0, 0.12);
    border-color: #cbd5e1;
    opacity: 0.98;
  }
  /* Icon */
  .value-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 1.75rem;
    color: #3b82f6;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(96, 165, 250, 0.05));
    border-radius: 12px;
    border: 1px solid rgba(59, 130, 246, 0.15);
    position: relative;
  }
  .value-icon :global(svg) {
    width: 36px;
    height: 36px;
    stroke-width: 1.5;
  }
  .value-card:hover .value-icon {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(96, 165, 250, 0.08));
    border-color: rgba(59, 130, 246, 0.25);
  }
  /* Title */
  .value-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 1rem 0;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }
  /* Description */
  .value-description {
    color: #475569;
    line-height: 1.65;
    margin: 0;
    font-size: 0.9375rem;
    font-weight: 400;
  }
  /* Accent decoration on hover */
  .value-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #3b82f6, #60a5fa);
    opacity: 0;
    transition: opacity 0.2s ease;
  }
  .value-card:hover::before {
    opacity: 1;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .values-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
  }
  @media (max-width: 768px) {
    .values-section {
      padding: 0 0 4rem 0;
    }
    .container {
      padding: 0 1rem;
    }
    .values-grid {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }
    .value-card {
      padding: 2rem 1.5rem;
    }
    .value-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 1.5rem;
    }
    .value-icon :global(svg) {
      width: 30px;
      height: 30px;
    }
    .value-title {
      font-size: 1.0625rem;
    }
    .value-description {
      font-size: 0.875rem;
    }
  }
  @media (max-width: 480px) {
    .values-grid {
      grid-template-columns: 1fr;
    }
    .value-card {
      padding: 1.75rem 1.25rem;
    }
  }
</style>