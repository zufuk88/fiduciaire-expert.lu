---
// L'interface des props est simplifiée. On garde l'essentiel.
export interface Props {
  variant?: 'primary' | 'secondary'; // Seulement 2 variantes
  size?: 'small' | 'medium' | 'large';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  disabled?: boolean;
  fullWidth?: boolean;
  id?: string;
  ariaLabel?: string;
  title?: string;
  target?: string;
  rel?: string;
}
const { 
  variant = 'primary', 
  size = 'medium', 
  href, 
  type = 'button',
  class: className = '',
  disabled = false,
  fullWidth = false,
  id,
  ariaLabel,
  title,
  target,
  rel,
  ...rest
} = Astro.props;
const classes = [
  'btn',
  `btn-${variant}`,
  `btn-${size}`,
  fullWidth ? 'btn-full' : '',
  className
].filter(Boolean).join(' ');
const relValue = rel || (target === '_blank' ? 'noopener noreferrer' : undefined);
---
{/* La logique du composant reste identique et robuste. */}
{href ? (
  <a 
    href={href} 
    class={classes}
    id={id}
    aria-label={ariaLabel}
    title={title}
    target={target}
    rel={relValue}
    {...rest}
  >
    <slot />
  </a>
) : (
  <button 
    type={type} 
    class={classes} 
    disabled={disabled}
    id={id}
    aria-label={ariaLabel}
    title={title}
    {...rest}
  >
    <slot />
  </button>
)}
<style>
  /* ===== BOUTONS - VERSION SOBRE ET INTEMPORELLE ===== */
  /* --- Base --- */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem; /* Taille par défaut (medium) plus petite */
    font-size: 0.875rem;
    font-weight: 500;
    line-height: 1.4;
    text-align: center;
    text-decoration: none;
    letter-spacing: 0.025em;
    cursor: pointer;
    border: 1px solid transparent;
    border-radius: 2px;
    white-space: nowrap;
    position: relative;
    overflow: hidden;
    /* Empêche le bouton de dépasser son conteneur */
    max-width: 100%;
    box-sizing: border-box;
  }
  /* --- États --- */
  .btn:hover:not(:disabled) {
    text-decoration: none;
  }
  .btn:focus-visible {
    outline: 2px solid rgba(0, 95, 204, 0.4);
    outline-offset: 2px;
  }
  .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
  /* --- Variante Principale: Fond sombre avec texte clair --- */
  .btn-primary {
    background: #00695c; /* Vert plus lumineux */
    color: #ffffff;
    border: 2px solid #00695c;
    transition: all 0.3s ease;
  }
  .btn-primary:hover:not(:disabled) {
    background: #ffffff; /* Fond blanc au hover */
    color: #00695c; /* Texte vert */
    border-color: #00695c;
  }
  .btn-primary:active:not(:disabled) {
    transform: scale(0.98);
  }
  
  /* --- Variante Secondaire: Fond blanc avec texte sombre --- */
  .btn-secondary {
    background: #ffffff;
    color: #333333; /* Gris foncé */
    border: 2px solid #333333;
    transition: all 0.3s ease;
  }
  .btn-secondary:hover:not(:disabled) {
    background: #333333; /* Fond gris foncé au hover */
    color: #ffffff; /* Texte blanc */
    border-color: #333333;
  }
  .btn-secondary:active:not(:disabled) {
    transform: scale(0.98);
  }
  /* --- Tailles --- */
  .btn-small {
    padding: 0.5rem 1rem;
    font-size: 0.8125rem;
    gap: 0.375rem;
  }
  .btn-medium {
    /* Taille normale (par défaut) */
    padding: 0.875rem 1.75rem;
    font-size: 0.9375rem;
  }
  .btn-large {
    /* Taille pour Hero et CTA importants - réduite */
    padding: 14px 32px;
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.02em;
    gap: 0.625rem;
  }
  /* --- Largeur Pleine --- */
  .btn-full {
    width: 100%;
    max-width: 100%;
    white-space: normal; /* Permet le retour à la ligne si nécessaire */
  }
</style>