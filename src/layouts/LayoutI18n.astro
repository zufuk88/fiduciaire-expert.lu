---
import HeaderI18n from '../components/HeaderI18n.astro';
import Footer from '../components/Footer.astro';
import CookiesBanner from '../components/CookiesBanner.astro';
import { getLangFromUrl, getAlternateLinks } from '../i18n/utils';
import { useTranslation, type Language } from '../i18n/translations';
import '../styles/styles.css';
export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  keywords?: string;
  noindex?: boolean;
  schema?: object;
}
const lang = getLangFromUrl(Astro.url) as Language;
const t = useTranslation(lang);
const alternateLinks = getAlternateLinks(Astro.url);
const {
  title = t('meta.title'),
  description = t('meta.description'),
  canonical,
  ogImage = "/images/og-expert-comptable-luxembourg.jpg",
  keywords = lang === 'fr' 
    ? "expert comptable luxembourg, fiduciaire luxembourg, création sarl luxembourg, comptabilité PME, fiscalité IRC, TVA luxembourg"
    : "chartered accountant luxembourg, fiduciary luxembourg, sarl creation luxembourg, SME accounting, IRC taxation, VAT luxembourg",
  noindex = false,
  schema
} = Astro.props;
const siteUrl = "https://www.fiduciaire-expert.lu";
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl).href;
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${siteUrl}/#website`,
  "url": siteUrl,
  "name": "Fiduciaire Expert Luxembourg",
  "description": description,
  "publisher": { "@id": `${siteUrl}/#organization` },
  "inLanguage": lang === 'fr' ? "fr-LU" : "en-US"
};
const finalSchema = schema ? schema : websiteSchema;
---
<!doctype html>
<html lang={lang === 'fr' ? 'fr-LU' : 'en-US'}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5, user-scalable=yes" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  <!-- Canonical -->
  <link rel="canonical" href={canonicalURL} />
  <!-- Hreflang tags for SEO -->
  {alternateLinks.fr && <link rel="alternate" hreflang="fr-LU" href={`${siteUrl}${alternateLinks.fr}`} />}
  {alternateLinks.en && <link rel="alternate" hreflang="en-US" href={`${siteUrl}${alternateLinks.en}`} />}
  <link rel="alternate" hreflang="x-default" href={`${siteUrl}/fr`} />
  <!-- RSS Feeds -->
  <link rel="alternate" type="application/rss+xml" title="Fiduciaire Expert - Blog (FR)" href={`${siteUrl}/fr/rss.xml`} />
  <link rel="alternate" type="application/rss+xml" title="Fiduciaire Expert - Blog (EN)" href={`${siteUrl}/en/rss.xml`} />
  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(ogImage, siteUrl).href} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content={lang === 'fr' ? 'fr_LU' : 'en_US'} />
  <meta property="og:locale:alternate" content={lang === 'fr' ? 'en_US' : 'fr_LU'} />
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(ogImage, siteUrl).href} />
  <!-- Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify(finalSchema)} />
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <!-- PWA -->
  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#ffffff" />
  <!-- Google Fonts (utilisées dans styles.css) -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" as="style" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <a href="#main-content" class="skip-link">Aller au contenu principal</a>
  <HeaderI18n lang={lang} />
  <main id="main-content">
    <slot />
  </main>
  <Footer lang={lang} />
  <CookiesBanner lang={lang} />
</body>
</html>