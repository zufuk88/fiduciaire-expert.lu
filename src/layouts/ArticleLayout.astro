---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
const { title, seoTitle, description, date, modified, category, image, imageAlt } = frontmatter;

const pageTitle = seoTitle || title;
const siteUrl = Astro.site ? Astro.site.origin : "https://www.fiduciaire-expert.lu";
const articleUrl = new URL(Astro.url.pathname, siteUrl).href;

const articleSchema = { /* ... */ };
const breadcrumbSchema = { /* ... */ };
const combinedSchema = { "@context": "https://schema.org", "@graph": [ articleSchema, breadcrumbSchema ] };
---

<Layout
  title={pageTitle}
  description={description}
  canonical={articleUrl}
  schema={combinedSchema}
>
  <article class="article-page" itemscope itemtype="https://schema.org/Article">
    <header class="article-header">
      <div class="container-article">
        <p class="breadcrumb">
          <a href="/articles">Blog</a> / <span>{category}</span>
        </p>
        <h1 class="article-title" itemprop="headline">{title}</h1>
        <div class="article-meta">
          <time datetime={date} itemprop="datePublished">
            Publié le {new Date(date).toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' })}
          </time>
          <span class="meta-separator">|</span>
          <span itemprop="author" itemscope itemtype="https://schema.org/Organization">
            Par <span itemprop="name">Fiduciaire Expert</span>
          </span>
        </div>
      </div>
    </header>

    {image && (
      <figure class="article-featured-image">
        <img src={image} alt={imageAlt || `Illustration pour l'article : ${title}`} width="1200" height="600" loading="eager" fetchpriority="high" itemprop="image" />
      </figure>
    )}

    <div class="article-body-wrapper">
      <div class="container-article article-content" itemprop="articleBody">
        <slot />
        <div class="article-cta">
          <h3 class="cta-title">Besoin d'en savoir plus ?</h3>
          <p class="cta-subtitle">
            Nos experts sont à votre disposition pour en discuter.
          </p>
          <a href="/contact" class="btn btn-primary">Contactez-nous</a>
        </div>
        
      </div>
    </div>
  </article>
</Layout>

<style>
  /* --- Styles de base (inchangés) --- */
  .container-article { max-width: 900px; margin: 0 auto; padding: 0 1.5rem; }
  .article-header { padding: var(--spacing-lg) 0; text-align: center; background-color: var(--color-background-alt); border-bottom: 1px solid var(--color-border); }
  .breadcrumb { font-size: 0.9rem; color: var(--color-text-secondary); margin-bottom: 1rem; }
  .breadcrumb a { color: var(--color-text-secondary); text-decoration: none; }
  .breadcrumb a:hover { color: var(--color-primary); text-decoration: underline; }
  .article-title { font-size: 2.8rem; line-height: 1.2; margin-bottom: 1.5rem; }
  .article-meta { color: var(--color-text-secondary); }
  .meta-separator { margin: 0 0.5rem; }
  .article-featured-image { margin: 0; padding: 0; background-color: var(--color-background-alt); }
  .article-featured-image img { width: 100%; height: auto; max-height: 550px; object-fit: cover; display: block; }
  .article-body-wrapper { padding: var(--spacing-xl) 0; background-color: var(--color-background); }
  .article-content { font-size: 1.05rem; line-height: 1.8; }
  
  /* --- NOUVEAU : Styles pour le bloc CTA --- */
  .article-cta {
    margin-top: 4rem; /* Espace avant le bloc */
    padding: 2.5rem;
    text-align: center;
    border: 1px solid var(--color-border);
    background-color: var(--color-background-alt);
  }
  .cta-title {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .cta-subtitle {
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto 1.5rem auto;
  }

  /* --- Styles globaux pour le contenu Markdown (inchangés) --- */
  .article-content :global(h2), .article-content :global(h3), .article-content :global(h4) { line-height: 1.4; margin: 3rem 0 1.5rem 0; }
  .article-content :global(h2) { font-size: 2rem; }
  .article-content :global(h3) { font-size: 1.6rem; }
  .article-content :global(p) { margin-bottom: 1.5rem; }
  .article-content :global(a) { color: var(--color-primary); text-decoration: underline; }
  .article-content :global(a:hover) { text-decoration: none; }
  .article-content :global(ul), .article-content :global(ol) { margin-bottom: 1.5rem; padding-left: 1.8rem; }
  .article-content :global(li) { margin-bottom: 0.75rem; }
  .article-content :global(blockquote) { margin: 2.5rem 0; padding: 1.5rem; background-color: var(--color-background-alt); border-left: 4px solid var(--color-primary); font-style: italic; }
  .article-content :global(blockquote p) { margin-bottom: 0; }
  .article-content :global(img) { max-width: 100%; height: auto; margin: 2.5rem 0; }
  
  /* Styles pour les tableaux */
  .article-content :global(table) { width: 100%; margin-bottom: 2rem; border-collapse: collapse; border: 1px solid var(--color-border); font-size: 0.95rem; }
  .article-content :global(th), .article-content :global(td) { border: 1px solid var(--color-border); padding: 0.75rem 1rem; text-align: left; line-height: 1.5; }
  .article-content :global(th) { background-color: var(--color-background-alt); font-weight: 600; }
  /*
 * NOUVEAU : Correction pour forcer le texte du bouton en blanc
 * et retirer le soulignement des liens.
*/
.article-cta .btn-primary {
  color: var(--color-background); /* Assure que le texte est blanc */
  text-decoration: none;         /* Retire le soulignement hérité des liens */
}

/* Assure que le texte reste blanc même au survol */
.article-cta .btn-primary:hover {
  color: var(--color-background);
}
</style>