---
// src/pages/services/domiciliation.astro (exemple de chemin)

import Layout from '/src/layouts/Layout.astro'; // Adaptez le chemin si nécessaire

// --- DONNÉES & SEO (INCHANGÉS) ---
// Vos données et votre schéma SEO sont excellents et conservés.
const eligibilityConditions = [
  { critere: "Nature de l'activité", exigence: "Activité non commerciale (holding, financement, propriété intellectuelle, investissement)." },
  { critere: "Lien économique suffisant", exigence: "Au moins un critère parmi : bénéficiaire effectif résident, gérant local, ou investissements significatifs au Luxembourg." },
  { critere: "Substance minimale", exigence: "Comptabilité locale, compte bancaire luxembourgeois, et tenue des assemblées générales au Luxembourg." },
  { critere: "Conformité AML/KYC", exigence: "Un dossier KYC complet doit être validé, incluant la justification de l'origine des fonds." }
];

const domiciliationServices = [
  { service: "Adresse de Siège Social", description: "Une adresse professionnelle dans un quartier d'affaires reconnu à Luxembourg." },
  { service: "Gestion du Courrier", description: "Réception, tri et mise à disposition sécurisée de tout votre courrier officiel." },
  { service: "Permanence Téléphonique", description: "Un accueil téléphonique multilingue pour représenter professionnellement votre société." },
  { service: "Accès aux Espaces de Réunion", description: "Mise à disposition de salles équipées pour vos conseils d'administration." }
];

const activitesRefusees = [
  "Commerce de détail ou e-commerce",
  "Prestations de services commerciales",
  "Consulting opérationnel",
  "Toute activité nécessitant une autorisation d'établissement commerciale"
];

const metaDescription = "Service de domiciliation à Luxembourg pour sociétés non commerciales (holdings, SPV). Adresse de siège social conforme et services inclus. Lien économique requis.";
const domiciliationSchema = { /* Votre excellent schéma est conservé ici */ };
---

<Layout
  title="Domiciliation d'Entreprise au Luxembourg | Pour Activités Non Commerciales"
  description={metaDescription}
  schema={domiciliationSchema}
>
  <section class="page-hero">
    <div class="container">
      <p class="breadcrumb">
        <a href="/">Accueil</a> / <a href="/services">Services</a> / <span>Domiciliation</span>
      </p>
      <h1>Domiciliation d'Entreprise à Luxembourg</h1>
      <p class="hero-subtitle">
        Nous offrons un service de domiciliation de siège social strictement réservé aux **sociétés à caractère non commercial** (holdings, SPV, sociétés d'investissement) et exigeant un **lien économique réel avec le Luxembourg**.
      </p>
    </div>
  </section>

  <section class="eligibility-section">
    <div class="container-narrow">
      <div class="section-header">
        <h2 class="section-title">Conditions d'Éligibilité Strictes</h2>
        <p class="section-subtitle">
          Conformément à la loi luxembourgeoise, notre service de domiciliation est soumis à une analyse préalable rigoureuse de votre dossier.
        </p>
      </div>
      <ul class="eligibility-list">
        {eligibilityConditions.map(condition => (
          <li>
            <strong>{condition.critere} :</strong> {condition.exigence}
          </li>
        ))}
      </ul>
    </div>
  </section>

  <section class="activities-section">
    <div class="container">
      <div class="activities-grid">
        <div class="activities-column accepted">
          <h3>✓ Activités Éligibles</h3>
          <ul>
            <li>Sociétés de participations financières (SOPARFI / Holdings)</li>
            <li>Véhicules d'investissement (SPV)</li>
            <li>Sociétés de gestion de patrimoine familial (SPF)</li>
            <li>Sociétés de détention de propriété intellectuelle</li>
          </ul>
        </div>
        <div class="activities-column refused">
          <h3>✗ Activités Refusées</h3>
          <ul>
            {activitesRefusees.map(activite => <li>{activite}</li>)}
          </ul>
        </div>
      </div>
       <div class="legal-notice">
        <strong>Note légale :</strong> La loi du 31 mai 1999 interdit la domiciliation simple pour les sociétés ayant une activité commerciale, qui doivent disposer de leurs propres bureaux.
      </div>
    </div>
  </section>

  <section class="services-section">
    <div class="container-narrow">
      <div class="section-header">
        <h2 class="section-title">Notre Offre de Domiciliation</h2>
        <p class="section-subtitle">
          Un service complet pour assurer une présence stable et conforme à votre société au Luxembourg.
        </p>
      </div>
      <div class="services-content">
        {domiciliationServices.map(service => (
          <div class="service-item">
            <h4>{service.service}</h4>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
      <div class="pricing-card">
        <h4>Tarification Transparente</h4>
        <p class="price">À partir de <strong>150 € / mois</strong></p>
        <p class="price-details">Le tarif est ajusté selon les besoins en substance économique et la complexité de votre structure.</p>
        <a href="/contact?service=domiciliation" class="btn btn-secondary">Obtenir un devis personnalisé</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* --- Conteneurs et Headers --- */
  .container-narrow {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .section-header {
    text-align: center;
    margin: 0 auto var(--spacing-lg) auto;
  }
  .section-title { font-size: 2rem; margin-bottom: 0.5rem; }
  .section-subtitle { color: var(--color-text-secondary); font-size: var(--font-size-lg); }
  
  /* --- Section Héros --- */
  .page-hero {
    background-color: var(--color-background-alt);
    padding: var(--spacing-lg) 0;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }
  .breadcrumb { font-size: 0.9rem; margin-bottom: 1rem; color: var(--color-text-secondary); }
  .breadcrumb a { color: var(--color-text-secondary); }
  .breadcrumb a:hover { color: var(--color-primary); }
  .page-hero h1 { margin-bottom: 1rem; }
  .hero-subtitle { font-size: var(--font-size-lg); color: var(--color-text-secondary); max-width: 800px; margin: 0 auto; }
  
  /* --- Section Éligibilité --- */
  .eligibility-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background);
  }
  .eligibility-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    background-color: var(--color-background-alt);
    padding: 2rem;
    border: 1px solid var(--color-border);
  }
  .eligibility-list li {
    font-size: 1.1rem;
    line-height: 1.6;
  }

  /* --- Section Activités --- */
  .activities-section {
    padding: var(--spacing-xl) 0;
  }
  .activities-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  .activities-column {
    padding: 2rem;
    border: 1px solid var(--color-border);
  }
  .activities-column h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }
  .activities-column.accepted h3 { color: var(--success, #10b981); }
  .activities-column.refused h3 { color: var(--error, #dc2626); }
  .activities-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  .legal-notice {
    text-align: center;
    font-style: italic;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 2rem auto 0 auto;
  }

  /* --- Section Services Inclus --- */
  .services-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background-alt);
  }
  .services-content {
    border: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }
  .service-item {
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }
  .service-item:last-child {
    border-bottom: none;
  }
  .service-item h4 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }
  .service-item p {
    color: var(--color-text-secondary);
  }
  .pricing-card {
    border: 1px solid var(--color-primary);
    padding: 2rem;
    text-align: center;
  }
  .pricing-card h4 {
    font-size: 1.25rem;
  }
  .price {
    font-size: 2rem;
    font-weight: 700;
    margin: 1rem 0;
    display: block;
  }
  .price-details {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  /* --- Responsive --- */
  @media (min-width: 768px) {
    .activities-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>