const metaDescription = "Chartered accountant services in Luxembourg: BOB50 accounting, SARL formation, CCSS payroll management, CIT/MBT/NWT tax returns, due diligence. Free quote.";
const pageKeywords = "chartered accountant Luxembourg, BOB50 accounting, SARL formation Luxembourg, payroll management CCSS, tax declarations IRC ICC IF, VAT Luxembourg, domiciliation Luxembourg, due diligence, business plan, tax advisory Luxembourg, fiduciary Luxembourg, RCS Luxembourg, licensed accounting firm";
const pageUrl = "https://fiduciaire-expert.lu/en/services";
const faqItems = [
  {
    question: "Do you also manage declarations for self-employed workers?",
    answer: "Absolutely. We handle all your obligations: accounting, income tax declarations, VAT management and support with your CCSS procedures."
  },
  {
    question: "What does a standard accounting package include?",
    answer: "Our standard package includes complete bookkeeping, bank reconciliations, periodic VAT declarations, interim reports, preparation of annual accounts and RCS filing. Additional services are available as options: payroll management, management reporting, consolidation and personalized advice."
  },
  {
    question: "Do you offer payroll management?",
    answer: "Yes, we offer a complete service: issuing payslips, social declarations, leave management and processing of benefits in kind."
  },
  {
    question: "Do you work 100% digitally?",
    answer: "Absolutely. Our approach is fully dematerialized: automated document collection, integrated validation workflows and real-time dashboards. You and your teams benefit from secure access to all your data."
  },
  {
    question: "What languages do you work in?",
    answer: "We work in French, English, German and Luxembourgish."
  },
  {
    question: "What are your specialties?",
    answer: "We mainly support SMEs, the real estate sector, commercial companies, holdings/SOPARFI and professional services."
  },
  {
    question: "Do you help choose the right VAT regime?",
    answer: "Of course. We analyze your activity with regard to the VAT law to determine whether the VAT exemption or the normal regime is most suitable, then we implement the optimal regime for your situation."
  },
  {
    question: "Can I change accountants during the year?",
    answer: "Absolutely. We ensure a smooth transition with complete takeover of your data and continuity of all your declarations."
  },
  {
    question: "Do you assist in case of tax audit?",
    answer: "Yes, we support you at every stage: preliminary review of your file, preparation of necessary documents, response to administrations and management of exchanges."
  },
  {
    question: "How can I get a quote?",
    answer: "It's simple: provide us with your estimated monthly volume of accounting documents, your business sector, the services required (VAT, payroll, reporting) and your desired start date. We will analyze your needs and quickly send you a clear and detailed quote."
  }
];
// --- STRUCTURED DATA 10/10 ---
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "AccountingService",
      "@id": `${pageUrl}#service`,
      "name": "Accounting and Tax Services for SMEs in Luxembourg",
      "description": metaDescription,
      "provider": {
        "@type": "Organization",
        "name": "Fiduciaire Expert"
      },
      "areaServed": {
        "@type": "Country",
        "name": "Luxembourg"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Fiduciaire Expert Services Catalog",
        "itemListElement": allServices.map(service => ({
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": service.title,
            "description": service.description,
            "url": `${pageUrl}/${service.slug}`
          },
          "priceSpecification": {
            "@type": "PriceSpecification",
            "priceCurrency": "EUR",
            "description": service.price
          }
        }))
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "47",
        "bestRating": "5"
      },
      "priceRange": "€€"
    },
    {
      "@type": "FAQPage",
      "mainEntity": faqItems.map(item => ({
        "@type": "Question",
        "name": item.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": item.answer
        }
      }))
    }
  ]
};
