---
import LayoutI18n from '../../layouts/LayoutI18n.astro';
import StickyPageTop from '../../components/StickyPageTop.astro';
import FAQ from '../../components/FAQ.astro';
import ContactForm from '../../components/forms/ContactForm.astro';
import ServiceDetails from '../../components/ServiceDetails.astro';
import ServiceCards from '../../components/ServiceCards.astro';
import ServicesList from '../../components/ServicesList.astro';
const metaDescription = "Company domiciliation service in Luxembourg strictly compliant, reserved for asset management companies (SOPARFI, holdings, SPV). Licensed chartered accountant, complete AML/KYC compliance.";
const domiciliationSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://www.fiduciaire-expert.lu/en/domiciliation",
      "name": "Company Domiciliation in Luxembourg - Fiduciaire Expert",
      "description": metaDescription,
      "provider": {
        "@type": "Organization",
        "name": "Fiduciaire Expert",
        "url": "https://www.fiduciaire-expert.lu"
      },
      "areaServed": {
        "@type": "Country",
        "name": "Luxembourg"
      },
      "offers": {
        "@type": "Offer",
        "priceSpecification": {
          "@type": "PriceSpecification",
          "price": "150",
          "priceCurrency": "EUR",
          "unitText": "per month"
        }
      }
    }
  ]
};
const faqItems = [
  {
    question: "Can an active commercial company be domiciled?",
    answer: "No for operations: activities subject to establishment rights require dedicated premises. Domiciliation can cover the registered office, but does not replace operational premises."
  },
  {
    question: "Who signs the accounts and resolutions?",
    answer: "The managers/directors. We organize meetings and handle RESA/RCS formalities."
  },
  {
    question: "SPF: specific obligations?",
    answer: "Yes: annual certification to be submitted to ACD via MyGuichet."
  },
  {
    question: "What happens if the company does not cooperate with KYC?",
    answer: "Refusal to enter into relationship or termination, with RCS/RESA notification."
  }
];
---
<LayoutI18n
  title="Company Domiciliation Luxembourg | AML/KYC Compliant Service"
  description={metaDescription}
  canonical="https://www.fiduciaire-expert.lu/en/domiciliation"
  schema={domiciliationSchema}
>
  <StickyPageTop
    breadcrumbItems={[
      { text: "Home", href: "/en" },
      { text: "Services", href: "/en/services" },
      { text: "Domiciliation" }
    ]}
    title="Company domiciliation in Luxembourg"
    subtitle="Strictly compliant service reserved for asset management companies. Complete domiciliation solution for holdings, SOPARFI and investment vehicles with full AML/KYC compliance."
  />
  <!-- 2-column layout with ContactForm -->
  <section class="two-columns-section">
    <div class="container">
      <div class="columns-wrapper">
        <div class="left-column">
          <ServiceDetails
            services={[
              {
                title: "Professional domiciliation service",
                description: "Licensed chartered accountant Luxembourg with 100% compliance and mail processing within 24h."
              },
              {
                title: "What we offer",
                description: [
                  "Strictly compliant domiciliation service reserved for asset management companies (SOPARFI/holdings, investment SPVs, intellectual property companies, SPFs).",
                  "We require an effective management link to Luxembourg and apply comprehensive KYC/AML controls.",
                  "Important: Operational commercial activities (trade, e-commerce, daily services) require an establishment authorization and appropriate premises. Simple domiciliation is not sufficient to operate these activities."
                ]
              },
              {
                title: "Who can provide domiciliation?",
                description: [
                  "Only regulated professions established in Luxembourg (exhaustive list): Credit institutions and professionals from the financial sector (PFS) / insurance sector, Lawyers at the Bar (list I) and European lawyers (list IV), Company auditors / approved auditors, Chartered accountants (registered with OEC).",
                  "We are licensed chartered accountants and operate within this framework, following strict internal procedures."
                ]
              }
            ]}
          />
        </div>
        <div class="right-column">
          <ContactForm lang="en" />
        </div>
      </div>
    </div>
  </section>

  <!-- Legal basis and eligibility conditions with ServiceCards -->
  <ServiceCards
    title="Legal basis and eligibility conditions"
    subtitle="Strict regulatory framework in Luxembourg and required criteria"
    lang="en"
    cards={[
      {
        title: "Legal basis",
        description: "Luxembourg legal framework",
        features: [
          "Law of 31 May 1999 governing company domiciliation",
          "Law of 12 November 2004 on AML/CFT",
          "Right of establishment (amended law of 2 September 2011)",
          "Appropriate premises required for subject activities"
        ]
      },
      {
        title: "Non-commercial purpose",
        description: "Eligible company types",
        features: [
          "Holding and intra-group financing",
          "Asset holding companies",
          "IP holding (intellectual property)",
          "Investment vehicles",
          "Address does not replace operational premises"
        ]
      },
      {
        title: "Effective management",
        description: "Real presence in Luxembourg",
        features: [
          "Management/board meetings in Luxembourg",
          "Strategic decisions made locally",
          "Local signature provided as needed",
          "Legal secretariat on site",
          "Record keeping in Luxembourg"
        ]
      },
      {
        title: "KYC/AML compliance",
        description: "Mandatory controls",
        features: [
          "Complete identification of directors",
          "UBO documentation",
          "Source of funds verification",
          "Thorough risk assessment",
          "Continuous relationship monitoring"
        ]
      }
    ]}
  />
  <!-- Included services with ServiceCards -->
  <ServiceCards
    title="What domiciliation includes"
    subtitle="Complete services for your registered office in Luxembourg"
    lang="en"
    cards={[
      {
        title: "Basic services",
        description: "Essential services included",
        features: [
          "Registered office address in business district",
          "Reception and sorting of postal mail",
          "Scan and notification of important mail",
          "Secure document storage",
          "Mail delivery according to your instructions"
        ]
      },
      {
        title: "Legal secretariat",
        description: "Complete administrative support",
        features: [
          "Maintenance of domiciled companies register",
          "Legal deadline reminders",
          "RESA/RCS formalities assistance",
          "Statutory meeting preparation",
          "Minutes conservation"
        ]
      },
      {
        title: "Additional services",
        description: "Options available on request",
        features: [
          "Meeting rooms by reservation",
          "Dedicated phone reception line",
          "Local signature agenda",
          "Daily mail scans",
          "Enhanced secretariat"
        ]
      },
      {
        title: "AML compliance",
        description: "Regulatory controls",
        features: [
          "Complete initial KYC/AML",
          "Mandatory annual reviews",
          "Sanctions and PEP screening",
          "File updates",
          "Regulatory reporting"
        ]
      }
    ]}
  />
  <!-- Process with ServicesList -->
  <ServicesList
    title="4-step process"
    subtitle="Quick and compliant setup of your domiciliation"
    services={[
      "**Step 1: Pre-KYC & eligibility (2-3 days)**",
      "Activity information and company organization chart",
      "UBO identification and source of funds",
      "Sanctions and politically exposed persons (PEP) screening",
      "AML/CFT risk profile assessment",
      "",
      "**Step 2: Written domiciliation agreement (1 day)**",
      "Detailed description of services provided",
      "Definition of mutual obligations",
      "RCS/RESA notification powers in case of termination",
      "Termination clauses and exit conditions",
      "",
      "**Step 3: Implementation (3-5 days)**",
      "Opening of domiciliation services",
      "Planning of statutory meetings in Luxembourg",
      "Designation of local signatories and agents",
      "Mail management procedures setup",
      "",
      "**Step 4: Continuous follow-up (permanent)**",
      "Legal document retention for minimum 5 years",
      "Annual KYC file updates",
      "Legal deadline reminders (AGM, filings)",
      "Regular economic substance controls"
    ]}
  />
  <!-- Obligations with ServiceCards -->
  <ServiceCards
    title="Domiciliation agent obligations"
    subtitle="Extract of main legal obligations"
    lang="en"
    cards={[
      {
        title: "Pre-contractual obligations",
        description: "Verifications before signing",
        features: [
          "Verify compliance with company law rules",
          "Control establishment law compliance",
          "Assess AML/CFT risk profile",
          "Verify absence of international sanctions",
          "Document preliminary analysis"
        ]
      },
      {
        title: "Documentation obligations",
        description: "Document retention",
        features: [
          "Identify and document management body",
          "Identify beneficial owner (UBO)",
          "Retain documents â‰¥ 5 years after relationship end",
          "Maintain domiciled companies register",
          "Archive all important exchanges"
        ]
      },
      {
        title: "Notification obligations",
        description: "Information duties",
        features: [
          "Terminate contract if breach identified",
          "Notify RCS of any termination",
          "Inform CSSF if supervised company (1 month notice)",
          "File termination notice with RCS",
          "State Prosecutor information via RCS"
        ]
      }
    ]}
  />
  <!-- Sanctions with ServiceCards -->
  <ServiceCards
    title="Sanctions and risks for non-compliance"
    subtitle="Legal consequences of breaching obligations"
    lang="en"
    cards={[
      {
        title: "Illegal domiciliation",
        description: "Operating without authorization",
        features: [
          "Imprisonment from 8 days to 5 years",
          "Fine from â‚¬1,250 to â‚¬125,000",
          "Cumulative sanctions possible",
          "Possible operating ban"
        ]
      },
      {
        title: "Absence of written contract",
        description: "Domiciliation without contract",
        features: [
          "Same penalties as illegal domiciliation",
          "Domiciliation nullity",
          "Civil liability engaged",
          "OEC disciplinary sanctions"
        ]
      },
      {
        title: "Serious breaches",
        description: "Irregular domiciliation",
        features: [
          "Possible administrative closure",
          "Company judicial liquidation",
          "Loss of registered office",
          "Serious tax consequences"
        ]
      },
      {
        title: "Termination/denunciation",
        description: "End of domiciliation",
        features: [
          "Mandatory RESA publication",
          "Loss of legal domicile",
          "State Prosecutor notification",
          "Short regularization deadline"
        ]
      }
    ]}
  />
  <!-- Pricing with ServiceCards -->
  <ServiceCards
    title="Pricing"
    subtitle="Transparent rates adapted to your needs"
    lang="en"
    cards={[
      {
        title: "Standard domiciliation",
        description: "Simple asset companies with standard AML risk",
        features: [
          "Prestigious registered office address",
          "Complete mail management",
          "Basic legal secretariat",
          "KYC/AML and annual reviews",
          "Legal deadline reminders"
        ],
        price: "From â‚¬150/month"
      },
      {
        title: "Additional options",
        description: "Tailored complementary services",
        features: [
          "Dedicated phone reception line",
          "Equipped meeting rooms",
          "Daily mail scans",
          "Enhanced secretariat",
          "Representation services"
        ],
        price: "On request"
      }
    ]}
  />

  <section class="pricing-note">
    <div class="container">
      <p class="note-text">Final price depends on AML risk profile, expected substance level and group complexity. A detailed quote is issued after pre-KYC.</p>
    </div>
  </section>
  <FAQ
    title="Quick FAQ"
    subtitle=""
    faqItems={faqItems}
    
    generateSchema={true}
  />
</LayoutI18n>

<style>
  .two-columns-section {
    padding: var(--section-padding);
    background: var(--bg);
  }

  .container {
    max-width: var(--container-max, 1200px);
    margin: 0 auto;
    padding: 0 var(--section-padding-x);
  }

  .columns-wrapper {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--gap-lg, 40px);
    align-items: start;
  }

  .left-column {
    flex: 1;
  }

  .right-column {
    position: sticky;
    top: var(--header-height, 100px);
  }

  .pricing-note {
    padding: var(--section-padding-x);
    background: var(--bg);
    margin-top: calc(var(--gap-lg, 40px) * -1);
  }

  .note-text {
    text-align: center;
    color: var(--fg-secondary);
    font-style: italic;
    margin: 0;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .columns-wrapper {
      grid-template-columns: 1fr;
      gap: var(--gap-md, 30px);
    }

    .right-column {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .two-columns-section {
      padding: var(--section-padding-tablet);
    }
  }

  @media (max-width: 480px) {
    .two-columns-section {
      padding: var(--section-padding-mobile);
    }
  }
</style>

