---
// src/pages/en/articles/index.astro
import { getCollection } from 'astro:content';
import LayoutI18n from '../../../layouts/LayoutI18n.astro';
import SearchBar from '../../../components/SearchBar.astro';
import StickyPageTop from '../../../components/StickyPageTop.astro';
import ArticlesGrid from '../../../components/ArticlesGrid.astro';
// Pagination
const POSTS_PER_PAGE = 6;
const currentPage = 1; // Home page = page 1
// Fetch all articles
const allPosts = await getCollection('blog');
// Filter only articles with English categories
const englishCategories = ['Tax', 'Payroll', 'Accounting', 'Corporate Law'];
const englishPosts = allPosts.filter(post => englishCategories.includes(post.data.category) && post.data.draft !== true);
const sortedPosts = englishPosts.sort((a, b) => {
  // Use modified if it exists, otherwise use date
  const dateA = new Date(a.data.modified || a.data.date).getTime();
  const dateB = new Date(b.data.modified || b.data.date).getTime();
  return dateB - dateA;
});
// Prepare categories with counter
const categoriesWithCount = englishCategories.map(cat => {
  const slug = cat.toLowerCase().replace(/\s+/g, '-').replace(/'/g, '-');
  const count = englishPosts.filter(post => 
    post.data.category?.toLowerCase().replace(/\s+/g, '-').replace(/'/g, '-') === slug
  ).length;
  
  return {
    name: cat,
    slug: slug,
    count: count
  };
});

// Limit to POSTS_PER_PAGE articles for first page
const paginatedPosts = sortedPosts.slice(0, POSTS_PER_PAGE);

// Transform paginated posts for ArticlesGrid
const articles = paginatedPosts.map(post => ({
  title: post.data.title,
  excerpt: post.data.description || '',
  slug: post.slug.replace('en/', ''),
  date: post.data.date.toISOString(),
  category: post.data.category || 'Uncategorized',
  categorySlug: post.data.category?.toLowerCase().replace(/\s+/g, '-').replace(/'/g, '-') || 'uncategorized',
  author: post.data.author || 'Fiduciaire Expert',
  readTime: post.data.readingTime || '5',
  image: post.data.image?.src,
  tags: post.data.tags || []
}));

const categories = englishCategories;
const totalPages = Math.max(1, Math.ceil(sortedPosts.length / POSTS_PER_PAGE));
const hasMorePosts = sortedPosts.length > POSTS_PER_PAGE;

// SCALABLE SOLUTION: Limit to 50 recent articles for quick filtering
// Beyond that, redirect to dedicated category page
const MAX_ARTICLES_FOR_INSTANT_FILTER = 50;
const recentArticles = sortedPosts.slice(0, MAX_ARTICLES_FOR_INSTANT_FILTER);

// Transform only the 50 most recent articles for filtering
const allArticles = recentArticles.map(post => ({
  title: post.data.title,
  excerpt: post.data.description || '',
  slug: post.slug.replace('en/', ''),
  date: post.data.date.toISOString(),
  category: post.data.category || 'Uncategorized',
  categorySlug: post.data.category?.toLowerCase().replace(/\s+/g, '-').replace(/'/g, '-') || 'uncategorized',
  author: post.data.author || 'Fiduciaire Expert',
  readTime: post.data.readingTime || '5',
  image: post.data.image?.src,
  tags: post.data.tags || []
}));

// Calculate if each category has more articles than the limit
const categoryHasMore = {};
englishCategories.forEach(cat => {
  const slug = cat.toLowerCase().replace(/\s+/g, '-').replace(/'/g, '-');
  const totalInCategory = sortedPosts.filter(post => 
    post.data.category?.toLowerCase().replace(/\s+/g, '-').replace(/'/g, '-') === slug
  ).length;
  categoryHasMore[slug] = totalInCategory > MAX_ARTICLES_FOR_INSTANT_FILTER;
});
// Schema.org for articles page
const articlesSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "CollectionPage",
      "@id": "https://www.fiduciaire-expert.lu/en/articles",
      "name": "Chartered Accountant Luxembourg Articles | Fiduciaire Expert Blog",
      "description": `Discover our ${sortedPosts.length} expert articles on accounting, CIT/MBT taxation, VAT and company formation in Luxembourg.`,
      "url": "https://www.fiduciaire-expert.lu/en/articles",
      "isPartOf": {
        "@id": "https://www.fiduciaire-expert.lu/#website"
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://www.fiduciaire-expert.lu/en"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Articles",
            "item": "https://www.fiduciaire-expert.lu/en/articles"
          }
        ]
      }
    },
    {
      "@type": "Blog",
      "@id": "https://www.fiduciaire-expert.lu/en/articles#blog",
      "name": "Fiduciaire Expert Luxembourg Blog",
      "description": "Advice and news on accounting, taxation, payroll and corporate law in Luxembourg",
      "url": "https://www.fiduciaire-expert.lu/en/articles",
      "inLanguage": "en-GB",
      "publisher": {
        "@type": "Organization",
        "name": "Fiduciaire Expert",
        "url": "https://www.fiduciaire-expert.lu"
      },
      "blogPost": sortedPosts.slice(0, 10).map(post => ({
        "@type": "BlogPosting",
        "headline": post.data.title,
        "description": post.data.description,
        "datePublished": post.data.date.toISOString(),
        "dateModified": (post.data.modified || post.data.date).toISOString(),
        "url": `https://www.fiduciaire-expert.lu/en/articles/${post.slug.replace('en/', '')}`,
        "image": post.data.image ? `https://www.fiduciaire-expert.lu${post.data.image.src}` : undefined,
        "author": {
          "@type": "Organization",
          "name": "Fiduciaire Expert"
        },
        "articleSection": post.data.category,
        "keywords": post.data.tags?.join(', ')
      }))
    }
  ]
};
---
<LayoutI18n
  title="Chartered Accountant Luxembourg Articles | Accounting Tax Blog"
  description={`${sortedPosts.length} chartered accounting articles: CIT/MBT, Luxembourg VAT, SARL/SA formation, CCSS payroll. Tax and accounting advice by certified experts.`}
  canonical="https://www.fiduciaire-expert.lu/en/articles"
  schema={articlesSchema}
>
  {/* Link tag for next page SEO */}
  {hasMorePosts && (
    <Fragment slot="head">
      <link rel="next" href="/en/articles/page/2" />
    </Fragment>
  )}
  <StickyPageTop
    breadcrumbItems={[
      { text: "Home", href: "/en" },
      { text: "Blog" }
    ]}
    title="Chartered accounting and tax articles"
    subtitle="Practical guides on Luxembourg accounting, CIT/MBT/NWT and VAT tax returns, CCSS payroll management and company formation."
    showFilters={true}
    categories={categoriesWithCount}
    lang="en"
  />
  {sortedPosts.length > 0 ? (
    <>
      <section class="articles-page">
        <div class="container">
          <SearchBar 
            placeholder="Search article..." 
            lang="en"
          />
          
          <ArticlesGrid
            title="Our latest articles"
            subtitle="Stay informed on tax and accounting news in Luxembourg"
            articles={articles}
            lang="en"
          />
        </div>
      </section>
      
      {/* Pagination - hidden when filtering */}
      {hasMorePosts && (
        <div class="pagination-section" id="pagination-section">
          <div class="container">
            <div class="pagination">
              <span class="pagination-info">
                Page {currentPage} of {totalPages}
              </span>
              <a href="/en/articles/page/2" rel="next" class="pagination-next">
                Next articles
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 18l6-6-6-6" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      )}
    </>
  ) : (
    <section class="no-posts-section">
      <div class="container">
        <p>No articles have been published yet. Come back soon!</p>
      </div>
    </section>
  )}
  <script define:vars={{ articles, allArticles, categoryHasMore }}>
    // Pass article data to window for search
    window.articlesData = articles;
    // Pass the 50 most recent articles for quick filtering
    window.allArticlesData = allArticles;
    // Indicate which categories have too many articles for instant filtering
    window.categoryHasMore = categoryHasMore;
  </script>
</LayoutI18n>

<style>
  .articles-page {
    padding: 40px 0;
    background: var(--bg);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .pagination-section {
    padding: 40px 0 60px;
    background: var(--bg);
  }
  
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 24px;
    padding: 20px;
    background: var(--white);
    border-radius: 12px;
    box-shadow: 0 2px 8px var(--card-shadow-hover);
  }
  
  .pagination-info {
    font-family: var(--font-family);
    font-size: var(--text-base);
    color: var(--fg-secondary);
  }
  
  .pagination-next {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: var(--accent);
    color: var(--white);
    text-decoration: none;
    border-radius: 8px;
    font-family: var(--font-family);
    font-size: var(--text-base);
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .pagination-next:hover {
    background: var(--accent-dark);
    transform: translateX(2px);
  }
  
  .no-posts-section {
    padding: 80px 0;
    text-align: center;
    font-family: var(--font-family);
    font-size: var(--text-lg);
    color: var(--gray-muted);
  }
  
  @media (max-width: 768px) {
    .articles-page {
      padding: 20px 0;
    }
    
    .pagination-section {
      padding: 20px 0 40px;
    }
    
    .pagination {
      flex-direction: column;
      gap: 16px;
    }
  }
</style>
