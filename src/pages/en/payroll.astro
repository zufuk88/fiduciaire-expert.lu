---
import LayoutI18n from '../../layouts/LayoutI18n.astro';
import StickyPageTop from '../../components/StickyPageTop.astro';
import FAQ from '../../components/FAQ.astro';
import ContactForm from '../../components/forms/ContactForm.astro';
import ServiceDetails from '../../components/ServiceDetails.astro';
import ServiceCards from '../../components/ServiceCards.astro';
import ServicesList from '../../components/ServicesList.astro';

const metaDescription = "Payroll outsourcing in Luxembourg. Complete and compliant service: payslips, CCSS/CNS declarations, HR management. Experts in Luxembourg labor law.";

const payrollSchema = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Payroll Outsourcing Luxembourg",
  "serviceType": "Payroll management service",
  "provider": {
    "@type": "Organization",
    "name": "Fiduciaire Expert",
    "url": "https://fiduciaire-expert.lu"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Luxembourg"
  },
  "description": metaDescription
};

const faqItems = [
  {
    question: "What is the cost of outsourcing payroll in Luxembourg?",
    answer: "Our rates start from €15 excl. VAT per payslip. The price may vary depending on complexity (benefits in kind, stock options, etc.). CCSS/CNS declarations and legal archiving are included in our package."
  },
  {
    question: "How do you transmit monthly payroll variables?",
    answer: "We provide a secure portal for transmitting variable data (absences, overtime, bonuses). You can also send them via encrypted email or through our standardized Excel form."
  },
  {
    question: "Do you manage cross-border employees?",
    answer: "Yes, we perfectly master the management of cross-border workers (France, Belgium, Germany): A1 certificates, tax calculations according to tax treaties, social specificities of each country."
  },
  {
    question: "What happens in case of ITM or CCSS inspection?",
    answer: "We support you during inspections: document preparation, presence during interviews if necessary, and possible regularization. Our expertise minimizes the risk of reassessment."
  },
  {
    question: "Can you take over a file during the year?",
    answer: "Absolutely. We ensure a transparent takeover at any time of the year. We recover the history, verify compliance and ensure continuity without interruption for your employees."
  }
];
---
<LayoutI18n
  title="Payroll Outsourcing Luxembourg | Payslip Management & CCSS"
  description={metaDescription}
  canonical="https://fiduciaire-expert.lu/en/payroll"
  ogImage="/images/payroll-luxembourg.jpg"
  keywords="payroll outsourcing luxembourg, salary management, payslip, CCSS declaration, CNS luxembourg, labor law, employment contract, collective agreement"
  schema={payrollSchema}
>
  <StickyPageTop
    breadcrumbItems={[
      { text: "Home", href: "/en" },
      { text: "Services", href: "/en/services" },
      { text: "Payroll Management" }
    ]}
    title="Payroll outsourcing in Luxembourg"
    subtitle="Turnkey Luxembourg payroll: compliant payslips, CCSS declarations via SECUline, MyGuichet tax cards, withholding tax form 950, annual certificates and sick leave/accident management, with deadlines met."
  />

  <!-- 2-column layout with ContactForm -->
  <section class="two-columns-section">
    <div class="container">
      <div class="columns-wrapper">
        <div class="left-column">
          <ServiceDetails
            services={[
              {
                title: "Comprehensive payroll and social obligations management",
                description: "We handle your employees' payroll in compliance with laws, regulations and collective agreements."
              },
              {
                title: "Expertise in Luxembourg labor law",
                description: [
                  "Payroll management in Luxembourg requires perfect mastery of the Labor Code, sector collective agreements and social obligations. Our specialized team ensures permanent monitoring of legislative and regulatory changes.",
                  "We manage all aspects of payroll: calculation of salaries and benefits in kind, preparation of compliant payslips, CCSS declarations via SECUline, withholding tax management (form 950), issuance of annual certificates and monitoring of work incapacities.",
                  "Our service also includes complete HR support: drafting employment contracts, managing entries/exits, organizing mandatory medical examinations and assistance during ITM or CCSS inspections."
                ]
              },
              {
                title: "Digital and secure solution",
                description: [
                  "We use official Luxembourg administration tools (MyGuichet, SECUline) to guarantee compliance of all declarations. Electronic tax cards are consulted directly on MyGuichet, in accordance with the obligation in force since 2022.",
                  "Your secure portal allows you to transmit monthly variables and consult all payroll documents. 10-year legal archiving is ensured in compliance with GDPR."
                ]
              }
            ]}
          />
        </div>
        <div class="right-column">
          <ContactForm lang="en" />
        </div>
      </div>
    </div>
  </section>

  <!-- Main services with ServiceCards -->
  <ServiceCards
    title="Our payroll management services"
    subtitle="A complete solution for managing your social and salary obligations"
    lang="en"
    cards={[
      {
        title: "Payslip preparation and monitoring",
        description: "Complete monthly payroll management",
        features: [
          "Accurate calculation of fixed and variable salaries, bonuses and benefits in kind",
          "Preparation and monthly delivery of compliant payslips",
          "Issuance of payroll journal and monitoring of adjustments",
          "Annual remuneration certificates and ECSP filing before March 1st",
          "Electronic tax card consultation on MyGuichet"
        ]
      },
      {
        title: "CCSS social declarations",
        description: "Social security compliance",
        features: [
          "Entry declaration within 8 days via SECUline (DECAFF)",
          "Exit declaration within 8 days to CCSS",
          "Monthly remuneration declarations via SECUline",
          "Verification of monthly CCSS invoices",
          "Incapacity and accident management (CNS/AAA)",
          "Withholding tax form 950 within 10 days"
        ]
      },
      {
        title: "HR formalities and compliance",
        description: "Complete legal support",
        features: [
          "Pre-employment medical examination organization (STM, ASTF)",
          "Entry/exit management and work certificates",
          "Application of sector collective agreements",
          "Drafting and updating employment contracts",
          "Disciplinary procedures management",
          "Support during ITM/CCSS inspections"
        ]
      },
      {
        title: "Social advisory and assistance",
        description: "Permanent expert support",
        features: [
          "Legislative and regulatory monitoring",
          "Tax and social inspection assistance",
          "Cross-border employee management",
          "Severance payment calculation",
          "Social charges optimization",
          "Employer obligations training"
        ]
      }
    ]}
  />

  <!-- Methodology with ServicesList -->
  <ServicesList
    title="Our 4-step methodology"
    subtitle="A structured process for optimal payroll management"
    services={[
      "**Step 1: Onboarding and affiliation**",
      "Affiliation with occupational health service and organization of mandatory pre-employment medical examination",
      "Entry declaration to the Joint Social Security Center within 8 days via SECUline",
      "National registration number request if first affiliation",
      "Electronic tax card consultation on MyGuichet",
      "",
      "**Step 2: Monthly payroll management**",
      "Salary calculation and preparation of payslips with all mandatory legal requirements",
      "Declaration of remuneration and hours worked to the Joint Center via SECUline",
      "Verification of monthly Joint Center invoices",
      "",
      "**Step 3: Tax and social declarations**",
      "Withholding tax declaration (form 950) within 10 days after the period",
      "Adapted frequency: monthly if above €750, quarterly between €75 and €750, annual if below €75",
      "Management of sick leave and work accidents",
      "",
      "**Step 4: Annual closure**",
      "Issuance of annual remuneration certificates for each employee",
      "Filing of salary and pension account statements to the Direct Tax Administration before March 1st via MyGuichet",
      "Secure archiving of documents for 10 years"
    ]}
  />

  <!-- Advantages with simplified ServiceCards -->
  <ServiceCards
    title="Why outsource payroll with our fiduciary?"
    subtitle="Key advantages of our outsourcing solution"
    lang="en"
    cards={[
      {
        title: "Legal security",
        description: "Guaranteed compliance with Luxembourg Labor Code and social security obligations. Permanent updates according to legislative changes.",
        features: [
          "Labor Code compliance",
          "CCSS/CNS conformity",
          "Regulatory monitoring",
          "Risk minimization"
        ]
      },
      {
        title: "Time savings",
        description: "Free yourself from time-consuming administrative tasks to focus on your core business.",
        features: [
          "Streamlined administration",
          "Automated processes",
          "Deadlines respected",
          "Focus on your activity"
        ]
      },
      {
        title: "Confidentiality",
        description: "Maximum protection of your sensitive HR data with strict security protocols.",
        features: [
          "Secured data",
          "GDPR compliance",
          "Restricted access",
          "Secure archiving"
        ]
      }
    ]}
  />

  <!-- FAQ -->
  <FAQ
    title="Frequently asked questions about payroll management"
    subtitle="Everything you need to know about outsourcing your payroll in Luxembourg"
    faqItems={faqItems}
    generateSchema={true}
  />
</LayoutI18n>

<style>
  .two-columns-section {
    padding: var(--section-padding);
    background: var(--bg);
  }

  .container {
    max-width: var(--container-max, 1200px);
    margin: 0 auto;
    padding: 0 var(--section-padding-x);
  }

  .columns-wrapper {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--gap-lg, 40px);
    align-items: start;
  }

  .left-column {
    flex: 1;
  }

  .right-column {
    position: sticky;
    top: var(--header-height, 100px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .columns-wrapper {
      grid-template-columns: 1fr;
      gap: var(--gap-md, 30px);
    }

    .right-column {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .two-columns-section {
      padding: var(--section-padding-tablet);
    }
  }

  @media (max-width: 480px) {
    .two-columns-section {
      padding: var(--section-padding-mobile);
    }
  }
</style>