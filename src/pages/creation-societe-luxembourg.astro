    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--or-premium);
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    color: var(--texte-secondaire);
    font-weight: 600;
  }

  /* Society types section */
  .society-types-section {
    padding: 5rem 0;
    background: var(--fond-clair);
  }
  
  .society-types-section h2 {
    text-align: center;
    font-size: 2.5rem;
    color: var(--bleu-profond);
    margin-bottom: 1rem;
  }
  
  .section-intro {
    text-align: center;
    font-size: 1.2rem;
    color: var(--texte-secondaire);
    margin-bottom: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .society-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .society-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
    position: relative;
  }
  
  .society-card:hover {
    transform: translateY(-5px);
  }
  
  .society-card.no-notaire {
    border: 2px solid var(--or-premium);
  }
  
  .society-card.no-notaire::before {
    content: '⭐ SANS NOTAIRE';
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--or-premium);
    color: var(--bleu-profond);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
    z-index: 10;
  }
  
  .society-header {
    padding: 2rem;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .society-header h3 {
    color: var(--bleu-profond);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }
  
  .society-specs {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .spec-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .spec-label {
    color: var(--texte-secondaire);
    font-size: 0.9rem;
  }
  
  .spec-value {
    font-weight: 600;
    color: var(--bleu-profond);
  }
  
  .spec-value.price {
    color: var(--or-premium);
    font-size: 1.1rem;
  }
  
  .society-content {
    padding: 2rem;
  }
  
  .society-description {
    margin-bottom: 2rem;
    color: var(--texte-secondaire);
    line-height: 1.6;
  }
  
  .advantages-section,
  .disadvantages-section {
    margin-bottom: 1.5rem;
  }
  
  .advantages-section h4,
  .disadvantages-section h4 {
    margin-bottom: 0.8rem;
    color: var(--bleu-profond);
    font-size: 1rem;
  }
  
  .advantages-list,
  .disadvantages-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .advantages-list li,
  .disadvantages-list li {
    padding: 0.3rem 0;
    color: var(--texte-secondaire);
    font-size: 0.9rem;
    position: relative;
    padding-left: 1.5rem;
  }
  
  .advantages-list li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: #28a745;
    font-weight: bold;
  }
  
  .disadvantages-list li::before {
    content: "⚠";
    position: absolute;
    left: 0;
    color: #ffc107;
  }
  
