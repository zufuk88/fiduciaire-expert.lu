    padding: 1.5rem 2rem;
    background: var(--fond-clair);
    text-align: center;
  }
  
  .society-btn {
    display: inline-block;
    background: var(--or-premium);
    color: var(--bleu-profond);
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: bold;
    transition: all 0.3s ease;
  }
  
  .society-btn:hover {
    background: #ffdd77;
    transform: translateY(-2px);
  }

  /* Creation process */
  .creation-process {
    padding: 5rem 0;
    background: white;
  }
  
  .creation-process h2 {
    text-align: center;
    font-size: 2.5rem;
