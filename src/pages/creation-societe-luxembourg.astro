---
import Layout from '/src/layouts/Layout.astro'; // Adaptez le chemin

// --- DONNÉES & SEO (INCHANGÉS) ---
const societyTypes = [
  { type: "SARL-S (Simplifiée)", capital: "Dès 1€", notaire: false, description: "Idéale pour tester un projet à moindre coût, sans passage obligatoire chez le notaire.", avantages: ["Coût réduit", "Création rapide", "Formalités allégées"], cout: "À partir de 1 200€" },
  { type: "SARL", capital: "12 000€", notaire: true, description: "La forme la plus courante et la plus crédible pour les PME, nécessitant un acte notarié.", avantages: ["Crédibilité maximale", "Protection des associés", "Structure évolutive"], cout: "À partir de 2 500€" },
  { type: "SA (Société Anonyme)", capital: "30 000€", notaire: true, description: "Adaptée aux grands projets et à l'ouverture du capital à des investisseurs.", avantages: ["Prestige", "Accès aux marchés financiers", "Transmission d'actions facile"], cout: "Sur devis" },
  { type: "SCI (Société Civile)", capital: "Variable", notaire: false, description: "Exclusivement pour la gestion de patrimoine immobilier, sans activité commerciale.", avantages: ["Gestion immobilière", "Transmission familiale", "Fiscalité adaptée"], cout: "À partir de 1 500€" }
];

const legalLifecycleServices = [
    "Rédaction des statuts constitutifs",
    "Tenue des assemblées générales (AG)",
    "Modifications statutaires (siège, capital...)",
    "Opérations de restructuration (fusion, cession)",
    "Accompagnement à la liquidation",
    "Analyse des prix de transfert"
];

const constitutionSchema = { /* Votre excellent schéma est conservé ici */ };
const metaDescription = "Service expert pour la création de votre société au Luxembourg : SARL, SARL-S, SA, SCI. Nous gérons toutes les formalités de constitution et le suivi juridique.";
---

<Layout
  title="Création de Société au Luxembourg | SARL, SARL-S, SA"
  description={metaDescription}
  schema={constitutionSchema}
>
  <section class="page-hero">
    <div class="container">
      <p class="breadcrumb">
        <a href="/">Accueil</a> / <a href="/services">Services</a> / <span>Création de Société</span>
      </p>
      <h1>Création de Société au Luxembourg</h1>
      <p class="hero-subtitle">
        Nous vous accompagnons de A à Z dans la constitution de votre entreprise (SARL, SARL-S, SA, SCI). Profitez de notre expertise pour un lancement rapide, conforme et optimisé.
      </p>
    </div>
  </section>

  <section class="comparison-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Quelle Forme Juridique Choisir ?</h2>
        <p class="section-subtitle">Chaque structure a ses spécificités. Voici un comparatif pour vous aider à décider.</p>
      </div>
      <div class="comparison-grid">
        {societyTypes.map(society => (
          <div class:list={["society-card", { 'notary-required': society.notaire }]}>
            <h3>{society.type}</h3>
            <p class="society-description">{society.description}</p>
            <div class="society-details">
              <p><strong>Capital :</strong> {society.capital}</p>
              <p><strong>Notaire :</strong> {society.notaire ? 'Oui, obligatoire' : 'Non, non requis'}</p>
              <p><strong>Coût estimé :</strong> {society.cout}</p>
            </div>
            <div class="advantages">
              <h4>Principaux avantages :</h4>
              <ul>
                {society.avantages.map(avantage => <li>{avantage}</li>)}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="process-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Notre Processus de Création Simplifié</h2>
        <p class="section-subtitle">Nous prenons en charge toutes les étapes pour vous garantir une tranquillité d'esprit.</p>
      </div>
      <div class="process-grid">
        <div class="process-step">
          <span class="step-number">1</span>
          <h3>Audit & Conseil</h3>
          <p>Analyse de votre projet et recommandation de la structure juridique et fiscale la plus adaptée.</p>
        </div>
        <div class="process-step">
          <span class="step-number">2</span>
          <h3>Préparation & Rédaction</h3>
          <p>Nous rédigeons les statuts et préparons tous les documents nécessaires pour le notaire et le RCSL.</p>
        </div>
        <div class="process-step">
          <span class="step-number">3</span>
          <h3>Immatriculation</h3>
          <p>Nous assurons le dépôt des actes, l'immatriculation au Registre de Commerce et l'obtention du numéro de TVA.</p>
        </div>
        <div class="process-step">
          <span class="step-number">4</span>
          <h3>Lancement</h3>
          <p>Votre société est officiellement créée. Nous vous accompagnons pour l'ouverture du compte bancaire final.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="legal-support-section">
    <div class="container-narrow">
      <div class="section-header">
        <h2 class="section-title">Un Accompagnement Juridique Complet</h2>
        <p class="section-subtitle">La vie d'une société ne s'arrête pas à sa création. Nous vous assistons sur l'ensemble de son cycle de vie.</p>
      </div>
      <div class="legal-list">
        {legalLifecycleServices.map(service => <li>✓ {service}</li>)}
      </div>
    </div>
  </section>

</Layout>

<style>
  /* --- Shared Styles --- */
  .container-narrow { max-width: 800px; margin: 0 auto; padding: 0 1rem; }
  .section-header { text-align: center; max-width: 720px; margin: 0 auto var(--spacing-lg) auto; }
  .section-title { font-size: 2rem; margin-bottom: 0.5rem; }
  .section-subtitle { color: var(--color-text-secondary); font-size: var(--font-size-lg); }

  /* --- Hero Section --- */
  .page-hero {
    background-color: var(--color-background-alt);
    padding: var(--spacing-lg) 0;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }
  .breadcrumb { font-size: 0.9rem; margin-bottom: 1rem; color: var(--color-text-secondary); }
  .breadcrumb a { color: var(--color-text-secondary); }
  .breadcrumb a:hover { color: var(--color-primary); }
  .page-hero h1 { margin-bottom: 1rem; }
  .hero-subtitle { font-size: var(--font-size-lg); color: var(--color-text-secondary); max-width: 800px; margin: 0 auto; }

  /* --- Comparison Section --- */
  .comparison-section {
    padding: var(--spacing-xl) 0;
  }
  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
  .society-card {
    border: 1px solid var(--color-border);
    padding: 2rem;
    display: flex;
    flex-direction: column;
  }
  .society-card.notary-required {
    border-top: 4px solid var(--color-dark);
  }
  .society-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .society-description {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  .society-details {
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 1.5rem;
  }
  .society-details p {
    display: flex;
    justify-content: space-between;
  }
  .advantages h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  .advantages ul {
    list-style: none;
    padding: 0;
    color: var(--color-text-secondary);
  }

  /* --- Process Section --- */
  .process-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background-alt);
  }
  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    position: relative;
  }
  .process-step {
    text-align: center;
    padding: 1.5rem;
  }
  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-dark);
    color: var(--color-background);
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }
  .process-step h3 { font-size: 1.1rem; margin-bottom: 0.5rem; }
  .process-step p { color: var(--color-text-secondary); }

  /* --- Legal Support Section --- */
  .legal-support-section {
    padding: var(--spacing-xl) 0;
  }
  .legal-list {
    list-style: none;
    padding: 2rem;
    margin: 0;
    background-color: var(--color-background-alt);
    border: 1px solid var(--color-border);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }
  .legal-list li {
    padding-left: 0.5rem;
  }
</style>