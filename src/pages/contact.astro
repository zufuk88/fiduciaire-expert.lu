  }
  
  .subtitle {
    font-size: 1.1rem;
    color: var(--texte-secondaire);
  }

  /* Contact direct */
  .contact-direct {
    padding: 3rem 0;
    background: white;
  }
  
  .contact-options {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  
  .contact-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--fond-clair);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
