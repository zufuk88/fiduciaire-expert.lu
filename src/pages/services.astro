    slug: "conseil-fiscal-luxembourg",
    price: "120€/heure",
    color: "#27ae60",
    gradient: "linear-gradient(135deg, #27ae60 0%, #2ecc71 100%)"
  },
  {
    title: "Due Diligence & Business Plan",
    shortTitle: "Due Diligence",
    description: "Audit acquisition entreprise Luxembourg et structuration business plans. Due diligence complète pour investisseurs et acquéreurs.",
