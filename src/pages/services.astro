// Meta description optimisée avec mots-clés
const metaDescription = "Expert-Comptable Luxembourg ✓ 8 services : comptabilité PME, création SARL/SA, domiciliation, paie CCSS, fiscalité IRC/ICC/IF ✓ 15 ans expérience ✓ +150 clients ✓ Devis gratuit 24h";

// Données structurées ultra-complètes pour SEO 10/10
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://www.fiduciaire-expert.lu/services",
      "name": "Services Expert-Comptable Luxembourg",
      "description": "Services comptables complets au Luxembourg : comptabilité, création société, domiciliation, paie et conseil fiscal pour PME et entrepreneurs",
      "provider": {
        "@type": "AccountingService",
        "@id": "https://www.fiduciaire-expert.lu/#organization",
        "name": "Fiduciaire Expert Luxembourg",
        "image": "https://www.fiduciaire-expert.lu/images/logo.png",
        "telephone": "+352-XX-XX-XX-XX",
        "email": "contact@fiduciaire-expert.lu",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "25 Boulevard Royal",
          "addressLocality": "Luxembourg",
          "postalCode": "L-2449",
          "addressCountry": "LU"
        },
        "priceRange": "€€",
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.9",
          "reviewCount": "156",
          "bestRating": "5"
        }
      },
      "areaServed": {
        "@type": "Country",
        "name": "Luxembourg"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Catalogue Services Comptables Luxembourg",
        "itemListElement": allServices.map((service, index) => ({
          "@type": "Offer",
          "position": index + 1,
          "url": `https://www.fiduciaire-expert.lu/services/${service.slug}`,
          "name": service.title,
          "description": service.description,
          "price": service.price,
          "priceCurrency": "EUR",
          "availability": "https://schema.org/InStock",
          "validFrom": "2024-01-01",
          "priceValidUntil": "2024-12-31",
          "itemOffered": {
            "@type": "Service",
            "name": service.title,
            "description": service.description,
            "provider": {
              "@id": "https://www.fiduciaire-expert.lu/#organization"
            }
          }
        }))
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Accueil",
          "item": "https://www.fiduciaire-expert.lu"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Services Expert-Comptable",
          "item": "https://www.fiduciaire-expert.lu/services"
        }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Quels sont les tarifs d'un expert-comptable au Luxembourg ?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Les tarifs d'expert-comptable au Luxembourg varient selon les services : Comptabilité PME 300-800€/mois, Création société à partir de 1.500€, Domiciliation dès 150€/mois, Gestion paie 25€/salarié. Première consultation gratuite pour établir un devis personnalisé."
          }
        },
        {
          "@type": "Question",
          "name": "Combien de temps pour créer une société au Luxembourg ?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Avec Fiduciaire Expert, la création d'une société au Luxembourg prend 5 à 7 jours ouvrables incluant rédaction des statuts, passage notaire, immatriculation RCSL et ouverture compte bancaire."
          }
        },
        {
          "@type": "Question",
          "name": "Quels types de sociétés peut-on créer au Luxembourg ?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Nous créons tous types de sociétés luxembourgeoises : SA (Société Anonyme), SARL (Société à Responsabilité Limitée), SCI (Société Civile Immobilière), SCSp (Société en Commandite Spéciale), SAS (Société par Actions Simplifiée)."
          }
        }
      ]
    },
    {
      "@type": "WebPage",
      "@id": "https://www.fiduciaire-expert.lu/services#webpage",
      "url": "https://www.fiduciaire-expert.lu/services",
      "name": "Services Expert-Comptable Luxembourg | Comptabilité, Création SARL, Fiscalité",
      "description": metaDescription,
      "isPartOf": {
        "@type": "WebSite",
        "@id": "https://www.fiduciaire-expert.lu/#website"
      },
      "about": {
        "@type": "Service",
        "@id": "https://www.fiduciaire-expert.lu/services"
      },
      "breadcrumb": {
        "@id": "https://www.fiduciaire-expert.lu/services#breadcrumb"
      },
      "primaryImageOfPage": {
        "@type": "ImageObject",
        "url": "https://www.fiduciaire-expert.lu/images/services-expert-comptable.jpg"
      }
    }
  ]
};
---

<Layout
  title="Services Expert-Comptable Luxembourg | Comptabilité, Création SARL, Fiscalité"
  description={metaDescription}
  canonical="https://www.fiduciaire-expert.lu/services"
  ogImage="/images/og-services.jpg"
  schema={structuredData}
>
  <main class="services-page" itemscope itemtype="https://schema.org/Service">
    
    <section class="hero-section">
      <div class="hero-background">
        <div class="hero-pattern"></div>
        <div class="hero-gradient"></div>
      </div>
      
      <div class="container">
        <nav class="breadcrumb" aria-label="Fil d'ariane">
          <ol>
            <li><a href="/">Accueil</a></li>
            <li aria-current="page">Services</li>
          </ol>
        </nav>
        
        <div class="hero-content">
          <div class="hero-badge">Excellence depuis 2010</div>
          <h1 class="hero-title">
            <span class="title-line">Services</span>
            <span class="title-highlight">Expert-Comptable</span>
            <span class="title-line">Luxembourg</span>
          </h1>
          <p class="hero-description">
            Cabinet d'expertise comptable agréé offrant une gamme complète de services pour entrepreneurs et PME au Grand-Duché. <strong>15 ans d'expérience</strong>, <strong>+150 clients satisfaits</strong>.
          </p>
          
          <div class="hero-stats">
            <div class="stat-card glass">
              <div class="stat-icon">⚡</div>
              <div class="stat-content">
                <div class="stat-number">24h</div>
                <div class="stat-label">Réponse garantie</div>
              </div>
            </div>
            <div class="stat-card glass">
              <div class="stat-icon">⭐</div>
              <div class="stat-content">
                <div class="stat-number">4.9/5</div>
                <div class="stat-label">Note clients</div>
              </div>
            </div>
            <div class="stat-card glass">
              <div class="stat-icon">✓</div>
              <div class="stat-content">
                <div class="stat-number">100%</div>
                <div class="stat-label">Conformité légale</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="services-section" id="services">
      <div class="container">
        <div class="section-header">
          <div class="section-badge">8 services spécialisés</div>
          <h2>Excellence Comptable & Fiscale</h2>
          <p>Solutions sur-mesure pour chaque étape de votre développement au Luxembourg</p>
        </div>
        
        <div class="services-grid">
          {allServices.map((service, index) => (
            <article
              class={`service-card ${service.popular ? 'popular' : ''}`}
              style={`--service-gradient: ${service.gradient}; --service-color: ${service.color}; --card-delay: ${index * 0.1}s`}
              itemscope
              itemtype="https://schema.org/Service"
              itemprop="hasOfferCatalog"
            >
              {service.popular && (
                <div class="popular-ribbon">
                  <span>Plus demandé</span>
                </div>
              )}
              
              <div class="card-background"></div>
              
              <div class="card-content">
                <div class="card-header">
                  <div class="service-icon glass">
                    <div set:html={service.icon} />
                  </div>
                  <h3 class="service-title" itemprop="name">{service.title}</h3>
                </div>
                
                <p class="service-description" itemprop="description">
                  {service.description}
                </p>
                
                <ul class="service-features">
                  {service.features.map(feature => (
                    <li>
                      <div class="feature-icon">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                          <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                      </div>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
                
                <div class="card-footer">
                  <div class="service-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                    <span class="price-label">Tarif</span>
                    <span class="price-value" itemprop="price">{service.price}</span>
                    <meta itemprop="priceCurrency" content="EUR" />
                  </div>
                  
                  <div class="service-actions">
                    <a
                      href={`/contact?service=${service.slug}`}
                      class="btn btn-primary"
                      aria-label={`Demander un devis pour ${service.shortTitle}`}
                    >
                      <span>Devis gratuit</span>
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                      </svg>
                    </a>
                    <a
                      href={`/services/${service.slug}`}
                      class="btn btn-ghost"
                      aria-label={`En savoir plus sur ${service.shortTitle}`}
                    >
                      <span>Détails</span>
                    </a>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="benefits-section">
      <div class="container">
        <div class="section-header">
          <h2>L'Excellence Fiduciaire Expert</h2>
          <p>Pourquoi plus de 150 entreprises nous font confiance</p>
        </div>
        
        <div class="benefits-grid">
          <div class="benefit-card glass">
            <div class="benefit-number">01</div>
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                <path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
            <h3>Expertise Approfondie</h3>
            <p>15+ années d'expérience en législation luxembourgeoise. Maîtrise parfaite du cadre légal et fiscal.</p>
          </div>
          
          <div class="benefit-card glass">
            <div class="benefit-number">02</div>
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
            </div>
            <h3>Réactivité Garantie</h3>
            <p>Réponse sous 24h maximum. Traitement prioritaire des urgences. Support continu.</p>
          </div>
          
          <div class="benefit-card glass">
            <div class="benefit-number">03</div>
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
              </svg>
            </div>
            <h3>Tarifs Transparents</h3>
            <p>Prix fixes annoncés à l'avance. Aucun frais caché. Devis détaillé gratuit.</p>
          </div>
          
          <div class="benefit-card glass">
            <div class="benefit-number">04</div>
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="8.5" cy="7" r="4"/>
                <path d="M20 8v6M23 11h-6"/>
              </svg>
            </div>
            <h3>Accompagnement Personnalisé</h3>
            <p>Un interlocuteur unique dédié. Conseil adapté à votre secteur. Suivi proactif.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="faq-section">
      <div class="container">
        <div class="section-header">
          <h2>Questions Fréquentes</h2>
          <p>Tout ce que vous devez savoir sur nos services d'expert-comptable</p>
        </div>
        
        <div class="faq-container" itemscope itemtype="https://schema.org/FAQPage">
          <div class="faq-item glass" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
            <details>
              <summary itemprop="name">
                <span>Quels sont les tarifs d'un expert-comptable au Luxembourg ?</span>
