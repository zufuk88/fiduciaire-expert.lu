---
// src/pages/a-propos.astro

import Layout from '../layouts/Layout.astro';
// NOUVEAU : Importation du composant Image et des images
import { Image } from 'astro:assets';
import bureauImage from '/src/assets/images/bureau-fiduciaire.jpg';
import marcDuboisImage from '/src/assets/images/marc-dubois.jpg';
import sophieBernardImage from '/src/assets/images/sophie-bernard.jpg';
import thomasWagnerImage from '/src/assets/images/thomas-wagner.jpg';

// MODIFIÉ : On utilise les variables d'images importées
const teamMembers = [
  {
    name: "Marc Dubois",
    role: "Expert-Comptable Agréé, Fondateur",
    imageUrl: marcDuboisImage, // Modifié
    imageAlt: "Portrait de Marc Dubois, Expert-Comptable à Luxembourg",
    bio: "Fondateur de Fiduciaire Expert, Marc met à profit plus de 15 ans d'expérience acquise en Big Four pour offrir aux PME un conseil stratégique et une optimisation fiscale de premier ordre.",
    linkedin: "https://linkedin.com/in/marcdubois"
  },
  {
    name: "Sophie Bernard",
    role: "Co-Fondatrice, Responsable Fiscalité",
    imageUrl: sophieBernardImage, // Modifié
    imageAlt: "Portrait de Sophie Bernard, Fiscaliste à Luxembourg",
    bio: "Co-fondatrice et spécialiste de la fiscalité luxembourgeoise, Sophie assure une conformité parfaite des déclarations TVA et une maîtrise totale des réglementations locales.",
    linkedin: "https://linkedin.com/in/sophiebernard"
  },
  {
    name: "Thomas Wagner",
    role: "Directeur Paie & Social",
    imageUrl: thomasWagnerImage, // Modifié
    imageAlt: "Portrait de Thomas Wagner, Spécialiste Paie à Luxembourg",
    bio: "Expert en droit social luxembourgeois, Thomas pilote le pôle paie avec une rigueur absolue, garantissant la conformité des déclarations CCSS et la gestion des conventions collectives.",
    linkedin: "https://linkedin.com/in/thomaswagner"
  },
];

// ... (le reste de vos données `stats`, `values`, etc. reste INCHANGÉ)
const stats = [
  { number: "15+", label: "Années d'expertise" },
  { number: "150+", label: "Clients accompagnés" },
  { number: "98%", label: "Taux de satisfaction" },
  { number: "100%", label: "Conformité garantie" }
];
const values = [
  { title: "Expertise locale", description: "Une maîtrise parfaite du cadre légal, social et fiscal luxembourgeois (IRC/ICC/IF, TVA et CCSS), assurée par une veille juridique constante." },
  { title: "Transparence", description: "Nos tarifs sont clairs et nos devis détaillés. Nous croyons en une communication ouverte et un dialogue avec nos clients." },
  { title: "Conseil", description: "Chaque client bénéficie d'un interlocuteur unique et dédié, garantissant une disponibilité et un conseil personnalisé." },
];
const testimonials = [
  { content: "Fiduciaire Expert nous accompagne depuis longtemps. Leur expertise du marché luxembourgeois est remarquable. Création de notre holding en quelques semaines !", author: "M. Laurent", role: "CEO, TechLux Solutions" },
  { content: "Conseil fiscal et accompagnement exceptionnels : nous avons eu des résultats immédiats. L'équipe est réactive et toujours de bon conseil. Je recommande vivement.", author: "P. Schmitt", role: "CFO, Finance Partners" },
];
const aboutSchema = { /* ... */ };
const metaDescription = "Découvrez Fiduciaire Expert, cabinet comptable de référence à Luxembourg. Fondé par des experts issus des Big Four, nous offrons une excellence accessible aux PME.";
---

<Layout
  title="À Propos | Cabinet d'Expertise Comptable de Référence à Luxembourg"
  description={metaDescription}
  canonical="https://www.fiduciaire-expert.lu/a-propos"
  schema={aboutSchema}
>
  <section class="page-hero">
    <div class="container">
      <p class="breadcrumb">
        <a href="/">Accueil</a> / <span>À Propos</span>
      </p>
      <h1>L'excellence comptable, accessible à tous</h1>
      <p class="hero-subtitle">
        Fondé par d'anciens experts de Big Four, Fiduciaire Expert démocratise le conseil comptable et fiscal luxembourgeois.
      </p>
    </div>
  </section>

  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        {stats.map(stat => (
          <div class="stat-item">
            <span class="stat-number">{stat.number}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="story-section">
    <div class="container story-grid">
      <div class="story-image">
        <Image 
          src={bureauImage}
          alt="Les bureaux modernes de Fiduciaire Expert à Luxembourg Ville"
          width={600} height={750} loading="lazy"
          quality="mid"
        />
      </div>
      <div class="story-content">
        <h2 class="section-title">Notre mission : votre réussite</h2>
        <p><strong>Fiduciaire Expert</strong> est né d'une conviction : chaque entrepreneur au Luxembourg mérite un accompagnement d'excellence, une valeur ajoutée souvent réservée aux multinationales. Nos fondateurs, formés au sein des Big Four et de fiduciaires de premier plan, ont uni leurs forces pour offrir cette expertise à toutes les sociétés du Luxembourg.</p>
        <p>Notre équipe d'experts certifiés vous accompagne dans tous les domaines comptables, fiscaux et sociaux. Nous ne nous contentons pas de garantir votre conformité ; nous vous aidons à bâtir une stratégie durable et optimisée pour votre entreprise.</p>
      </div>
    </div>
  </section>

  <section class="values-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Nos engagements</h2>
        <p>Les quatre piliers qui fondent la confiance de nos 150 clients.</p>
      </div>
      <div class="values-grid">
        {values.map(value => (
          <div class="value-card">
            <h3>{value.title}</h3>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="team-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Nos fondateurs</h2>
        <p>Une expertise de premier plan au service de votre entreprise.</p>
      </div>
      <div class="team-grid">
        {teamMembers.map((member) => (
          <article class="team-card" itemscope itemtype="https://schema.org/Person">
            <Image
              class="team-image"
              src={member.imageUrl} 
              alt={member.imageAlt}
              width={300} height={300} loading="lazy"
              itemprop="image"
              quality="mid"
            />
            <div class="team-info">
              <h3 itemprop="name">{member.name}</h3>
              <p class="team-role" itemprop="jobTitle">{member.role}</p>
              <p class="team-bio" itemprop="description">{member.bio}</p>
              <a href={member.linkedin} class="team-linkedin" target="_blank" rel="noopener noreferrer" itemprop="sameAs">
                Voir le profil LinkedIn →
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="testimonials-section">
    <div class="container">
        <div class="section-header">
          <h2 class="section-title">Ce que nos clients disent</h2>
        </div>
        <div class="testimonials-grid">
          {testimonials.map(testimonial => (
            <blockquote class="testimonial-card">
              <p>{testimonial.content}</p>
              <footer>
                <cite class="testimonial-author">{testimonial.author}</cite>
                <span class="testimonial-role">{testimonial.role}</span>
              </footer>
            </blockquote>
          ))}
        </div>
    </div>
  </section>

</Layout>

<style>
  /* ===== STYLE COHÉRENT AVEC INDEX, SERVICES ET ARTICLES ===== */
  
  /* Section Header - Style unifié */
  .section-header {
    text-align: center;
    max-width: 720px;
    margin: 0 auto var(--spacing-lg) auto;
  }
  
  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    margin-bottom: 1rem;
    color: var(--color-dark);
  }
  
  .section-header p {
    color: var(--color-text-secondary);
    font-size: var(--font-size-lg);
    line-height: 1.7;
  }

  /* Section Héros - Style élégant avec gradient subtil */
  .page-hero {
    background: linear-gradient(135deg, var(--color-background) 0%, #f0f4f8 100%);
    padding: var(--spacing-xl) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  
  .page-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(circle, rgba(0, 95, 204, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .page-hero .container {
    position: relative;
    z-index: 1;
  }
  
  .breadcrumb {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: rgba(0, 95, 204, 0.08);
    border: 1px solid rgba(0, 95, 204, 0.2);
    border-radius: 24px;
  }
  
  .breadcrumb a {
    color: var(--color-primary);
    font-weight: 500;
  }
  
  .breadcrumb a:hover {
    text-decoration: underline;
  }
  
  .page-hero h1 {
    margin-bottom: 1.5rem;
    font-size: clamp(2rem, 5vw, 3rem);
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    max-width: 720px;
    margin: 0 auto;
    line-height: 1.7;
  }
  
  /* Section Chiffres Clés - Design moderne */
  .stats-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background);
    position: relative;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 960px;
    margin: 0 auto;
    text-align: center;
  }
  
  .stat-item {
    padding: 2rem 1rem;
    background-color: var(--color-background);
    border: 1px solid rgba(222, 226, 230, 0.5);
    border-radius: 12px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .stat-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary) 0%, #0047a3 100%);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .stat-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
    border-color: transparent;
  }
  
  .stat-item:hover::before {
    transform: translateX(0);
  }
  
  .stat-number {
    display: block;
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary) 0%, #0047a3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    color: var(--color-text-secondary);
    font-size: var(--font-size-base);
  }

  /* Section Histoire - Design moderne avec image */
  .story-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background-alt);
    position: relative;
  }
  
  .story-grid {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: 3rem;
  }
  
  .story-image {
    position: relative;
  }
  
  .story-image::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: 20px;
    bottom: 20px;
    background: linear-gradient(135deg, rgba(0, 95, 204, 0.1) 0%, transparent 100%);
    border-radius: 16px;
    z-index: -1;
  }
  
  .story-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 16px;
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.08);
  }
  
  .story-content h2 {
    margin-bottom: 1.5rem;
  }
  
  .story-content p {
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    font-size: var(--font-size-base);
  }

  /* Section Valeurs - Cartes modernes */
  .values-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background);
  }
  
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .value-card {
    background-color: var(--color-background);
    border: 1px solid rgba(222, 226, 230, 0.5);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .value-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary) 0%, #0047a3 100%);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .value-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
    border-color: transparent;
  }
  
  .value-card:hover::before {
    transform: translateX(0);
  }
  
  .value-card h3 {
    font-size: 1.375rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
  }
  
  .value-card p {
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  /* Section Équipe - Design premium */
  .team-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background-alt);
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
  
  .team-card {
    background-color: var(--color-background);
    border: 1px solid rgba(222, 226, 230, 0.5);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .team-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary) 0%, #0047a3 100%);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .team-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
    border-color: transparent;
  }
  
  .team-card:hover::before {
    transform: translateX(0);
  }
  
  .team-image {
    width: 100%;
    height: 320px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .team-card:hover .team-image {
    transform: scale(1.05);
  }
  
  .team-info {
    padding: 2rem;
  }
  
  .team-info h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-dark);
  }
  
  .team-role {
    color: var(--color-primary);
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .team-bio {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }
  
  .team-linkedin {
    font-weight: 600;
    color: var(--color-primary);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.2s ease;
  }
  
  .team-linkedin:hover {
    gap: 0.75rem;
  }

  /* Section Témoignages - Design moderne */
  .testimonials-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background);
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }
  
  .testimonial-card {
    background-color: var(--color-background);
    border: 1px solid rgba(222, 226, 230, 0.5);
    border-radius: 12px;
    padding: 2.5rem;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .testimonial-card::before {
    content: '"';
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    font-size: 4rem;
    color: rgba(0, 95, 204, 0.1);
    font-family: Georgia, serif;
    line-height: 1;
  }
  
  .testimonial-card:hover {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.06);
    transform: translateY(-4px);
  }
  
  .testimonial-card p {
    font-size: 1.125rem;
    font-style: italic;
    margin: 0 0 1.5rem 0;
    color: var(--color-text);
    line-height: 1.7;
    position: relative;
    z-index: 1;
  }
  
  .testimonial-card footer {
    border-top: 1px solid rgba(222, 226, 230, 0.3);
    padding-top: 1rem;
  }
  
  .testimonial-author {
    font-weight: 600;
    display: block;
    color: var(--color-dark);
    margin-bottom: 0.25rem;
  }
  
  .testimonial-role {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  /* Animations subtiles */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .stat-item,
  .value-card,
  .team-card,
  .testimonial-card {
    animation: fadeInUp 0.6s ease-out;
    animation-fill-mode: both;
  }
  
  .stat-item:nth-child(1) { animation-delay: 0.1s; }
  .stat-item:nth-child(2) { animation-delay: 0.15s; }
  .stat-item:nth-child(3) { animation-delay: 0.2s; }
  .stat-item:nth-child(4) { animation-delay: 0.25s; }
  
  .value-card:nth-child(1) { animation-delay: 0.1s; }
  .value-card:nth-child(2) { animation-delay: 0.15s; }
  .value-card:nth-child(3) { animation-delay: 0.2s; }
  .value-card:nth-child(4) { animation-delay: 0.25s; }
  
  .team-card:nth-child(1) { animation-delay: 0.1s; }
  .team-card:nth-child(2) { animation-delay: 0.15s; }
  .team-card:nth-child(3) { animation-delay: 0.2s; }

  /* Responsive */
  @media (min-width: 768px) {
    .story-grid {
      grid-template-columns: 1fr 1fr;
    }
    
    .story-image {
      order: -1;
    }
  }
  
  @media (max-width: 768px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
</style>