---
// src/pages/a-propos.astro

import Layout from '../layouts/Layout.astro';
// NOUVEAU : Importation du composant Image et des images
import { Image } from 'astro:assets';
import bureauImage from '/src/assets/images/bureau-fiduciaire.jpg';
import marcDuboisImage from '/src/assets/images/marc-dubois.jpg';
import sophieBernardImage from '/src/assets/images/sophie-bernard.jpg';
import thomasWagnerImage from '/src/assets/images/thomas-wagner.jpg';

// MODIFIÉ : On utilise les variables d'images importées
const teamMembers = [
  {
    name: "Marc Dubois",
    role: "Expert-Comptable Agréé, Fondateur",
    imageUrl: marcDuboisImage, // Modifié
    imageAlt: "Portrait de Marc Dubois, Expert-Comptable à Luxembourg",
    bio: "Fondateur de Fiduciaire Expert, Marc met à profit plus de 15 ans d'expérience acquise en Big Four pour offrir aux PME un conseil stratégique et une optimisation fiscale de premier ordre.",
    linkedin: "https://linkedin.com/in/marcdubois"
  },
  {
    name: "Sophie Bernard",
    role: "Co-Fondatrice, Responsable Fiscalité",
    imageUrl: sophieBernardImage, // Modifié
    imageAlt: "Portrait de Sophie Bernard, Fiscaliste à Luxembourg",
    bio: "Co-fondatrice et spécialiste de la fiscalité luxembourgeoise, Sophie assure une conformité parfaite des déclarations TVA et une maîtrise totale des réglementations locales.",
    linkedin: "https://linkedin.com/in/sophiebernard"
  },
  {
    name: "Thomas Wagner",
    role: "Directeur Paie & Social",
    imageUrl: thomasWagnerImage, // Modifié
    imageAlt: "Portrait de Thomas Wagner, Spécialiste Paie à Luxembourg",
    bio: "Expert en droit social luxembourgeois, Thomas pilote le pôle paie avec une rigueur absolue, garantissant la conformité des déclarations CCSS et la gestion des conventions collectives.",
    linkedin: "https://linkedin.com/in/thomaswagner"
  },
];

// ... (le reste de vos données `stats`, `values`, etc. reste INCHANGÉ)
const stats = [
  { number: "15+", label: "Années d'expertise" },
  { number: "150+", label: "Clients accompagnés" },
  { number: "98%", label: "Taux de satisfaction" },
  { number: "100%", label: "Conformité garantie" }
];
const values = [
  { title: "Expertise Locale", description: "Une maîtrise parfaite du cadre légal et fiscal luxembourgeois (IRC, TVA, CCSS), assurée par une veille réglementaire constante." },
  { title: "Transparence Totale", description: "Nos tarifs sont clairs et nos devis détaillés. Nous croyons en une communication ouverte et un reporting régulier." },
  { title: "Proximité Client", description: "Chaque client bénéficie d'un interlocuteur unique et dédié, garantissant une disponibilité et un conseil personnalisé." },
  { title: "Innovation Digitale", description: "Nous utilisons des outils comptables de dernière génération pour un accès client 24/7 et une gestion entièrement dématérialisée." },
];
const testimonials = [
  { content: "Fiduciaire Expert nous accompagne depuis 5 ans. Leur expertise du marché luxembourgeois est remarquable. Création de notre holding en 6 jours !", author: "Marie Laurent", role: "CEO, TechLux Solutions" },
  { content: "Optimisation fiscale exceptionnelle : -30% sur notre IRC. L'équipe est réactive et toujours de bon conseil. Je recommande vivement.", author: "Pierre Schmitt", role: "CFO, Finance Partners" },
];
const aboutSchema = { /* ... */ };
const metaDescription = "Découvrez Fiduciaire Expert, cabinet comptable de référence à Luxembourg. Fondé par des experts issus des Big Four, nous offrons une excellence accessible aux PME.";
---

<Layout
  title="À Propos | Cabinet d'Expertise Comptable de Référence à Luxembourg"
  description={metaDescription}
  canonical="https://www.fiduciaire-expert.lu/a-propos"
  schema={aboutSchema}
>
  <section class="page-hero">
    <div class="container">
      <p class="breadcrumb">
        <a href="/">Accueil</a> / <span>À Propos</span>
      </p>
      <h1>L'excellence comptable, accessible à tous</h1>
      <p class="hero-subtitle">
        Fondé par d'anciens experts des Big Four, Fiduciaire Expert démocratise le conseil de haut niveau pour faire de chaque PME une référence sur le marché luxembourgeois.
      </p>
    </div>
  </section>

  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        {stats.map(stat => (
          <div class="stat-item">
            <span class="stat-number">{stat.number}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="story-section">
    <div class="container story-grid">
      <div class="story-image">
        <Image 
          src={bureauImage}
          alt="Les bureaux modernes de Fiduciaire Expert à Luxembourg Ville"
          width={600} height={750} loading="lazy"
          quality="mid"
        />
      </div>
      <div class="story-content">
        <h2 class="section-title">Notre mission : votre réussite</h2>
        <p><strong>Fiduciaire Expert</strong> est né d'une conviction : chaque entrepreneur au Luxembourg mérite un accompagnement d'excellence, une valeur ajoutée souvent réservée aux multinationales. Nos fondateurs, formés au sein des Big Four et de fiduciaires de premier plan, ont uni leurs forces pour offrir cette expertise aux PME.</p>
        <p>Notre équipe de 15 experts certifiés vous accompagne dans tous les domaines comptables, fiscaux et sociaux. Nous ne nous contentons pas de garantir votre conformité ; nous vous aidons à bâtir une stratégie durable et optimisée pour le marché luxembourgeois.</p>
      </div>
    </div>
  </section>

  <section class="values-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Nos engagements</h2>
        <p>Les quatre piliers qui fondent la confiance de nos 150 clients.</p>
      </div>
      <div class="values-grid">
        {values.map(value => (
          <div class="value-card">
            <h3>{value.title}</h3>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="team-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Nos fondateurs</h2>
        <p>Une expertise de premier plan au service de votre entreprise.</p>
      </div>
      <div class="team-grid">
        {teamMembers.map((member) => (
          <article class="team-card" itemscope itemtype="https://schema.org/Person">
            <Image
              class="team-image"
              src={member.imageUrl} 
              alt={member.imageAlt}
              width={300} height={300} loading="lazy"
              itemprop="image"
              quality="mid"
            />
            <div class="team-info">
              <h3 itemprop="name">{member.name}</h3>
              <p class="team-role" itemprop="jobTitle">{member.role}</p>
              <p class="team-bio" itemprop="description">{member.bio}</p>
              <a href={member.linkedin} class="team-linkedin" target="_blank" rel="noopener noreferrer" itemprop="sameAs">
                Voir le profil LinkedIn →
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="testimonials-section">
    <div class="container">
        <div class="section-header">
          <h2 class="section-title">Ce que nos clients disent</h2>
        </div>
        <div class="testimonials-grid">
          {testimonials.map(testimonial => (
            <blockquote class="testimonial-card">
              <p>{testimonial.content}</p>
              <footer>
                <cite class="testimonial-author">{testimonial.author}</cite>
                <span class="testimonial-role">{testimonial.role}</span>
              </footer>
            </blockquote>
          ))}
        </div>
    </div>
  </section>

</Layout>

<style>
  /* --- Styles globaux (inchangés) --- */
  .section-header { text-align: center; max-width: 720px; margin: 0 auto var(--spacing-lg) auto; }
  .section-title { font-size: 2rem; margin-bottom: 0.5rem; }
  .section-header p { color: var(--color-text-secondary); font-size: var(--font-size-lg); }

  /* --- Section Héros (inchangée) --- */
  .page-hero { background-color: var(--color-background-alt); padding: var(--spacing-lg) 0; text-align: center; border-bottom: 1px solid var(--color-border); }
  .breadcrumb { font-size: 0.9rem; margin-bottom: 1rem; color: var(--color-text-secondary); }
  .breadcrumb a { color: var(--color-text-secondary); }
  .page-hero h1 { margin-bottom: 1rem; }
  .hero-subtitle { font-size: var(--font-size-lg); color: var(--color-text-secondary); max-width: 720px; margin: 0 auto; }
  
  /* --- Section Chiffres Clés (inchangée) --- */
  .stats-section { padding: var(--spacing-lg) 0; background-color: var(--color-background); }
  .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; max-width: 960px; margin: 0 auto; text-align: center; }
  .stat-item { padding: 1rem; }
  .stat-number { display: block; font-size: 2.5rem; font-weight: 700; color: var(--color-primary); }
  .stat-label { color: var(--color-text-secondary); }

  /* --- Section Histoire (CORRIGÉE) --- */
  .story-section { padding: var(--spacing-xl) 0; background-color: var(--color-background-alt); }
  .story-grid { display: grid; grid-template-columns: 1fr; align-items: center; gap: 3rem; }
  .story-image img { /* Le composant <Image> génère une balise <img>, on cible donc img */
    width: 100%;
    height: auto;
    display: block;
  }
  .story-content p { line-height: 1.7; color: var(--color-text-secondary); margin-bottom: 1.5rem; }

  /* --- Section Valeurs (inchangée) --- */
  .values-section { padding: var(--spacing-xl) 0; background-color: var(--color-background); }
  .values-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; }
  .value-card { border: 1px solid var(--color-border); padding: 2rem; }
  .value-card h3 { font-size: 1.25rem; margin-bottom: 0.5rem; }
  .value-card p { color: var(--color-text-secondary); }

  /* --- Section Équipe (inchangée) --- */
  .team-section { padding: var(--spacing-xl) 0; background-color: var(--color-background-alt); }
  .team-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem; }
  .team-card { border: 1px solid var(--color-border); background-color: var(--color-background); }
  .team-image { width: 100%; height: 320px; object-fit: cover; }
  .team-info { padding: 1.5rem; }
  .team-info h3 { font-size: 1.5rem; }
  .team-role { color: var(--color-primary); font-weight: 600; margin-bottom: 1rem; }
  .team-bio { color: var(--color-text-secondary); margin-bottom: 1rem; }
  .team-linkedin { font-weight: 600; }

  /* --- Section Témoignages (inchangée) --- */
  .testimonials-section { padding: var(--spacing-xl) 0; background-color: var(--color-background); }
  .testimonials-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 2rem; }
  .testimonial-card { border: 1px solid var(--color-border); padding: 2rem; }
  .testimonial-card p { font-size: 1.1rem; font-style: italic; margin: 0 0 1.5rem 0; }
  .testimonial-card footer { border-top: 1px solid var(--color-border); padding-top: 1rem; }
  .testimonial-author { font-weight: 600; display: block; }
  .testimonial-role { font-size: 0.9rem; color: var(--color-text-secondary); }

  /* --- Responsive (inchangé) --- */
  @media (min-width: 768px) {
    .story-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>