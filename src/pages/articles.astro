  "inLanguage": "fr-LU",
  "author": {
    "@type": "Organization",
    "name": "Fiduciaire Expert Luxembourg",
    "url": "https://www.fiduciaire-expert.lu"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Fiduciaire Expert Luxembourg",
    "url": "https://www.fiduciaire-expert.lu",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.fiduciaire-expert.lu/images/logo.png",
      "width": 600,
      "height": 60
    }
  },
  "blogPost": sortedPosts.map(post => ({
    "@type": "BlogPosting",
    "headline": post.frontmatter.title,
    "description": post.frontmatter.description || post.frontmatter.title,
    "url": `https://www.fiduciaire-expert.lu${post.url}`,
    "datePublished": post.frontmatter.date,
    "dateModified": post.frontmatter.date,
    "author": {
      "@type": "Person", 
      "name": post.frontmatter.author || "Fiduciaire Expert Luxembourg"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Fiduciaire Expert Luxembourg"
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": `https://www.fiduciaire-expert.lu${post.url}`
    }
  }))
};

// Breadcrumb structur√©
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Accueil",
      "item": "https://www.fiduciaire-expert.lu"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog Expert-Comptable",
      "item": "https://www.fiduciaire-expert.lu/articles"
    }
  ]
};
---

<Layout 
  title="Blog Expert-Comptable Luxembourg | Conseils Fiscalit√© & Comptabilit√©"
  description="Plus de 50 articles experts en comptabilit√©, fiscalit√© et cr√©ation d'entreprise au Luxembourg. Conseils pratiques pour dirigeants et entrepreneurs."
  canonical="https://www.fiduciaire-expert.lu/articles"
>
  <main class="blog-page">
    
    <!-- Breadcrumb avec structure -->
    <nav class="breadcrumb" aria-label="Fil d'ariane">
