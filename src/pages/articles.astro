            const categoryCount = sortedPosts.filter(post => post.frontmatter.category === cat).length;
            return (
              <a href={`/articles/category/${cat.toLowerCase().replace(/\s+/g, '-')}`} class="filter-btn">
                <span class="filter-icon">
                  {cat === 'Comptabilit√©' ? 'üìä' : 
                   cat === 'Fiscalit√©' ? 'üí∞' : 
                   cat === 'Cr√©ation soci√©t√©' ? 'üè¢' : 'üìã'}
                </span>
                {cat}
                <span class="filter-count">{categoryCount}</span>
              </a>
            );
          })}
        </nav>
      </div>
    </section>

    <!-- Grille d'articles am√©lior√©e -->
    <section class="articles-grid">
      <div class="container">
        <h2 class="section-title">
          <span class="title-icon">üìñ</span>
          Tous nos articles
        </h2>
        
        <div class="grid">
          {(featuredPosts.length > 0 ? regularPosts : sortedPosts).map((post, i) => (
            <article class="article-card" itemScope itemType="https://schema.org/BlogPosting">
              <a href={post.url} class="article-link">
                {post.frontmatter.image && (
                  <div class="article-image">
                    <img 
                      src={post.frontmatter.image} 
                      alt={post.frontmatter.title}
                      loading="lazy"
                      width="400"
                      height="200"
                      itemProp="image"
                    />
                  </div>
                )}
                
                <div class="article-content">
                  <div class="article-meta">
                    <span class="article-category" itemProp="about">{post.frontmatter.category}</span>
                    <time datetime={post.frontmatter.date} itemProp="datePublished">
                      {formatDate(post.frontmatter.date)}
                    </time>
                  </div>
                  
                  <h3 class="article-title" itemProp="headline">{post.frontmatter.title}</h3>
                  
                  {post.frontmatter.description && (
                    <p class="article-excerpt" itemProp="description">{post.frontmatter.description}</p>
                  )}
                  
                  <div class="article-footer">
                    <span class="article-author" itemProp="author" itemScope itemType="https://schema.org/Person">
                      Par <span itemProp="name">{post.frontmatter.author || "Fiduciaire Expert"}</span>
                    </span>
                    <span class="read-more">Lire la suite ‚Üí</span>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section Premium -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <div class="cta-icon">
