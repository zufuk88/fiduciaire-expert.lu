  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .featured-card:hover .featured-image img {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.1) 100%);
  }

  .featured-content {
    padding: var(--spacing-lg);
  }

  .featured-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
    font-size: 0.875rem;
  }

  .featured-category {
    background: var(--accent);
    color: white;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-content time {
    color: var(--text-muted);
    font-weight: 500;
  }

  .featured-content h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
    margin: 0 0 var(--spacing-md);
    line-height: 1.3;
  }

  .featured-excerpt {
    color: var(--text-light);
    line-height: 1.6;
    margin: 0 0 var(--spacing-lg);
  }

  .featured-author {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  /* Filtres Section */
  .filters-section {
    padding: var(--spacing-2xl) 0;
    background: var(--bg-gray);
  }

  .category-filters {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .filter-btn {
    display: flex;
