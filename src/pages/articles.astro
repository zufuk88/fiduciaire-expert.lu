---
import Layout from '../layouts/Layout.astro';

// Articles avec tri par date d√©croissante
const allPosts = await Astro.glob('./articles/*.md');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);

// Donn√©es structur√©es pour le blog
const blogSchema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Blog Expert-Comptable Luxembourg",
  "description": "Conseils comptables, fiscaux et juridiques pour entreprises luxembourgeoises par Fiduciaire Expert",
  "url": "https://www.fiduciaire-expert.lu/articles",
  "author": {
    "@type": "Organization",
    "name": "Fiduciaire Expert Luxembourg",
    "url": "https://www.fiduciaire-expert.lu"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Fiduciaire Expert Luxembourg",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.fiduciaire-expert.lu/images/logo.png"
    }
  },
  "blogPost": sortedPosts.map(post => ({
    "@type": "BlogPosting",
    "headline": post.frontmatter.title,
    "description": post.frontmatter.description || post.frontmatter.title,
    "url": `https://www.fiduciaire-expert.lu${post.url}`,
    "datePublished": post.frontmatter.date,
    "author": {
      "@type": "Person",
      "name": post.frontmatter.author
    },
    "image": post.frontmatter.image ? `https://www.fiduciaire-expert.lu${post.frontmatter.image}` : null
  }))
};

// G√©n√©ration automatique de la meta-description
const metaDescription = `Blog Expert-Comptable Luxembourg : conseils comptables, fiscaux et cr√©ation soci√©t√©. ${sortedPosts.length} articles par nos experts fiduciaires. Guides pratiques PME.`;
---

<Layout 
  title="Blog Expert-Comptable Luxembourg | Conseils Comptables & Fiscaux"
  description={metaDescription}
>
  <main class="blog-page" itemscope itemtype="https://schema.org/Blog">
    
    <!-- Breadcrumb SEO -->
    <nav class="breadcrumb" aria-label="Fil d'ariane">
      <div class="container">
        <ol class="breadcrumb-list">
          <li><a href="/">Accueil</a></li>
          <li><span aria-current="page">Blog Expert-Comptable Luxembourg</span></li>
        </ol>
