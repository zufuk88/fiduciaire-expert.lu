import Layout from '../layouts/Layout.astro';

// R√©cup√©ration et tri des articles
const allPosts = await Astro.glob('./articles/*.md');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);

// Extraction des cat√©gories uniques
const categories = [...new Set(allPosts.map(post => post.frontmatter.category))].filter(Boolean);

// Articles mis en avant (3 plus r√©cents)
const featuredPosts = sortedPosts.slice(0, 3);
const regularPosts = sortedPosts.slice(3);

// Fonction helper pour formater les dates
const formatDate = (date) => new Date(date).toLocaleDateString('fr-FR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Fonction pour calculer le temps de lecture
const getReadingTime = (content) => {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
};

// SEO optimis√© avec donn√©es structur√©es compl√®tes
const blogSchema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Blog Expert-Comptable Luxembourg | Fiduciaire Expert",
  "description": "Conseils experts en comptabilit√©, fiscalit√© et cr√©ation d'entreprise au Luxembourg. Plus de 50 articles pratiques pour entrepreneurs et dirigeants.",
