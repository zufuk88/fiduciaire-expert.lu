            <p>CCSS, CNS, droit du travail</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Articles grid optimis√©e -->
    <section class="articles-section">
      <div class="container">
        <h2 class="section-title">Derniers Articles de nos Experts</h2>
        
        <div class="posts-grid">
          {sortedPosts.map((post, index) => (
            <article class="article-card" 
                     itemscope 
                     itemtype="https://schema.org/BlogPosting">
              <a href={post.url} class="card-link" 
                 aria-label={`Lire l'article : ${post.frontmatter.title}`}>
                
                <div class="card-image-container">
                  <img src={post.frontmatter.image || '/images/default-article.jpg'} 
                       alt={`Illustration pour l'article : ${post.frontmatter.title}`}
                       class="card-image"
                       itemprop="image"
