              <article class="featured-card" itemScope itemType="https://schema.org/BlogPosting">
                <a href={post.url} class="featured-link">
                  {post.frontmatter.image && (
                    <div class="featured-image">
                      <img 
                        src={post.frontmatter.image} 
                        alt={post.frontmatter.title}
                        loading={i === 0 ? 'eager' : 'lazy'}
                        width="600"
                        height="300"
                        itemProp="image"
                      />
                      <div class="image-overlay"></div>
                    </div>
                  )}
                  <div class="featured-content">
                    <div class="featured-meta">
                      <span class="featured-category" itemProp="about">{post.frontmatter.category}</span>
                      <time datetime={post.frontmatter.date} itemProp="datePublished">
                        {formatDate(post.frontmatter.date)}
