      "priceRange": "€€",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Luxembourg",
        "addressCountry": "LU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 49.6117,
        "longitude": 6.13
      },
      "telephone": "+35212345678",
      "email": "contact@fiduciaire-expert.lu",
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "08:30",
        "closes": "18:00"
      },
      "sameAs": [
        "https://www.linkedin.com/company/fiduciaire-expert-luxembourg/",
        "https://www.facebook.com/fiduciaireexpertlu"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Services d'Expertise Comptable",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Comptabilité PME", "description": "Tenue complète de votre comptabilité, bilans et comptes annuels." } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Création de Société SARL", "description": "Constitution de votre société SARL ou SARL-S en 48h, incluant l'accompagnement notarié." } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Fiscalité IRC et TVA", "description": "Établissement et optimisation de vos déclarations fiscales (IRC, ICC, IF) et TVA." } }
        ]
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "156"
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Combien coûte un expert-comptable au Luxembourg ?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Nos tarifs pour la comptabilité d'une SARL démarrent à 299€/mois. Le coût varie selon le volume d'activité et la complexité, généralement entre 299€ et 859€/mois. Nous fournissons un devis personnalisé et gratuit."
          }
        },
        {
          "@type": "Question",
          "name": "Quels documents sont nécessaires pour créer une SARL au Luxembourg ?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Pour créer une SARL, il vous faut : les statuts de la société (acte notarié), un certificat de blocage du capital social (minimum 12.000€), une autorisation d'établissement, un justificatif de siège social et les pièces d'identité des gérants. Notre fiduciaire gère l'intégralité de ces démarches."
          }
        }
      ]
    }
  ]
