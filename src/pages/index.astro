---
import Hero from '../components/Hero.astro';
import ServicesHighlight from '../components/ServicesHighlight.astro';
import AboutAndCTA from '../components/AboutAndCTA.astro';
import FAQ from '../components/FAQ.astro';
import Layout from '../layouts/Layout.astro';

const title = "Fiduciaire Expert | Votre cabinet comptable au Luxembourg";
const description = "Expert-comptable au Luxembourg pour indépendants, PME et sociétés. Comptabilité, fiscalité et accompagnement personnalisé. Premier rendez-vous gratuit.";
const canonical = "https://www.fiduciaire-expert.lu/";
const ogImage = "/images/fiduciaire-cover.jpg"; // change si tu as une image OG spécifique
---

<Layout {title} {description} {canonical} {ogImage}>
  <main>
    <Hero />
    <ServicesHighlight />
    <AboutAndCTA />
    <FAQ />
  </main>
</Layout>
