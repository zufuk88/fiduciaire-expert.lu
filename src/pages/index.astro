---
import Layout from '../layouts/Layout.astro';

const title = "Expert-Comptable Luxembourg | Fiduciaire Expert - Création Société SARL";
const description = "Expert-comptable agréé Luxembourg : comptabilité PME, fiscalité IRC/TVA, création SARL, domiciliation. ✓ 15 ans d'expérience ✓ +150 clients ✓ Devis gratuit";
const canonical = "https://www.fiduciaire-expert.lu/";
const ogImage = "/images/og-home.jpg";

// Données structurées enrichies pour SEO
const homeSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "AccountingService",
      "@id": "https://www.fiduciaire-expert.lu/#organization",
      "name": "Fiduciaire Expert Luxembourg",
      "alternateName": "Expert-Comptable Luxembourg",
      "url": "https://www.fiduciaire-expert.lu",
      "logo": "https://www.fiduciaire-expert.lu/images/logo.png",
      "image": [
        "https://www.fiduciaire-expert.lu/images/bureau.jpg",
        "https://www.fiduciaire-expert.lu/images/equipe.jpg"
      ],
      "description": "Cabinet d'expertise comptable au Luxembourg spécialisé PME et création de sociétés",
      "priceRange": "€€",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Luxembourg",
        "addressCountry": "LU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "49.6117",
        "longitude": "6.1300"
      },
      "telephone": "+35212345678",
      "email": "contact@fiduciaire-expert.lu",
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "08:30",
        "closes": "18:00"
      },
      "sameAs": [
        "https://www.linkedin.com/company/fiduciaire-expert-luxembourg/",
        "https://www.facebook.com/fiduciaireexpertlu"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Services Expert-Comptable",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Comptabilité PME",
              "description": "Tenue complète de votre comptabilité"
            }
          },
          {
            "@type": "Offer", 
            "itemOffered": {
              "@type": "Service",
              "name": "Création Société SARL",
              "description": "Constitution SARL en 48h"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Fiscalité IRC et TVA",
              "description": "Déclarations fiscales et optimisation"
            }
          }
        ]
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "156"
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Combien coûte un expert-comptable au Luxembourg ?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Nos tarifs débutent à partir de 299€/mois pour la comptabilité d'une SARL de petite taille. Pour une SARL, comptez entre 299€ et 859€/mois selon la complexité. Devis gratuit personnalisé."
          }
        },
        {
          "@type": "Question",
          "name": "Quels documents pour créer une SARL au Luxembourg ?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Pour créer une SARL : statuts notariés, capital minimum 12.000€, siège social, pièces d'identité des associés. Nous gérons tout le processus en 48h."
          }
        }
      ]
    }
  ]
};
---

<Layout 
  title={title} 
  description={description} 
  canonical={canonical} 
  ogImage={ogImage}
  schema={homeSchema}
>
  <main>
    <!-- Hero Section -->
    <section class="hero" itemscope itemtype="https://schema.org/WPHeader">
      <div class="hero-background">
        <div class="hero-overlay"></div>
      </div>
      
      <div class="container hero-content">
        <div class="hero-text">
          <h1 class="hero-title">
            Expert-Comptable
            <span class="hero-highlight">Luxembourg</span>
          </h1>
          
          <p class="hero-subtitle">
            Votre partenaire de confiance pour la <strong>comptabilité</strong>, 
            la <strong>fiscalité</strong> et la <strong>création de société</strong>
          </p>
          
          <div class="hero-features">
            <div class="feature">
              <svg class="feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 11l3 3L22 4"></path>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"></path>
              </svg>
              <span>15 ans d'expérience</span>
            </div>
            <div class="feature">
              <svg class="feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
              <span>+150 clients satisfaits</span>
            </div>
            <div class="feature">
              <svg class="feature-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
              <span>4.9/5 avis clients</span>
            </div>
          </div>
          
          <div class="hero-cta">
            <a href="/contact#consultation" class="btn btn-primary btn-large">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M8 2v4M16 2v4M3 10h18M5 4h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V6a2 2 0 012-2z"></path>
              </svg>
              Consultation gratuite
            </a>
            <a href="/services" class="btn btn-secondary btn-large">
              Découvrir nos services
            </a>
          </div>
        </div>
        
        <div class="hero-visual">
          <div class="trust-badge">
            <div class="badge-content">
              <span class="badge-number">48h</span>
              <span class="badge-text">Création SARL Express</span>
            </div>
          </div>
          <img 
            src="/images/expert-comptable-bureau.jpg" 
            alt="Bureau Expert-Comptable Luxembourg"
            width="600"
            height="400"
            loading="eager"
          />
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="services" id="services">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Nos Services d'Expertise Comptable</h2>
          <p class="section-subtitle">
            Solutions complètes pour entrepreneurs et PME au Luxembourg
          </p>
        </div>
        
        <div class="services-grid">
          <article class="service-card">
            <div class="service-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
            </div>
            <h3>Comptabilité & Fiscalité</h3>
            <p>Tenue complète de votre comptabilité, déclarations IRC et TVA, optimisation fiscale légale</p>
            <a href="/comptabilite" class="service-link">
              En savoir plus →
            </a>
          </article>

          <article class="service-card featured">
            <div class="service-badge">Plus populaire</div>
            <div class="service-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1"></path>
              </svg>
            </div>
            <h3>Création Société SARL</h3>
            <p>Constitution complète en 48h, capital minimum 12.000€, accompagnement personnalisé</p>
            <a href="/creation-societe-luxembourg" class="service-link">
              En savoir plus →
            </a>
          </article>

          <article class="service-card">
            <div class="service-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="9" r="4"></circle>
              </svg>
            </div>
            <h3>Gestion Paie CCSS</h3>
            <p>Bulletins de paie, déclarations CCSS, gestion des congés et absences</p>
            <a href="/paie" class="service-link">
              En savoir plus →
            </a>
          </article>

          <article class="service-card">
            <div class="service-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 21h18M3 10h18M3 7l9-4 9 4M12 3v18"></path>
              </svg>
            </div>
            <h3>Domiciliation</h3>
            <p>Siège social prestigieux au Luxembourg, gestion du courrier, salles de réunion</p>
            <a href="/domiciliation" class="service-link">
              En savoir plus →
            </a>
          </article>
        </div>
      </div>
    </section>

    <!-- Trust Section -->
    <section class="trust">
      <div class="container">
        <div class="trust-content">
          <div class="trust-text">
            <h2>Pourquoi choisir Fiduciaire Expert ?</h2>
            <div class="trust-items">
              <div class="trust-item">
                <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                <div>
                  <h4>Expertise reconnue</h4>
                  <p>Expert-comptable agréé avec 15 ans d'expérience au Luxembourg</p>
                </div>
              </div>
              <div class="trust-item">
                <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div>
                  <h4>Réactivité garantie</h4>
                  <p>Réponse sous 24h et accompagnement personnalisé</p>
                </div>
              </div>
              <div class="trust-item">
                <svg class="trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                  <path d="M2 17l10 5 10-5"></path>
                  <path d="M2 12l10 5 10-5"></path>
                </svg>
                <div>
                  <h4>Tarifs transparents</h4>
                  <p>Forfaits adaptés sans surprises, devis gratuit immédiat</p>
                </div>
              </div>
            </div>
          </div>
          <div class="trust-stats">
            <div class="stat">
              <span class="stat-number">156</span>
              <span class="stat-label">Clients actifs</span>
            </div>
            <div class="stat">
              <span class="stat-number">15</span>
              <span class="stat-label">Années d'expérience</span>
            </div>
            <div class="stat">
              <span class="stat-number">24h</span>
              <span class="stat-label">Délai de réponse</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Prêt à optimiser votre gestion comptable ?</h2>
          <p>Bénéficiez d'une consultation gratuite avec nos experts</p>
          <div class="cta-buttons">
            <a href="tel:+35212345678" class="btn btn-white btn-large">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              Appeler maintenant
            </a>
            <a href="/contact" class="btn btn-outline-white btn-large">
              Demander un devis
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq">
      <div class="container">
        <h2 class="section-title">Questions fréquentes</h2>
        
        <div class="faq-grid">
          <details class="faq-item">
            <summary>Combien coûte un expert-comptable au Luxembourg ?</summary>
            <p>
              Nos tarifs débutent à partir de 299€/mois pour la comptabilité d'une SARL de petite taille. 
              Pour une activité soutenue, comptez entre 440€ et 859€/mois selon la complexité. 
              Nous proposons toujours un devis gratuit personnalisé.
            </p>
          </details>
          
          <details class="faq-item">
            <summary>Quels documents pour créer une SARL ?</summary>
            <p>
              Pour créer une SARL au Luxembourg : demande d'autorisation d'établissement, statuts notariés, capital minimum 12.000€ avec cretificat de blocage, 
              justificatif de siège social, pièces d'identité des associés. 
              Nous gérons l'intégralité du processus en 48h pour les SARL-S.
            </p>
          </details>
          
          <details class="faq-item">
            <summary>Délai pour les déclarations fiscales ?</summary>
            <p>
              Les déclarations IRC/ICC/IF doivent être déposées avant le 31 décembre de l'année suivante. 
              Les déclarations TVA sont mensuelles ou trimestrielles selon votre chiffre d'affaires. 
              Nous gérons tous les délais pour vous.
            </p>
          </details>
          
          <details class="faq-item">
            <summary>Proposez-vous la domiciliation ?</summary>
            <p>
              Oui, nous proposons des services de domiciliation avec adresse prestigieuse 
              au Luxembourg, gestion du courrier et mise à disposition de salles de réunion.
            </p>
          </details>
        </div>
      </div>
    </section>

  </main>
</Layout>

<style>
  /* Variables */
  :root {
    --blue-primary: #3498db;
    --blue-dark: #2c3e50;
    --blue-light: #ebf5fb;
    --gray-light: #f8f9fa;
    --gray-medium: #e9ecef;
    --gray-dark: #6c757d;
    --white: #ffffff;
    --shadow-sm: 0 2px 4px rgba(0,0,0,0.08);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.12);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.16);
    --radius: 8px;
  }

  /* Hero Section */
  .hero {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--blue-light) 0%, var(--gray-light) 100%);
    z-index: -1;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: url('/images/pattern.svg') center/cover;
    opacity: 0.05;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    padding: 4rem 0;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--blue-dark);
    margin: 0 0 1rem;
    font-weight: 700;
    line-height: 1.1;
  }

  .hero-highlight {
    display: block;
    color: var(--blue-primary);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--gray-dark);
    margin: 0 0 2rem;
    line-height: 1.6;
  }

  .hero-features {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--blue-dark);
  }

  .feature-icon {
    width: 20px;
    height: 20px;
    color: var(--blue-primary);
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-visual {
    position: relative;
  }

  .hero-visual img {
    width: 100%;
    height: auto;
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
  }

  .trust-badge {
    position: absolute;
    top: -20px;
    right: -20px;
    background: var(--blue-primary);
    color: white;
    padding: 1.5rem;
    border-radius: 50%;
    text-align: center;
    box-shadow: var(--shadow-md);
  }

  .badge-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
  }

  .badge-text {
    font-size: 0.75rem;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }

  .btn-icon {
    width: 20px;
    height: 20px;
  }

  .btn-primary {
    background: var(--blue-primary);
    color: white;
  }

  .btn-primary:hover {
    background: #2980b9;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn-secondary {
    background: var(--gray-light);
    color: var(--blue-dark);
    border-color: var(--gray-medium);
  }

  .btn-secondary:hover {
    background: var(--gray-medium);
  }

  .btn-white {
    background: white;
    color: var(--blue-primary);
  }

  .btn-white:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255,255,255,0.3);
  }

  .btn-outline-white {
    background: transparent;
    color: white;
    border-color: white;
  }

  .btn-outline-white:hover {
    background: white;
    color: var(--blue-primary);
  }

  /* Services Section */
  .services {
    padding: 5rem 0;
    background: var(--gray-light);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2.5rem;
    color: var(--blue-dark);
    margin: 0 0 1rem;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--gray-dark);
    margin: 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    position: relative;
    text-align: center;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .service-card.featured {
    border: 2px solid var(--blue-primary);
  }

  .service-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--blue-primary);
    color: white;
    padding: 0.25rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
  }

  .service-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 1rem;
    color: var(--blue-primary);
  }

  .service-card h3 {
    font-size: 1.25rem;
    color: var(--blue-dark);
    margin: 0 0 1rem;
  }

  .service-card p {
    color: var(--gray-dark);
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .service-link {
    color: var(--blue-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .service-link:hover {
    text-decoration: underline;
  }

  /* Trust Section */
  .trust {
    padding: 5rem 0;
    background: white;
  }

  .trust-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .trust h2 {
    font-size: 2rem;
    color: var(--blue-dark);
    margin: 0 0 2rem;
  }

  .trust-items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .trust-item {
    display: flex;
    gap: 1rem;
  }

  .trust-icon {
    width: 40px;
    height: 40px;
    color: var(--blue-primary);
    flex-shrink: 0;
  }

  .trust-item h4 {
    font-size: 1.1rem;
    color: var(--blue-dark);
    margin: 0 0 0.25rem;
  }

  .trust-item p {
    color: var(--gray-dark);
    margin: 0;
  }

  .trust-stats {
    display: grid;
    gap: 2rem;
    text-align: center;
  }

  .stat {
    padding: 2rem;
    background: var(--gray-light);
    border-radius: var(--radius);
  }

  .stat-number {
    display: block;
    font-size: 3rem;
    font-weight: 700;
    color: var(--blue-primary);
  }

  .stat-label {
    color: var(--gray-dark);
    font-size: 0.875rem;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, var(--blue-primary) 0%, #2980b9 100%);
    color: white;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin: 0 0 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    margin: 0 0 2rem;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* FAQ Section */
  .faq {
    padding: 5rem 0;
    background: var(--gray-light);
