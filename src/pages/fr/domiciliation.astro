---
import LayoutI18n from '../../layouts/LayoutI18n.astro';
import StickyPageTop from '../../components/StickyPageTop.astro';
import SectionTitle from '../../components/SectionTitle.astro';
import ServiceHero from '../../components/ServiceHero.astro';
import ServiceOverview from '../../components/ServiceOverview.astro';
import Services from '../../components/Services.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';
import ServiceBenefits from '../../components/ServiceBenefits.astro';
import ServiceRequirements from '../../components/ServiceRequirements.astro';
import ServicePricing from '../../components/ServicePricing.astro';
import FAQ from '../../components/FAQ.astro';

const metaDescription = "Service de domiciliation d'entreprise au Luxembourg strictement conforme, réservé aux sociétés patrimoniales (SOPARFI, holdings, SPV). Expert-comptable agréé, conformité AML/KYC complète.";

const domiciliationSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      "@id": "https://www.fiduciaire-expert.lu/fr/domiciliation",
      "name": "Domiciliation d'Entreprise au Luxembourg - Fiduciaire Expert",
      "description": metaDescription,
      "provider": {
        "@type": "Organization",
        "name": "Fiduciaire Expert",
        "url": "https://www.fiduciaire-expert.lu"
      },
      "areaServed": {
        "@type": "Country",
        "name": "Luxembourg"
      },
      "offers": {
        "@type": "Offer",
        "priceSpecification": {
          "@type": "PriceSpecification",
          "price": "150",
          "priceCurrency": "EUR",
          "unitText": "par mois"
        }
      }
    }
  ]
};

const faqItems = [
  {
    question: "Peut-on domicilier une société commerciale active ?",
    answer: "Non pour l'exploitation : les activités soumises à droit d'établissement exigent des locaux propres. La domiciliation peut couvrir le siège social, mais ne remplace pas les locaux d'exploitation."
  },
  {
    question: "Qui signe les comptes et résolutions ?",
    answer: "Les gérants/administrateurs. Nous organisons les réunions et assurons les formalités RESA/RCS."
  },
  {
    question: "SPF : obligations spécifiques ?",
    answer: "Oui : certification annuelle à produire à l'ACD via MyGuichet."
  },
  {
    question: "Que se passe-t-il si la société ne coopère pas au KYC ?",
    answer: "Refus d'entrer en relation ou résiliation, avec notification RCS/RESA."
  }
];
---

<LayoutI18n
  title="Domiciliation d'Entreprise Luxembourg | Service Conforme AML/KYC"
  description={metaDescription}
  canonical="https://www.fiduciaire-expert.lu/fr/domiciliation"
  schema={domiciliationSchema}
>
  <StickyPageTop
    breadcrumbItems={[
      { text: "Accueil", href: "/fr" },
      { text: "Services", href: "/fr/services" },
      { text: "Domiciliation" }
    ]}
    title="Domiciliation d'entreprise au Luxembourg"
    subtitle="Service strictement conforme réservé aux sociétés patrimoniales"
  />

  <ServiceHero
    title="Service de domiciliation professionnelle"
    subtitle="Expert-comptable agréé Luxembourg"
    description="Solution complète de domiciliation pour holdings, SOPARFI et véhicules d'investissement. Conformité AML/KYC intégrale et substance fiscale adaptée."
    stats={[
      { value: "100%", label: "Conformité" },
      { value: "24h", label: "Traitement courrier" },
      { value: "5+", label: "Années d'expérience" }
    ]}
    variant="default"
  />

  <SectionTitle title="Ce que nous proposons" />
  <ServiceOverview
    lead="Service de domiciliation strictement conforme et réservé aux sociétés patrimoniales (SOPARFI/holdings, SPV d'investissement, sociétés de propriété intellectuelle, SPF)."
    content="<p>Nous exigeons un lien de gestion effectif au Luxembourg et appliquons des contrôles KYC/AML complets.</p>"
    alert={{
      type: 'important',
      title: 'Important',
      message: "Les activités commerciales opérationnelles (commerce, e-commerce, services exécutés au quotidien) nécessitent une autorisation d'établissement et des locaux appropriés. Une simple domiciliation ne suffit pas pour exploiter ces activités."
    }}
  />

  <SectionTitle 
    title="Base légale et périmètre"
    subtitle="Cadre réglementaire strict au Luxembourg"
  />
  <Services
    variant="highlight"
    services={[
      {
        icon: "fas fa-gavel",
        title: "Loi du 31 mai 1999",
        description: "Régissant la domiciliation des sociétés (version consolidée)"
      },
      {
        icon: "fas fa-shield-alt",
        title: "Loi du 12 novembre 2004",
        description: "Relative à la lutte contre le blanchiment de capitaux et le financement du terrorisme (AML/CFT), telle que modifiée"
      },
      {
        icon: "fas fa-building",
        title: "Droit d'établissement",
        description: "Loi modifiée du 2 septembre 2011 (locaux appropriés requis pour les activités soumises)"
      }
    ]}
  />

  <SectionTitle title="Qui peut domicilier ?" />
  <ServiceOverview
    lead="Seules les professions réglementées établies au Luxembourg (liste limitative) :"
    highlights={[
      "Établissements de crédit et professionnels du secteur financier (PFS) / du secteur des assurances",
      "Avocats à la Cour (liste I) et avocats européens (liste IV)",
      "Réviseurs d'entreprises / réviseurs agréés",
      "Experts-comptables (inscrits à l'OEC)"
    ]}
    content="<p><strong>Nous sommes expert-comptable agréé et intervenons dans ce cadre, selon des procédures internes strictes.</strong></p>"
  />

  <SectionTitle title="Conditions d'éligibilité" />
  <Services
    variant="grid"
    services={[
      {
        icon: "fas fa-chart-line",
        title: "Objet non commercial",
        description: "Holding/financement, détention d'actifs, IP holding, véhicule d'investissement. Pour les activités commerciales : l'adresse de domiciliation ne remplace pas les locaux physiques requis."
      },
      {
        icon: "fas fa-map-marker-alt",
        title: "Siège de direction effective",
        description: "Réunions de gérance/conseil tenues au Luxembourg, décisions stratégiques prises au Luxembourg, signature locale prévue au besoin"
      },
      {
        icon: "fas fa-layer-group",
        title: "Substance adaptée",
        description: "Secrétariat juridique, tenue des registres, comptabilité locale, prestataires et comptes bancaires opérationnels au Luxembourg"
      },
      {
        icon: "fas fa-user-check",
        title: "Conformité KYC/AML",
        description: "Identification des dirigeants, UBO, origine des fonds, évaluation de risque, monitoring continu"
      }
    ]}
  />

  <SectionTitle title="Ce que comprend la domiciliation" />
  <ServiceBenefits
    benefits={[
      {
        icon: "fas fa-map-pin",
        title: "Adresse de siège social",
        description: "Dans un quartier d'affaires à Luxembourg"
      },
      {
        icon: "fas fa-envelope",
        title: "Gestion du courrier",
        description: "Réception, tri, scan/notification, conservation et remise sécurisée"
      },
      {
        icon: "fas fa-file-alt",
        title: "Secrétariat légal",
        description: "Tenue d'un registre des sociétés domiciliées, rappels d'échéances, assistance RESA/RCS"
      },
      {
        icon: "fas fa-users",
        title: "Salles de réunion",
        description: "Sur réservation pour les conseils d'administration/gérance"
      },
      {
        icon: "fas fa-phone",
        title: "Services additionnels",
        description: "Ligne d'accueil (option) et agenda de signatures"
      },
      {
        icon: "fas fa-shield-alt",
        title: "Conformité AML",
        description: "KYC/AML initial et revues annuelles"
      }
    ]}
    columns={3}
  />

  <SectionTitle title="Procédure en 4 étapes" />
  <ServiceProcess
    steps={[
      {
        title: "Pré-KYC & admissibilité",
        description: "Informations sur l'activité, organigramme, UBO, origine des fonds, screening sanctions/PEP",
        duration: "2-3 jours"
      },
      {
        title: "Contrat de domiciliation écrit",
        description: "Description des services, obligations réciproques, pouvoirs de notification RCS/RESA et clauses de résiliation",
        duration: "1 jour"
      },
      {
        title: "Mise en place",
        description: "Ouverture des services, planification des réunions au Luxembourg, désignation des signataires/mandataires locaux",
        duration: "3-5 jours"
      },
      {
        title: "Suivi continu",
        description: "Conservation des pièces, mises à jour KYC, rappels juridiques (AGO, dépôts), contrôles de substance",
        duration: "Permanent"
      }
    ]}
    variant="timeline"
  />

  <SectionTitle 
    title="Obligations du domiciliataire"
    subtitle="Extraits des obligations légales principales"
  />
  <ServiceRequirements
    categories={[
      {
        title: "Obligations précontractuelles",
        icon: "fas fa-clipboard-check",
        items: [
          "Vérifier la conformité de la société aux règles du droit des sociétés",
          "Contrôler le respect du droit d'établissement avant contrat",
          "Évaluer le profil de risque AML/CFT"
        ]
      },
      {
        title: "Obligations de documentation",
        icon: "fas fa-folder-open",
        items: [
          "Identifier et documenter l'organe de gestion",
          "Identifier l'ayant droit économique (UBO)",
          "Conserver les pièces ≥ 5 ans après la fin de la relation"
        ]
      },
      {
        title: "Obligations de notification",
        icon: "fas fa-bell",
        items: [
          "Mettre fin au contrat en cas d'infraction constatée",
          "Notifier le RCS de toute cessation",
          "Informer la CSSF si société soumise (préavis 1 mois)"
        ]
      }
    ]}
    note="Le domiciliataire dépose l'avis de cessation au RCS, la publication au RESA est effectuée, et le gestionnaire du RCS informe le Procureur d'État."
  />

  <SectionTitle title="Sanctions et risques en cas de non-conformité" />
  <Services
    variant="cards"
    services={[
      {
        icon: "fas fa-ban",
        title: "Domiciliation illégale",
        description: "Exercer la domiciliation sans être habilité : emprisonnement de 8 jours à 5 ans et/ou amende de 1 250 € à 125 000 €"
      },
      {
        icon: "fas fa-file-contract",
        title: "Absence de contrat écrit",
        description: "Domicilier sans contrat écrit : emprisonnement de 8 jours à 5 ans et/ou amende de 1 250 € à 125 000 €"
      },
      {
        icon: "fas fa-exclamation-triangle",
        title: "Manquements graves",
        description: "Domiciliation irrégulière d'une société commerciale : fermeture ou liquidation judiciaire possible"
      },
      {
        icon: "fas fa-gavel",
        title: "Résiliation/dénonciation",
        description: "Publication RESA, perte du domicile légal, information du Procureur d'État"
      }
    ]}
  />

  <SectionTitle 
    title="Tarification"
    subtitle="Tarifs transparents adaptés à vos besoins"
  />
  <ServicePricing
    items={[
      {
        label: "Domiciliation standard",
        price: "À partir de 150€",
        unit: "mois",
        description: "Sociétés patrimoniales simples, risque AML standard",
        highlighted: true
      },
      {
        label: "Options additionnelles",
        price: "Sur devis",
        description: "Ligne d'accueil, salles de réunion, scans quotidiens, secrétariat renforcé"
      }
    ]}
    note="Le prix final dépend du profil de risque AML, du niveau de substance attendu et de la complexité du groupe. Un devis détaillé est émis après pré-KYC."
    variant="list"
  />

  <FAQ
    title="FAQ express"
    subtitle=""
    faqItems={faqItems}
    generateSchema={true}
  />
</LayoutI18n>