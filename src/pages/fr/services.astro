const metaDescription = "Découvrez nos services d'expert-comptable à Luxembourg : comptabilité (BOB50), création de société (SARL), gestion de paie (CCSS), déclarations fiscales et due diligence. Devis gratuit.";
const pageKeywords = "expert-comptable Luxembourg, BOB50 comptabilité, création SARL Luxembourg, gestion paie CCSS, déclarations fiscales IRC ICC IF, TVA Luxembourg, domiciliation Luxembourg, due diligence, business plan, conseil fiscal Luxembourg, fiduciaire Luxembourg, RCS Luxembourg, cabinet comptable agréé";
const pageUrl = "https://www.fiduciaire-expert.lu/fr/services";
const faqItems = [
  {
    question: "Gérez-vous aussi les déclarations pour les indépendants ?",
    answer: "Absolument. Nous prenons en charge l'ensemble de vos obligations : comptabilité, déclarations d'impôt sur le revenu, gestion de la TVA et accompagnement dans vos démarches avec la CCSS."
  },
  {
    question: "Que comprend un forfait comptable type ?",
    answer: "Notre forfait standard inclut la tenue comptable complète, les rapprochements bancaires, les déclarations TVA périodiques, les situations intermédiaires, l'établissement des comptes annuels et le dépôt au RCS. Des services complémentaires sont disponibles en option : gestion de la paie, reporting de gestion, consolidation et conseils personnalisés."
  },
  {
    question: "Proposez-vous la gestion de la paie ?",
    answer: "Oui, nous offrons un service complet : édition des bulletins de salaire, déclarations sociales, gestion des congés et traitement des avantages en nature."
  },
  {
    question: "Travaillez-vous en 100% digital ?",
    answer: "Parfaitement. Notre approche est entièrement dématérialisée : collecte automatisée des pièces, workflows de validation intégrés et tableaux de bord accessibles en temps réel. Vous et vos équipes bénéficiez d'un accès sécurisé à toutes vos données."
  },
  {
    question: "Dans quelles langues travaillez-vous ?",
    answer: "Nous intervenons en français, anglais, allemand et luxembourgeois."
  },
  {
    question: "Quelles sont vos spécialités ?",
    answer: "Nous accompagnons principalement les PME, le secteur immobilier, les sociétés commerciales, les holdings/SOPARFI et les services professionnels."
  },
  {
    question: "Aidez-vous à choisir le bon régime TVA ?",
    answer: "Bien sûr. Nous analysons votre activité au regard de la loi TVA pour déterminer si la franchise en base ou le régime normal est le plus adapté, puis nous mettons en place le régime optimal pour votre situation."
  },
  {
    question: "Puis-je changer d'expert-comptable en cours d'année ?",
    answer: "Tout à fait. Nous assurons une transition en douceur avec la reprise complète de vos données et la continuité de toutes vos déclarations."
  },
  {
    question: "Intervenez-vous en cas de contrôle fiscal ?",
    answer: "Oui, nous vous accompagnons à chaque étape : revue préalable de votre dossier, préparation des documents nécessaires, réponse aux administrations et gestion des échanges."
  },
  {
    question: "Comment obtenir une offre ?",
    answer: "C'est simple : communiquez-nous votre volume mensuel estimé de pièces comptables, votre secteur d'activité, les services souhaités (TVA, paie, reporting) et votre date de démarrage souhaitée. Nous analyserons vos besoins et vous transmettrons rapidement un devis clair et détaillé."
  }
];
// --- DONNÉES STRUCTURÉES 10/10 ---
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "AccountingService",
      "@id": `${pageUrl}#service`,
      "name": "Services d'Expertise Comptable pour PME au Luxembourg",
      "description": metaDescription,
      "provider": {
        "@type": "Organization",
        "name": "Fiduciaire Expert"
      },
      "areaServed": {
        "@type": "Country",
        "name": "Luxembourg"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Catalogue des Services de Fiduciaire Expert",
        "itemListElement": allServices.map(service => ({
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": service.title,
            "description": service.description,
            "url": `${pageUrl}/${service.slug}`
          },
          "priceSpecification": {
            "@type": "PriceSpecification",
            "priceCurrency": "EUR",
            "description": service.price
          }
        }))
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "47",
        "bestRating": "5"
      },
      "priceRange": "€€"
    },
    {
      "@type": "FAQPage",
      "mainEntity": faqItems.map(item => ({
        "@type": "Question",
        "name": item.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": item.answer
        }
      }))
    }
  ]
};
---
<LayoutI18n
  title="Services Expert-Comptable Luxembourg | Fiduciaire Expert"
  description={metaDescription}
  keywords={pageKeywords}
  canonical={pageUrl}
  schema={structuredData}
>
  <StickyPageTop
    breadcrumbItems={[
      { text: "Accueil", href: "/fr" },
      { text: "Services" }
    ]}
    title="Nos services d'expertise comptable"
    subtitle="Des solutions complètes et sur-mesure pour les entrepreneurs et PME au Luxembourg. Nous allions rigueur, technologie et conseil stratégique pour garantir votre conformité et optimiser votre croissance."
  />
  <Services
    variant="cards"
    title="Nos expertises à votre service"
    subtitle="Découvrez notre gamme complète de services comptables, fiscaux et sociaux conçus pour accompagner votre croissance au Luxembourg"
    services={allServices}
  />
  <FAQ
    title="Questions Fréquentes"
    subtitle="Réponses claires à vos interrogations sur nos services."
    faqItems={faqItems}
    
    backgroundColor="#f1f5f9"
  />
</LayoutI18n>
