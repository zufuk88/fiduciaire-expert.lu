---
import LayoutI18n from '../../layouts/LayoutI18n.astro';
import StickyPageTop from '../../components/StickyPageTop.astro';
import ValuesGrid from '../../components/ValuesGrid.astro';
import TeamGrid from '../../components/TeamGrid.astro';
import WhyUs from '../../components/WhyUs.astro';
import TestimonialsGrid from '../../components/TestimonialsGrid.astro';
import FAQ from '../../components/FAQ.astro';
import marcDuboisImage from '/src/assets/images/marc-dubois.jpg';
import sophieBernardImage from '/src/assets/images/sophie-bernard.jpg';
// Données de la page - Contenu préservé
const teamMembers = [
  {
    name: "Marc Dubois",
    role: "Expert-Comptable et Fiscaliste, Fondateur",
    imageUrl: marcDuboisImage,
    imageAlt: "Portrait de Marc Dubois, Expert-Comptable et fondateur de Fiduciaire Expert à Luxembourg.",
    bio: "Fondateur et fiscaliste de Fiduciaire Expert, Marc dispose d'un parcours exceptionnellement riche : Big Four, cabinets d'avocats internationaux, fonds d'investissement et fiduciaires. Ce background unique lui permet de délivrer un conseil fiscal à haute valeur ajoutée et des stratégies d'optimisation sur mesure.",
    linkedin: "https://linkedin.com/in/marcdubois"
  },
  {
    name: "Sophie Bernard",
    role: "Co-Fondatrice",
    imageUrl: sophieBernardImage,
    imageAlt: "Portrait de Sophie Bernard, co-fondatrice et experte comptable chez Fiduciaire Expert.",
    bio: "Co-fondatrice et experte en Luxembourg GAAP et IFRS, Sophie apporte plus de 20 ans d'expérience acquise dans des sociétés internationales, garantissant une comptabilité conforme aux normes luxembourgeoises et internationales.",
    linkedin: "https://linkedin.com/in/sophiebernard"
  },
];
const values = [
  { 
    title: "Expertise locale", 
    description: "Une maîtrise parfaite du cadre légal, social et fiscal luxembourgeois (IRC/ICC/IF, TVA et CCSS), assurée par une veille juridique constante.",
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
    </svg>`
  },
  { 
    title: "Transparence", 
    description: "Nos tarifs sont clairs et nos devis détaillés. Nous croyons en une communication ouverte et un dialogue avec nos clients.",
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
    </svg>`
  },
  { 
    title: "Conseil personnalisé", 
    description: "Chaque client bénéficie d'un interlocuteur unique et dédié, garantissant une disponibilité et un conseil personnalisé.",
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
    </svg>`
  },
];
const testimonials = [
  { content: "Fiduciaire Expert nous accompagne depuis longtemps. Leur expertise du marché luxembourgeois est remarquable. Création de notre holding en quelques semaines !", author: "M. Laurent", role: "CEO, TechLux Solutions" },
  { content: "Conseil fiscal et accompagnement exceptionnels : nous avons eu des résultats immédiats. L'équipe est réactive et toujours de bon conseil. Je recommande vivement.", author: "P. Schmitt", role: "CFO, Finance Partners" },
];
const faqItems = [
  {
    question: "Quels services comptables proposez-vous ?",
    answer: "Nous offrons une gamme complète de services : tenue de comptabilité, établissement des comptes annuels, déclarations fiscales IRC/ICC/IF et TVA, gestion de la paie et charges sociales CCSS, création et domiciliation de sociétés."
  },
  {
    question: "Quelles sont vos qualifications professionnelles ?",
    answer: "Nos experts sont diplômés en expertise comptable et fiscalité. Nous sommes membres de l'Ordre des Experts-Comptables Luxembourg (OECL) et respectons strictement les normes déontologiques de la profession."
  },
  {
    question: "Quels types d'entreprises accompagnez-vous ?",
    answer: "Nous accompagnons principalement les PME, startups et entrepreneurs individuels établis au Luxembourg. Notre expertise couvre tous les secteurs d'activité, avec une spécialisation dans les structures de type SARL, SA et SOPARFI."
  },
  {
    question: "Comment se déroule la première consultation ?",
    answer: "La première consultation permet d'analyser vos besoins spécifiques. Nous examinons votre situation comptable et fiscale, puis établissons un devis détaillé et transparent pour nos services."
  }
];
const metaDescription = "Cabinet d'expertise comptable à Luxembourg. Experts-comptables agréés, fiscalistes diplômés. Comptabilité, fiscalité, paie, création société. Membre OECL.";
const pageUrl = "https://www.fiduciaire-expert.lu/fr/a-propos";
// SEO Schema - Enrichi avec FAQ et Breadcrumb
const aboutSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "@id": `${pageUrl}#breadcrumb`,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Accueil",
          "item": "https://www.fiduciaire-expert.lu/fr"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "À Propos",
          "item": pageUrl
        }
      ]
    },
    {
      "@type": "AboutPage",
      "@id": pageUrl,
      "name": "À Propos de Fiduciaire Expert | Cabinet Comptable à Luxembourg",
      "description": metaDescription,
      "mainEntity": {
        "@id": `${pageUrl.split('/fr/')[0]}/#organization`
      }
    },
    {
      "@type": "Organization",
      "@id": `${pageUrl.split('/fr/')[0]}/#organization`,
      "name": "Fiduciaire Expert",
      "description": "Cabinet d'expertise comptable agréé à Luxembourg. Expert-comptable et fiscaliste diplômés. Comptabilité luxembourgeoise, déclarations fiscales IRC/ICC/IF et TVA, bulletins de paie CCSS, création société SARL/SA.",
      "areaServed": {
        "@type": "Country",
        "name": "Luxembourg"
      },
      "knowsAbout": [
        "Comptabilité luxembourgeoise",
        "Fiscalité IRC/ICC",
        "TVA Luxembourg",
        "Déclarations fiscales",
        "Bulletins de paie CCSS",
        "Création société Luxembourg"
      ],
      "memberOf": {
        "@type": "Organization",
        "name": "Ordre des Experts-Comptables Luxembourg",
        "url": "https://www.oec.lu"
      },
      "url": pageUrl.split('/fr/')[0],
      "logo": `${pageUrl.split('/fr/')[0]}/src/assets/images/Logo.webp`,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "15 Avenue de la Liberté",
        "addressLocality": "Luxembourg",
        "postalCode": "L-1931",
        "addressCountry": "LU"
      },
      "founder": teamMembers.map(member => ({
        "@type": "Person",
        "name": member.name,
        "jobTitle": member.role,
        "description": member.bio,
        "image": member.imageUrl.src,
        "sameAs": member.linkedin
      })),
      "review": testimonials.map(testimonial => ({
        "@type": "Review",
        "reviewRating": {
          "@type": "Rating",
          "ratingValue": "5",
          "bestRating": "5"
        },
        "reviewBody": testimonial.content,
        "author": {
          "@type": "Person",
          "name": testimonial.author
        }
      }))
    },
    {
      "@type": "FAQPage",
      "@id": `${pageUrl}#faq`,
      "mainEntity": faqItems.map(item => ({
        "@type": "Question",
        "name": item.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": item.answer
        }
      }))
    }
  ]
};
---
<LayoutI18n
  title="Cabinet Expert-Comptable Luxembourg | Fiduciaire Expert | À Propos"
  description={metaDescription}
  canonical={pageUrl}
  schema={aboutSchema}
>
  <StickyPageTop
    breadcrumbItems={[
      { text: "Accueil", href: "/fr" },
      { text: "À Propos" }
    ]}
    title="Expert-Comptable et Fiscaliste agréés à Luxembourg"
    subtitle="Cabinet d'expertise comptable. Comptabilité, fiscalité, paie et création de sociétés pour PME et entrepreneurs."
  />
  <WhyUs
    title="Pourquoi nous choisir ?"
    subtitle="Les raisons de nous faire confiance pour votre comptabilité"
    metrics={[
      { value: "20+", label: "Années d'expertise" },
      { value: "50+", label: "Clients satisfaits" },
      { value: "100%", label: "Conformité garantie" }
    ]}
    advantages={[
      { 
        title: "Services personnalisés",
        description: "Fiduciaire Expert est un cabinet d'expertise comptable agréé à Luxembourg. Nos experts-comptables et fiscalistes diplômés accompagnent les entreprises dans leur gestion comptable, fiscale et sociale conformément à la législation luxembourgeoise."
      },
      { 
        title: "Équipe disponible",
        description: "Notre approche combine rigueur technique, innovation technologique et relation humaine privilégiée. Nous maîtrisons parfaitement l'environnement réglementaire luxembourgeois et accompagnons nos clients dans leur croissance avec des conseils stratégiques personnalisés."
      },
      {
        title: "Technologie avancée",
        description: "Nous utilisons des outils technologiques avancés pour optimiser la gestion de votre comptabilité et de vos déclarations fiscales."
      }
    ]}
  />
  <ValuesGrid 
    title="Nos valeurs"
    subtitle="Les principes qui guident notre engagement quotidien envers nos clients"
    values={values}
  />
  <TeamGrid 
    title="Notre équipe"
    subtitle="Des experts passionnés, unis par l'exigence d'excellence"
    members={teamMembers}
  />
  <TestimonialsGrid 
    title="Ils nous font confiance"
    subtitle="Les témoignages de nos clients reflètent notre engagement qualité"
    testimonials={testimonials}
  />
  <FAQ 
    title="Questions fréquentes"
    subtitle="Réponses aux questions les plus courantes sur notre cabinet"
    faqItems={faqItems}
    generateSchema={false}
  />
  <script type="application/ld+json" set:html={JSON.stringify(aboutSchema)} is:inline />
</LayoutI18n>
