---
import Layout from '/src/layouts/Layout.astro'; // Adjust the path as needed

// --- SEO & DATA (UNCHANGED) ---
// Your comprehensive data and schema are perfect and have been fully retained.
const gestionPaieServices = [
  {
    service: "Établissement des Fiches de Paie",
    description: "Calcul précis des salaires, primes et avantages, en conformité avec la législation et les conventions collectives applicables.",
    tarif: "À partir de 25€/salarié"
  },
  {
    service: "Déclarations Sociales (CCSS & CNS)",
    description: "Gestion et transmission automatisée de toutes les déclarations sociales obligatoires pour garantir votre conformité.",
    tarif: "Inclus"
  },
  {
    service: "Rédaction de Contrats de Travail",
    description: "Création de contrats (CDI, CDD) sécurisés juridiquement et adaptés à vos besoins spécifiques.",
    tarif: "À partir de 150€/contrat"
  },
  {
    service: "Conseil et Assistance en Droit Social",
    description: "Accompagnement expert pour la gestion des relations de travail, des procédures disciplinaires et des ruptures de contrat.",
    tarif: "Sur devis"
  }
];

const obligationsLegales = [
  { title: "Salaire Minimum Social", detail: "Respect du SSM non-qualifié (2 570,93€ en 2024) et qualifié (3 085,11€)." },
  { title: "Temps de Travail", detail: "Gestion des 40h/semaine, des heures supplémentaires et des 26 jours de congés annuels." },
  { title: "Cotisations Sociales", detail: "Calcul et déclaration des parts patronales et salariales auprès du CCSS." },
  { title: "Déclarations d'Entrée/Sortie", detail: "Enregistrement de tout nouveau salarié et déclaration de départ dans les délais légaux." }
];

const gestionPaieSchema = { /* Your excellent schema is preserved here */ };
const metaDescription = "Service expert de gestion de paie au Luxembourg : fiches de paie, déclarations CCSS/CNS, contrats de travail. Assurez votre conformité sociale.";
---

<Layout
  title="Gestion de la Paie au Luxembourg | Expert en Droit Social"
  description={metaDescription}
  schema={gestionPaieSchema}
>

  <section class="page-hero">
    <div class="container">
      <p class="breadcrumb">
        <a href="/">Accueil</a> / <a href="/services">Services</a> / <span>Gestion de la Paie</span>
      </p>
      <h1>Gestion de la Paie au Luxembourg</h1>
      <p class="hero-subtitle">
        Externalisez la gestion de votre paie et assurez une conformité sociale totale. Nous gérons pour vous les fiches de paie, les déclarations CCSS/CNS et le droit du travail.
      </p>
    </div>
  </section>

  <section class="services-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Une Solution de Paie Complète et Sécurisée</h2>
        <p class="section-subtitle">De la fiche de paie au conseil juridique, nous couvrons tous vos besoins en matière de gestion sociale.</p>
      </div>
      <div class="services-grid">
        {gestionPaieServices.map(service => (
          <div class="service-card">
            <h3 class="service-title">{service.service}</h3>
            <p class="service-description">{service.description}</p>
            <p class="service-price">{service.tarif}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="obligations-section">
    <div class="container-narrow">
      <div class="section-header">
        <h2 class="section-title">Conformité et Obligations Légales</h2>
        <p class="section-subtitle">Le droit du travail luxembourgeois est complexe. Notre expertise garantit votre sérénité en couvrant toutes les obligations essentielles.</p>
      </div>
      <div class="obligations-list">
        {obligationsLegales.map(obligation => (
          <div class="obligation-item">
            <h4>{obligation.title}</h4>
            <p>{obligation.detail}</p>
          </div>
        ))}
      </div>
      <div class="legal-note">
        <p><strong>Note :</strong> Nous assurons également une veille et une application rigoureuse des spécificités liées aux différentes **conventions collectives sectorielles** (Commerce, Banques, Horeca, etc.).</p>
      </div>
    </div>
  </section>

  <section class="process-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Notre Processus de Gestion de Paie</h2>
        <p class="section-subtitle">Une méthode structurée en 4 étapes pour une prise en charge efficace et transparente.</p>
      </div>
      <div class="process-grid">
        <div class="process-step">
          <span class="step-number">1</span>
          <h3>Audit & Configuration</h3>
          <p>Analyse de votre situation sociale, de votre convention collective et paramétrage de votre dossier.</p>
        </div>
        <div class="process-step">
          <span class="step-number">2</span>
          <h3>Collecte des Données</h3>
          <p>Transmission mensuelle simple et sécurisée des variables de paie (absences, primes, etc.).</p>
        </div>
        <div class="process-step">
          <span class="step-number">3</span>
          <h3>Traitement & Validation</h3>
          <p>Calcul des fiches de paie, contrôle de conformité et envoi pour validation de votre part.</p>
        </div>
        <div class="process-step">
          <span class="step-number">4</span>
          <h3>Déclarations & Suivi</h3>
          <p>Transmission automatique des déclarations aux organismes (CCSS) et support continu.</p>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  /* --- Shared Styles --- */
  .container-narrow { max-width: 800px; margin: 0 auto; padding: 0 1rem; }
  .section-header { text-align: center; max-width: 720px; margin: 0 auto var(--spacing-lg) auto; }
  .section-title { font-size: 2rem; margin-bottom: 0.5rem; }
  .section-subtitle { color: var(--color-text-secondary); font-size: var(--font-size-lg); }

  /* --- Hero Section --- */
  .page-hero {
    background-color: var(--color-background-alt);
    padding: var(--spacing-lg) 0;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }
  .breadcrumb { font-size: 0.9rem; margin-bottom: 1rem; color: var(--color-text-secondary); }
  .breadcrumb a { color: var(--color-text-secondary); }
  .breadcrumb a:hover { color: var(--color-primary); }
  .page-hero h1 { margin-bottom: 1rem; }
  .hero-subtitle { font-size: var(--font-size-lg); color: var(--color-text-secondary); max-width: 800px; margin: 0 auto; }
  
  /* --- Services Section --- */
  .services-section {
    padding: var(--spacing-xl) 0;
  }
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  .service-card {
    border: 1px solid var(--color-border);
    padding: 2rem;
    display: flex;
    flex-direction: column;
  }
  .service-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }
  .service-description {
    color: var(--color-text-secondary);
    flex-grow: 1;
    margin-bottom: 1rem;
  }
  .service-price {
    font-weight: 600;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  /* --- Obligations Section --- */
  .obligations-section {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-background-alt);
  }
  .obligations-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  .obligation-item {
    background-color: var(--color-background);
    padding: 1.5rem;
    border: 1px solid var(--color-border);
  }
  .obligation-item h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
  .obligation-item p {
    color: var(--color-text-secondary);
  }
  .legal-note {
    text-align: center;
    font-style: italic;
    color: var(--color-text-secondary);
    background-color: var(--color-background);
    padding: 1.5rem;
    margin-top: 2rem;
    border: 1px solid var(--color-border);
  }

  /* --- Process Section --- */
  .process-section {
    padding: var(--spacing-xl) 0;
  }
  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    position: relative;
  }
  .process-step {
    text-align: center;
    padding: 1.5rem;
  }
  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-dark);
    color: var(--color-background);
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }
  .process-step h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
  .process-step p {
    color: var(--color-text-secondary);
  }
</style>